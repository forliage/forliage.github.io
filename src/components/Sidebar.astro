<style>
	.sidebar {
		background: #fff;
		padding: 3rem 2rem; /* Larger top/bottom padding */
		border-radius: 16px;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08); /* Stronger shadow */
		display: flex;
		flex-direction: column;
		align-items: center; /* Center everything */
		gap: 1.5rem;
		height: fit-content;
		position: sticky;
		top: 100px;
		text-align: center;
	}

	.photo-container {
		width: 160px; /* Specific size */
		height: 160px;
		border-radius: 50%;
		overflow: hidden;
		border: 4px solid #fff; /* White border inside styling */
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
	}

	.photo {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.info-container {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.5rem;
		width: 100%;
	}

	h1 {
		font-size: 1.5rem;
		font-weight: 700;
		color: #333;
		margin: 0;
	}

	.role {
		font-size: 1rem;
		color: #555;
		margin: 0;
	}

	.affiliation {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.5rem;
		font-size: 0.95rem;
		color: #444;
		margin: 0.25rem 0;
	}

	.mini-logo {
		height: 20px;
		width: auto;
	}

	.email-link {
		color: #0066cc;
		font-size: 0.9rem;
		text-decoration: none;
		margin-bottom: 1rem;
	}

	.email-link:hover {
		text-decoration: underline;
	}

	.social-icons {
		display: flex;
		gap: 1rem;
		margin-top: 0.5rem;
	}

	.icon-link {
		display: flex;
		align-items: center;
		justify-content: center;
		color: #555; /* Default icon color */
		transition:
			color 0.2s,
			transform 0.2s;
	}

	.icon {
		width: 28px;
		height: 28px;
	}

	.icon-link:hover {
		transform: translateY(-2px);
	}

	.scholar:hover {
		color: #4285f4;
	}
	.github:hover {
		color: #333;
	}
	.orcid:hover {
		color: #a6ce39;
	}
</style>
