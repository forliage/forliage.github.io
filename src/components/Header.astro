<header class="glass-header">
	<div class="container">
		<div class="logo">Liuye Zhao</div>
		<nav>
			<a href="#publications">Publications</a>
			<a href="/blog">Blog</a>
		</nav>
	</div>
</header>

<style>
	.glass-header {
		position: sticky;
		top: 0;
		width: 100%;
		z-index: 100;
		background: rgba(
			255,
			255,
			255,
			0.85
		); /* Slightly less transp to match "clean" look */
		backdrop-filter: blur(12px);
		-webkit-backdrop-filter: blur(12px);
		/* removed border-bottom to look cleaner like the request implies */
		padding: 1rem 0;
	}

	.container {
		max-width: 1100px;
		margin: 0 auto;
		padding: 0 2rem;
		display: flex;
		justify-content: flex-start; /* Align everything to left */
		align-items: center;
		gap: 3rem; /* Space between Name and Nav */
	}

	.logo {
		font-weight: 700;
		font-size: 1.25rem;
		color: #333; /* Dark gray */
	}

	nav {
		display: flex;
		gap: 1.5rem;
	}

	nav a {
		color: #888; /* Light gray */
		font-weight: 400; /* Normal weight */
		font-size: 1rem;
		transition: color 0.2s;
	}

	nav a:hover {
		color: #000;
		text-decoration: none;
	}
</style>
