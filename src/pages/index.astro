---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";
import About from "../components/About.astro";
import Publications from "../components/Publications.astro";
---

<Layout title="Liuye Zhao - Academic Homepage">
	<Header />

	<main class="main-container">
		<div class="left-col">
			<Sidebar />
		</div>

		<div class="right-col">
			<About />
			<Publications />
		</div>
	</main>
</Layout>

<style>
	.main-container {
		max-width: 1280px; /* Increased to reduce side margins */
		margin: 2rem auto;
		padding: 0 3rem; /* Slightly more inner padding if wider */
		display: grid;
		grid-template-columns: 250px 1fr; /* Widened from 200px */
		gap: 4rem;
	}

	@media (max-width: 768px) {
		.main-container {
			grid-template-columns: 1fr;
		}
	}
</style>
