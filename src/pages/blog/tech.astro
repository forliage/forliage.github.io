---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";

const categories = [
    {
        id: "views",
        title: "Technical Views",
        description: "Personal insights on software trends and engineering philosophy.",
        link: "#",
    },
    {
        id: "papers",
        title: "Paper Insights",
        description: "Deep dives into academic research and breakthrough algorithms.",
        link: "#",
    },
    {
        id: "tips",
        title: "Common Tips",
        description: "A collection of practical engineering tricks and daily shortcuts.",
        link: "#",
    }
];
---

<Layout title="Technique Discussion - Liuye Zhao">
    <Header />

    <main class="tech-page">
        <!-- Background Meteors Container -->
        <div id="meteors-container"></div>

        <!-- Back Button -->
        <a href="/blog" class="back-button">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>
            Back
        </a>

        <div class="page-header">
            <h1 class="page-title">Technique Discussion</h1>
            <p class="page-subtitle">Exploration, analysis, and engineering wisdom.</p>
        </div>

        <div class="doors-container">
            {categories.map((cat) => (
                <div class="door-wrapper">
                    <div class="door-inner-wrapper">
                        <div class="door-label">
                            <h3>{cat.title}</h3>
                            <p>{cat.description}</p>
                        </div>
                        
                        <!-- The 3D Component -->
                        <a href={cat.link} class="door-unit" id={`door-${cat.id}`}>
                            <div class="door-tunnel">
                                <!-- Tunnel Walls -->
                                <div class="tunnel-wall top"></div>
                                <div class="tunnel-wall bottom"></div>
                                <div class="tunnel-wall left"></div>
                                <div class="tunnel-wall right"></div>
                                
                                <!-- Back of the tunnel (The Starfield) -->
                                <div class="tunnel-back">
                                    <div class="starfield-origin">
                                        <!-- Stars generated by JS -->
                                    </div>
                                </div>
                                
                                <!-- Front Frame (The "Door") -->
                                <div class="door-frame-front"></div>
                            </div>
                            
                            <!-- Particle Aura -->
                            <div class="particle-aura"></div>
                        </a>

                        <a href={cat.link} class="enter-btn">ENTER</a>
                    </div>
                </div>
            ))}
        </div>
    </main>
</Layout>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        // --- 1. Background Meteors (Unified) ---
        const meteorsContainer = document.getElementById("meteors-container");
        if (meteorsContainer) {
            const createMeteor = () => {
                const meteor = document.createElement("div");
                meteor.classList.add("meteor");
                const startX = Math.random() * 100 + 20;
                const startY = Math.random() * 100 - 50;
                const width = Math.random() * 100 + 50;
                meteor.style.left = `${startX}%`;
                meteor.style.top = `${startY}%`;
                meteor.style.width = `${width}px`;
                const duration = Math.random() * 1 + 1.5;
                meteor.style.animationDuration = `${duration}s`;
                meteorsContainer.appendChild(meteor);
                setTimeout(() => meteor.remove(), duration * 1000);
            };
            setInterval(createMeteor, 400);
        }

        // --- 2. Intense Warp Starfield ---
        const starOrigins = document.querySelectorAll('.starfield-origin');
        starOrigins.forEach(origin => {
            // Create many stars
            for (let i = 0; i < 80; i++) {
                const star = document.createElement('div');
                star.classList.add('star');
                // Random angle and distance from center
                const angle = Math.random() * Math.PI * 2;
                // Distrubute stars across the tunnel view
                const radius = Math.random() * 80 + 10; 
                
                star.style.setProperty('--angle', `${angle}rad`);
                star.style.setProperty('--radius', `${radius}%`);
                // Randomize delay for continuous stream
                star.style.animationDelay = `${Math.random() * 2}s`;
                // Randomize speed slightly
                star.style.animationDuration = `${Math.random() * 1 + 1}s`;
                
                origin.appendChild(star);
            }
        });

        // --- 3. Dense Particle Aura ---
        const units = document.querySelectorAll('.door-unit');
        units.forEach(unit => {
            const aura = unit.querySelector('.particle-aura');
            if(!aura) return;

            const spawnParticle = () => {
                const p = document.createElement('div');
                p.classList.add('aura-particle');
                
                // Spawn along the perimeter
                // 0: Top, 1: Right, 2: Bottom, 3: Left
                const side = Math.floor(Math.random() * 4);
                let startX, startY, moveX, moveY; // percentages or px

                // Random variance
                const offset = Math.random() * 100;
                
                const speed = Math.random() * 30 + 20; // Distance to move

                if (side === 0) { // Top
                    startX = offset; startY = 0;
                    moveX = (Math.random() - 0.5) * speed; 
                    moveY = -Math.random() * speed - 10;
                } else if (side === 1) { // Right
                    startX = 100; startY = offset;
                    moveX = Math.random() * speed + 10; 
                    moveY = (Math.random() - 0.5) * speed;
                } else if (side === 2) { // Bottom
                    startX = offset; startY = 100;
                    moveX = (Math.random() - 0.5) * speed; 
                    moveY = Math.random() * speed + 10;
                } else { // Left
                    startX = 0; startY = offset;
                    moveX = -Math.random() * speed - 10; 
                    moveY = (Math.random() - 0.5) * speed;
                }

                p.style.left = `${startX}%`;
                p.style.top = `${startY}%`;
                p.style.setProperty('--mx', `${moveX}px`);
                p.style.setProperty('--my', `${moveY}px`);

                // Random visuals
                const size = Math.random() * 3 + 1;
                p.style.width = `${size}px`;
                p.style.height = `${size}px`;
                p.style.opacity = (Math.random() * 0.5 + 0.5).toString();
                
                aura.appendChild(p);
                setTimeout(() => p.remove(), 1000);
            };

            // High frequency spawning for "dense" look
            setInterval(spawnParticle, 20); // 50 particles/sec
        });
    });
</script>

<style>
    :root {
        --door-w: 260px;
        --door-h: 400px;
        --tunnel-depth: 300px;
        --wall-color: #050510;
        --accent: #f075ae;
    }

    .tech-page {
        min-height: 100vh;
        padding: 8rem 2rem 4rem;
        max-width: 1400px;
        margin: 0 auto;
        position: relative;
        overflow-x: hidden;
        perspective: 1000px;
        contain: paint;
    }

    /* --- Back Button etc. (Same as before) --- */
    .back-button {
        position: fixed; top: 100px; left: 2rem; z-index: 100;
        display: flex; align-items: center; gap: 8px; padding: 12px 20px;
        background: rgba(255, 240, 245, 0.7); backdrop-filter: blur(16px);
        border: 1px solid rgba(240, 117, 174, 0.3); border-radius: 50px;
        color: #f075ae; font-size: 0.95rem; font-weight: 500;
        text-decoration: none; transition: 0.3s;
    }
    .back-button:hover { transform: translateX(-4px); background: rgba(255, 240, 245, 0.9); }

    /* Meteors */
    #meteors-container { position: fixed; inset: 0; pointer-events: none; z-index: 0; }
    :global(.meteor) {
        position: absolute; height: 2px;
        background: linear-gradient(90deg, #a18cd1, transparent);
        opacity: 0; transform: rotate(-45deg);
        animation: shower linear;
    }
    @keyframes shower {
        0% { opacity: 0; transform: rotate(-45deg) translateX(0); }
        10% { opacity: 0.7; }
        100% { opacity: 0; transform: rotate(-45deg) translateX(-1000px); }
    }

    .page-header { text-align: center; margin-bottom: 5rem; position: relative; z-index: 10; }
    .page-title {
        font-size: 3.5rem; font-weight: 800; margin-bottom: 0.5rem;
        background: linear-gradient(120deg, #f075ae, #a18cd1);
        -webkit-background-clip: text; -webkit-text-fill-color: transparent;
    }
    .page-subtitle { color: #666; font-size: 1.1rem; }

    /* --- Container for Doors --- */
    .doors-container {
        display: flex; justify-content: center; gap: 6rem;
        margin-top: 2rem; position: relative; z-index: 10; flex-wrap: wrap;
        /* Perspective is critical here */
        perspective: 1200px; 
    }

    .door-wrapper { margin-bottom: 4rem; z-index: 1; }
    .door-inner-wrapper { display: flex; flex-direction: column; align-items: center; gap: 2.5rem; }
    
    .door-label { text-align: center; max-width: 260px; }
    .door-label h3 { font-size: 1.6rem; color: #222; margin-bottom: 0.6rem; font-weight: 700; }
    .door-label p { font-size: 0.95rem; color: #777; line-height: 1.5; }

    /* --- The 3D Tunnel Unit --- */
    .door-unit {
        width: var(--door-w);
        height: var(--door-h);
        position: relative;
        text-decoration: none;
        display: block;
        /* We use preserve-3d to keep the tunnel shape correct */
        transform-style: preserve-3d;
        /* Default rotation to show some depth immediately */
        transform: rotateY(-15deg); 
        transition: transform 0.5s cubic-bezier(0.2, 0.8, 0.2, 1);
    }
    
    .door-unit:hover {
        /* On hover, rotate slightly differently to show responsiveness */
        transform: rotateY(-5deg) scale(1.05);
        z-index: 10;
    }

    /* The Tunnel Container */
    .door-tunnel {
        position: absolute; inset: 0;
        transform-style: preserve-3d;
    }

    /* Tunnel Walls */
    .tunnel-wall {
        position: absolute;
        background: linear-gradient(to bottom, #111, #000);
        box-shadow: inset 0 0 50px rgba(0,0,0,0.9);
        border: 1px solid rgba(255,255,255,0.05);
    }

    /* Top/Bottom Walls: width=door-w, height=depth */
    .tunnel-wall.top {
        width: var(--door-w); height: var(--tunnel-depth);
        top: 0; left: 0;
        transform-origin: top;
        transform: rotateX(-90deg);
        background: linear-gradient(to bottom, #1a1a1a, #000);
    }
    .tunnel-wall.bottom {
        width: var(--door-w); height: var(--tunnel-depth);
        bottom: 0; left: 0;
        transform-origin: bottom;
        transform: rotateX(90deg);
        background: linear-gradient(to top, #1a1a1a, #000);
    }
    /* Left/Right Walls: width=depth, height=door-h */
    .tunnel-wall.left {
        width: var(--tunnel-depth); height: var(--door-h);
        top: 0; left: 0;
        transform-origin: left;
        transform: rotateY(90deg);
        background: linear-gradient(to right, #1a1a1a, #000);
    }
    .tunnel-wall.right {
        width: var(--tunnel-depth); height: var(--door-h);
        top: 0; right: 0;
        transform-origin: right;
        transform: rotateY(-90deg);
        background: linear-gradient(to left, #1a1a1a, #000);
    }

    /* Back Wall (Starfield Canvas) */
    .tunnel-back {
        position: absolute;
        width: var(--door-w); height: var(--door-h);
        top: 0; left: 0;
        /* Positioned at the end of the tunnel */
        transform: translateZ(calc(-1 * var(--tunnel-depth)));
        background: #000;
        overflow: hidden;
        /* Glow from deep space */
        box-shadow: 0 0 50px rgba(161, 140, 209, 0.4);
    }

    /* Front Frame (The "Doorway") */
    .door-frame-front {
        position: absolute; width: 100%; height: 100%;
        border: 6px solid #222;
        border-radius: 4px; /* Slight radius */
        box-shadow: 0 0 20px rgba(0,0,0,0.5);
        pointer-events: none;
        transform: translateZ(0); /* Flush with front */
    }

    /* --- Intense Starfield Animation --- */
    .starfield-origin {
        position: absolute; top: 50%; left: 50%;
        width: 1px; height: 1px;
        /* Establish 3D space for stars to fly out of */
        perspective: 300px;
        transform-style: preserve-3d;
    }

    :global(.star) {
        position: absolute; top: 0; left: 0;
        background: #fff; border-radius: 50%;
        opacity: 0;
        /* Stars start deep and fly towards camera */
        animation: warp-star linear infinite;
        box-shadow: 0 0 4px #fff, 0 0 10px var(--accent);
    }

    @keyframes warp-star {
        0% {
            /* Start far away (deep Z), small */
            transform: rotate(var(--angle)) translateX(var(--radius)) translateZ(-500px) scale(0.1);
            opacity: 0;
        }
        10% { opacity: 1; }
        100% {
            /* Fly past camera (positive Z), big */
            transform: rotate(var(--angle)) translateX(var(--radius)) translateZ(200px) scale(1.5);
            opacity: 0.8;
        }
    }

    /* --- Particle Aura --- */
    .particle-aura {
        position: absolute; inset: 0; pointer-events: none; 
        overflow: visible; z-index: 20;
    }
    
    :global(.aura-particle) {
        position: absolute; background: var(--accent);
        border-radius: 50%;
        filter: blur(1px); pointer-events: none;
        animation: drift-fade linear forwards;
    }

    @keyframes drift-fade {
        0% { transform: translate(0, 0); opacity: 0.8; }
        100% { transform: translate(var(--mx), var(--my)); opacity: 0; }
    }

    /* Enter Btn */
    .enter-btn {
        padding: 12px 40px; background: white;
        border: 2px solid var(--accent); border-radius: 50px;
        color: var(--accent); font-weight: 700; letter-spacing: 2px;
        text-decoration: none; transition: 0.3s; box-shadow: 0 5px 15px rgba(240, 117, 174, 0.2);
    }
    .enter-btn:hover {
        background: var(--accent); color: white;
        box-shadow: 0 10px 30px rgba(240, 117, 174, 0.5);
        transform: translateY(-3px);
    }
</style>
