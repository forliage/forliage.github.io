---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";

const categories = [
    {
        id: "views",
        title: "Technical Views",
        description:
            "Personal insights on software trends and engineering philosophy.",
        link: "#",
    },
    {
        id: "papers",
        title: "Paper Insights",
        description:
            "Deep dives into academic research and breakthrough algorithms.",
        link: "#",
    },
    {
        id: "tips",
        title: "Common Tips",
        description:
            "A collection of practical engineering tricks and daily shortcuts.",
        link: "#",
    },
];
---

<Layout title="Technique Discussion - Liuye Zhao">
    <Header />

    <main class="tech-page">
        <!-- Background Meteors Container -->
        <div id="meteors-container"></div>

        <!-- Back Button -->
        <a href="/blog" class="back-button">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><line x1="19" y1="12" x2="5" y2="12"></line><polyline
                    points="12 19 5 12 12 5"></polyline></svg
            >
            Back
        </a>

        <div class="page-header">
            <h1 class="page-title">Technique Discussion</h1>
            <p class="page-subtitle">
                Exploration, analysis, and engineering wisdom.
            </p>
        </div>

        <div class="doors-container">
            {
                categories.map((cat) => (
                    <div class="door-wrapper">
                        <div class="door-inner-wrapper">
                            <div class="door-label">
                                <h3>{cat.title}</h3>
                                <p>{cat.description}</p>
                            </div>
                            <a
                                href={cat.link}
                                class="door-unit"
                                id={`door-${cat.id}`}
                            >
                                <div class="door-3d-context">
                                    <div class="door-frame">
                                        <div class="door-depth" />
                                        <div class="starfield-box">
                                            <div class="warp-stars" />
                                        </div>
                                    </div>
                                    <div class="particle-emitter" />
                                </div>
                            </a>
                            <a href={cat.link} class="enter-btn">
                                ENTER
                            </a>
                        </div>
                    </div>
                ))
            }
        </div>
    </main>
</Layout>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        // --- Meteor Shower Logic (Unified with ZJU) ---
        const meteorsContainer = document.getElementById("meteors-container");
        if (meteorsContainer) {
            const createMeteor = () => {
                const meteor = document.createElement("div");
                meteor.classList.add("meteor");
                const startX = Math.random() * 100 + 20;
                const startY = Math.random() * 100 - 50;
                const width = Math.random() * 100 + 50;
                meteor.style.left = `${startX}%`;
                meteor.style.top = `${startY}%`;
                meteor.style.width = `${width}px`;
                const duration = Math.random() * 1 + 1.5;
                meteor.style.animationDuration = `${duration}s`;
                meteorsContainer.appendChild(meteor);
                setTimeout(() => meteor.remove(), duration * 1000);
            };
            setInterval(createMeteor, 400);
        }

        // --- Optimized Warp Starfield Generation ---
        const warpBoxes = document.querySelectorAll(".warp-stars");
        warpBoxes.forEach((box) => {
            for (let i = 0; i < 40; i++) {
                const star = document.createElement("div");
                star.classList.add("warp-star");
                const angle = Math.random() * Math.PI * 2;
                const distance = Math.random() * 80 + 20; // Ensure they spread out
                star.style.setProperty("--angle", `${angle}rad`);
                star.style.setProperty("--dist", `${distance}%`);
                star.style.animationDelay = `${Math.random() * 3}s`;
                box.appendChild(star);
            }
        });

        // --- Perimeter Particle System for Doors ---
        const units = document.querySelectorAll(".door-unit");
        units.forEach((unit) => {
            const emitter = unit.querySelector(".particle-emitter");
            if (!emitter) return;

            const spawnParticle = () => {
                const p = document.createElement("div");
                p.classList.add("particle");

                // Randomly pick an edge: 0=top, 1=right, 2=bottom, 3=left
                const edge = Math.floor(Math.random() * 4);
                let x, y, tx, ty;

                if (edge === 0) {
                    // Top
                    x = Math.random() * 100;
                    y = 0;
                    tx = (Math.random() - 0.5) * 60;
                    ty = -Math.random() * 80 - 20;
                } else if (edge === 1) {
                    // Right
                    x = 100;
                    y = Math.random() * 100;
                    tx = Math.random() * 80 + 20;
                    ty = (Math.random() - 0.5) * 60;
                } else if (edge === 2) {
                    // Bottom
                    x = Math.random() * 100;
                    y = 100;
                    tx = (Math.random() - 0.5) * 60;
                    ty = Math.random() * 80 + 20;
                } else {
                    // Left
                    x = 0;
                    y = Math.random() * 100;
                    tx = -Math.random() * 80 - 20;
                    ty = (Math.random() - 0.5) * 60;
                }

                p.style.left = `${x}%`;
                p.style.top = `${y}%`;
                p.style.setProperty("--tx", `${tx}px`);
                p.style.setProperty("--ty", `${ty}px`);

                const size = Math.random() * 3 + 1.5;
                p.style.width = `${size}px`;
                p.style.height = `${size}px`;
                p.style.animationDuration = `${Math.random() * 0.8 + 0.8}s`;

                emitter.appendChild(p);
                setTimeout(() => p.remove(), 1600);
            };

            // Spawn particles periodically
            setInterval(spawnParticle, 80);
        });
    });
</script>

<style>
    :root {
        --text-color: #333;
        --highlight-color: #f075ae;
        --door-width: 280px;
        --door-height: 420px;
        --depth: 40px;
    }

    .tech-page {
        min-height: 100vh;
        padding: 8rem 2rem 4rem;
        max-width: 1400px;
        margin: 0 auto;
        position: relative;
        overflow-x: hidden; /* Fix layout jitter */
        contain: paint;
    }

    /* --- Shared Background (Normalized) --- */
    #meteors-container {
        position: fixed;
        inset: 0;
        pointer-events: none;
        z-index: 0;
        overflow: hidden;
    }
    :global(.meteor) {
        position: absolute;
        height: 2px;
        background: linear-gradient(90deg, #a18cd1, transparent);
        opacity: 0;
        transform: rotate(-45deg);
        filter: drop-shadow(0 0 6px #a18cd1);
        animation: shower linear;
    }
    @keyframes shower {
        0% {
            opacity: 0;
            transform: rotate(-45deg) translateX(0);
        }
        10% {
            opacity: 0.7;
        }
        100% {
            opacity: 0;
            transform: rotate(-45deg) translateX(-1000px);
        }
    }

    .back-button {
        position: fixed;
        top: 100px;
        left: 2rem;
        z-index: 100;
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 12px 20px;
        background: rgba(255, 240, 245, 0.7);
        backdrop-filter: blur(16px);
        border: 1px solid rgba(240, 117, 174, 0.3);
        border-radius: 50px;
        color: #f075ae;
        font-size: 0.95rem;
        font-weight: 500;
        text-decoration: none;
        transition: 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }
    .back-button:hover {
        transform: translateX(-4px);
        background: rgba(255, 240, 245, 0.9);
        box-shadow: 0 4px 15px rgba(240, 117, 174, 0.2);
    }

    /* --- Page Header --- */
    .page-header {
        text-align: center;
        margin-bottom: 5rem;
        position: relative;
        z-index: 10;
    }
    .page-title {
        font-size: 3.5rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        background: linear-gradient(120deg, #f075ae, #a18cd1);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
    .page-subtitle {
        color: #666;
        font-size: 1.1rem;
    }

    /* --- 3D Doors Grid --- */
    .doors-container {
        display: flex;
        justify-content: center;
        gap: 6rem;
        margin-top: 2rem;
        position: relative;
        z-index: 10;
        flex-wrap: wrap;
        perspective: 2000px;
    }

    .door-wrapper {
        margin-bottom: 4rem;
    }

    .door-inner-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2.5rem;
    }

    .door-label {
        text-align: center;
        max-width: 260px;
        transition: 0.3s;
    }
    .door-label h3 {
        font-size: 1.6rem;
        color: #222;
        margin-bottom: 0.6rem;
        font-weight: 700;
    }
    .door-label p {
        font-size: 0.95rem;
        color: #777;
        line-height: 1.5;
    }

    /* --- Enhanced 3D Door Unit --- */
    .door-unit {
        width: var(--door-width);
        height: var(--door-height);
        position: relative;
        text-decoration: none;
        display: block;
        transition: transform 0.6s cubic-bezier(0.23, 1, 0.32, 1);
        transform-style: preserve-3d;
    }

    .door-3d-context {
        position: relative;
        width: 100%;
        height: 100%;
        transform-style: preserve-3d;
    }

    /* Recessed 3D Look */
    .door-unit:hover {
        transform: rotateY(-30deg) rotateX(5deg) scale(1.05);
    }

    .door-frame {
        position: absolute;
        inset: 0;
        background: #000;
        border: 4px solid #1a1a1a;
        border-radius: 16px;
        overflow: hidden;
        box-shadow:
            20px 20px 60px rgba(0, 0, 0, 0.4),
            0 0 40px rgba(161, 140, 209, 0.2);
        transform-style: preserve-3d;
    }

    /* Depth sides to create a real 3D room feel */
    .door-depth {
        position: absolute;
        inset: 0;
        border: var(--depth) solid transparent;
        border-top-color: #0c0c14;
        border-bottom-color: #0c0c14;
        border-left-color: #14141d;
        border-right-color: #14141d;
        filter: brightness(0.7);
        pointer-events: none;
        z-index: 2;
    }

    /* --- Hyperdrive Warp Starfield --- */
    .starfield-box {
        position: absolute;
        inset: 0;
        background: radial-gradient(circle at center, #0b0e23 0%, #000 100%);
        overflow: hidden;
        z-index: 1;
    }

    .warp-stars {
        position: absolute;
        inset: 0;
        perspective: 400px;
    }

    :global(.warp-star) {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 2px;
        height: 2px;
        background: #fff;
        border-radius: 50%;
        opacity: 0;
        animation: warpDrive 3s linear infinite;
        box-shadow:
            0 0 10px #fff,
            0 0 20px #a18cd1;
    }

    @keyframes warpDrive {
        0% {
            transform: rotate(var(--angle)) translateX(0) scale(0);
            opacity: 0;
        }
        20% {
            opacity: 1;
        }
        100% {
            transform: rotate(var(--angle)) translateX(var(--dist))
                translateZ(400px) scale(2.5);
            opacity: 0;
        }
    }

    /* --- Particle Emitter --- */
    .particle-emitter {
        position: absolute;
        inset: -40px;
        pointer-events: none;
        z-index: 11;
        overflow: visible;
    }

    :global(.particle) {
        position: absolute;
        background: #f075ae;
        border-radius: 50%;
        filter: blur(1.5px);
        opacity: 0;
        animation: emit-perimeter-particle forwards
            cubic-bezier(0.165, 0.84, 0.44, 1);
    }

    @keyframes emit-perimeter-particle {
        0% {
            transform: translate(0, 0) scale(1);
            opacity: 0.9;
        }
        100% {
            transform: translate(var(--tx), var(--ty)) scale(0);
            opacity: 0;
        }
    }

    /* --- Enter Button --- */
    .enter-btn {
        padding: 12px 40px;
        background: white;
        border: 2px solid #f075ae;
        border-radius: 50px;
        color: #f075ae;
        font-weight: 700;
        letter-spacing: 2.5px;
        text-decoration: none;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        opacity: 1;
        box-shadow: 0 4px 15px rgba(240, 117, 174, 0.15);
    }
    .enter-btn:hover {
        background: #f075ae;
        color: white;
        box-shadow: 0 8px 25px rgba(240, 117, 174, 0.4);
        transform: translateY(-3px) scale(1.05);
    }

    @media (max-width: 1024px) {
        .doors-container {
            gap: 3rem;
        }
    }
</style>
