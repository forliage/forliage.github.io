---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import { getCollection } from "astro:content";

// 1. Fetch Blog Data
const allPosts = await getCollection("blog");
const lifeKeywords = [
    "welcome",
    "smile",
    "conversation",
    "hallucinate",
    "rbt",
    "cbo",
];
const lifePosts = allPosts
    .filter(
        (post) =>
            lifeKeywords.some((kw) => post.slug.toLowerCase().includes(kw)) ||
            post.data.category === "life" ||
            post.data.tags?.some((tag) => tag.toLowerCase() === "life"),
    )
    .slice(0, 9); // Reduced to 9

const paddedPosts = [...lifePosts];
while (paddedPosts.length < 9 && paddedPosts.length > 0) {
    paddedPosts.push(...lifePosts);
}
if (paddedPosts.length === 0) {
    for (let i = 0; i < 9; i++)
        paddedPosts.push({
            data: {
                title: `Reflection ${i + 1}`,
                description: "A moment in time captured.",
            },
            slug: "",
        } as any);
}

const finalPosts = paddedPosts.slice(0, 9).map((p) => ({
    title: p.data.title,
    desc: p.data.description || "A slice of life reflection...",
    slug: p.slug,
}));
---

<Layout title="Reflections and Life - Liuye Zhao">
    <Header />
    <main class="carousel-container">
        <!-- UI Overlay -->
        <div class="ui-overlay">
            <div class="title-section">
                <h1>LIFE CAROUSEL</h1>
                <div class="subtitle">
                    Rotating Through Moments of Reflection
                </div>
            </div>

            <div id="info-panel" class="info-panel hidden">
                <button id="close-panel" class="close-btn">&times;</button>
                <div class="panel-content">
                    <h2 id="card-title">Moment Collected</h2>
                    <p id="card-desc">Description of the reflection...</p>
                    <a href="#" id="card-link" class="btn-read">READ ARTICLE</a>
                </div>
            </div>

            <div class="controls-hint">
                DRAG TO ROTATE • CLICK A HORSE TO EXPLORE
            </div>
        </div>

        <div id="loading-screen" class="loader">Crafting Porcelain...</div>
        <!-- 3D Canvas Container -->
        <div
            id="carousel-canvas-container"
            data-posts={JSON.stringify(finalPosts)}
        >
        </div>
    </main>
</Layout>

<script>
    import * as THREE from "three";
    import { GLTFLoader } from "three/examples/jsm/loaders/GLTFLoader.js";
    import { RoomEnvironment } from "three/examples/jsm/environments/RoomEnvironment.js";

    let scene: THREE.Scene;
    let camera: THREE.PerspectiveCamera;
    let renderer: THREE.WebGLRenderer;
    let carouselGroup: THREE.Group;
    let horseModules: THREE.Group[] = [];
    let requestID: number;
    let raycaster = new THREE.Raycaster();
    let mouse = new THREE.Vector2();
    let envMap: THREE.Texture;

    // Physical Parameters
    const HORSE_COUNT = 9;
    const ORBIT_RADIUS = 28;
    const ROT_SPEED = 0.004;

    // States
    let isDragging = false;
    let prevMouseX = 0;
    let targetRotationY = 0;
    let currentRotationY = 0;

    const container = document.getElementById(
        "carousel-canvas-container",
    ) as HTMLDivElement;
    const loader = document.getElementById("loading-screen");
    const postsData = JSON.parse(container?.dataset.posts || "[]");

    const infoPanel = document.getElementById("info-panel");
    const cardTitle = document.getElementById("card-title");
    const cardDesc = document.getElementById("card-desc");
    const cardLink = document.getElementById("card-link") as HTMLAnchorElement;

    async function init() {
        if (!container) return;

        // 1. Scene & Camera
        scene = new THREE.Scene();
        scene.background = new THREE.Color(0x020205);
        scene.fog = new THREE.FogExp2(0x020205, 0.012);

        camera = new THREE.PerspectiveCamera(
            50,
            window.innerWidth / window.innerHeight,
            0.1,
            1000,
        );
        camera.position.set(0, 22, 85);

        // 2. Renderer
        renderer = new THREE.WebGLRenderer({ antialias: true, alpha: true });
        renderer.setSize(window.innerWidth, window.innerHeight);
        renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
        renderer.toneMapping = THREE.ACESFilmicToneMapping;
        renderer.toneMappingExposure = 1.6;
        renderer.outputColorSpace = THREE.SRGBColorSpace;
        container.appendChild(renderer.domElement);

        // Environment for Reflection (Standard for Glazed/Gold look)
        const pmremGenerator = new THREE.PMREMGenerator(renderer);
        envMap = pmremGenerator.fromScene(new RoomEnvironment(), 0.04).texture;
        scene.environment = envMap;

        // 3. Lighting
        const sun = new THREE.DirectionalLight(0xffffff, 4);
        sun.position.set(40, 80, 50);
        scene.add(sun);

        const pointL = new THREE.PointLight(0xfff0dd, 2000, 150);
        pointL.position.set(-40, 30, 40);
        scene.add(pointL);

        const ambient = new THREE.AmbientLight(0xffffff, 1.4);
        scene.add(ambient);

        // Gold reflection kicker
        const goldPoint = new THREE.PointLight(0xffaa44, 800, 100);
        goldPoint.position.set(20, -10, 20);
        scene.add(goldPoint);

        // 4. Construct
        await constructCarousel();
        if (loader) loader.style.display = "none";

        // 5. Events
        window.addEventListener("resize", handleResize);
        container.addEventListener("mousedown", (e) => {
            isDragging = true;
            prevMouseX = e.clientX;
        });
        window.addEventListener("mousemove", onMouseMove);
        window.addEventListener("mouseup", () => (isDragging = false));
        container.addEventListener("click", onDocumentClick);
        document
            .getElementById("close-panel")
            ?.addEventListener("click", () =>
                infoPanel?.classList.add("hidden"),
            );

        animate();
    }

    async function constructCarousel() {
        carouselGroup = new THREE.Group();
        scene.add(carouselGroup);

        const gltfLoader = new GLTFLoader();
        const horseUrl =
            "https://raw.githubusercontent.com/mrdoob/three.js/master/examples/models/gltf/Horse.glb";

        let horseMeshTemplate: THREE.Mesh;
        try {
            const gltf = await gltfLoader.loadAsync(horseUrl);
            horseMeshTemplate = gltf.scene.children[0] as THREE.Mesh;
        } catch (e) {
            console.error("Failed to load horse model", e);
            return;
        }

        // --- PREMIUM MATERIALS ---
        const goldMat = new THREE.MeshPhysicalMaterial({
            color: 0xffd700,
            metalness: 1.0,
            roughness: 0.1,
            clearcoat: 1.0,
            envMapIntensity: 2.8,
            reflectivity: 1.0,
        });

        // "Glazed Porcelain" (琉璃陶瓷) - Pure white depth
        const porcelainMat = new THREE.MeshPhysicalMaterial({
            color: 0xffffff,
            metalness: 0.0,
            roughness: 0.02,
            transmission: 0.2, // Adds the "depth" found in high-end ceramic
            thickness: 1.5,
            ior: 1.55,
            clearcoat: 1.0,
            clearcoatRoughness: 0.01,
            envMapIntensity: 2.2,
            specularIntensity: 1.0,
            specularColor: new THREE.Color(0xffffff),
        });

        // 1. Central Structure
        const pillar = new THREE.Mesh(
            new THREE.CylinderGeometry(6, 6, 50, 48),
            goldMat,
        );
        pillar.position.y = 15;
        carouselGroup.add(pillar);

        const platter = new THREE.Mesh(
            new THREE.CylinderGeometry(34, 34, 3, 64),
            goldMat,
        );
        platter.position.y = -2;
        carouselGroup.add(platter);

        const ceiling = new THREE.Mesh(
            new THREE.CylinderGeometry(34, 34, 2, 64),
            goldMat,
        );
        ceiling.position.y = 40;
        carouselGroup.add(ceiling);

        const roof = new THREE.Mesh(
            new THREE.ConeGeometry(35, 20, 64),
            goldMat,
        );
        roof.position.y = 50;
        carouselGroup.add(roof);

        // 2. Horse Instances (9 slots)
        for (let i = 0; i < HORSE_COUNT; i++) {
            const angle = (i / HORSE_COUNT) * Math.PI * 2;
            const module = new THREE.Group();

            // Pole
            const pole = new THREE.Mesh(
                new THREE.CylinderGeometry(0.4, 0.4, 50, 8),
                goldMat,
            );
            pole.position.y = 15;
            module.add(pole);

            // Container for Horse + Saddle
            const content = new THREE.Group();

            // Horse Mesh
            const horse = horseMeshTemplate.clone();
            horse.material = porcelainMat;
            horse.scale.set(0.07, 0.07, 0.07);
            // Three.js Horse faces +X. Invert for aesthetic direction:
            horse.rotation.y = Math.PI;
            horse.userData = { index: i, clickable: true };
            content.add(horse);

            // Gilded Saddle (鎏金马鞍)
            const saddle = new THREE.Mesh(
                new THREE.CapsuleGeometry(0.9, 1.8, 4, 16),
                goldMat,
            );
            saddle.rotation.x = Math.PI / 2;
            saddle.position.set(0, 16.5, 0);
            content.add(saddle);

            content.position.y = 15;
            module.add(content);

            // Orbit positioning
            module.position.set(
                Math.cos(angle) * ORBIT_RADIUS,
                0,
                Math.sin(angle) * ORBIT_RADIUS,
            );

            // CCW Tangential lookAt (Inverse alignment)
            const nextA = angle + 0.1;
            module.lookAt(
                Math.cos(nextA) * ORBIT_RADIUS,
                0,
                Math.sin(nextA) * ORBIT_RADIUS,
            );

            carouselGroup.add(module);
            horseModules.push(module);
        }
    }

    function onMouseMove(e: MouseEvent) {
        if (isDragging) {
            targetRotationY += (e.clientX - prevMouseX) * 0.005;
            prevMouseX = e.clientX;
        }
        mouse.x = (e.clientX / window.innerWidth) * 2 - 1;
        mouse.y = -(e.clientY / window.innerHeight) * 2 + 1;
    }

    function onDocumentClick() {
        raycaster.setFromCamera(mouse, camera);
        const intersects = raycaster.intersectObjects(
            carouselGroup.children,
            true,
        );
        let clicked = null;
        for (let int of intersects) {
            let o = int.object;
            while (o.parent && !o.userData.clickable) o = o.parent;
            if (o.userData.clickable) {
                clicked = o;
                break;
            }
        }
        if (clicked && infoPanel) {
            const data = postsData[clicked.userData.index];
            if (cardTitle) cardTitle.textContent = data.title;
            if (cardDesc) cardDesc.textContent = data.desc;
            if (cardLink)
                cardLink.href = data.slug ? `/blog/${data.slug}` : "#";
            infoPanel.classList.remove("hidden");
        }
    }

    function animate() {
        requestID = requestAnimationFrame(animate);
        const time = Date.now() * 0.001;

        if (!isDragging) targetRotationY += ROT_SPEED;
        currentRotationY += (targetRotationY - currentRotationY) * 0.06;
        if (carouselGroup) carouselGroup.rotation.y = currentRotationY;

        horseModules.forEach((mod, i) => {
            const bundle = mod.children[1] as THREE.Group;
            const bob = Math.sin(time * 3 + i * 0.9) * 8.5;
            bundle.position.y = 15 + bob;
        });

        // Smooth camera drift
        camera.position.x = Math.sin(time * 0.12) * 12;
        camera.lookAt(0, 20, 0);

        renderer.render(scene, camera);
    }

    function handleResize() {
        camera.aspect = window.innerWidth / window.innerHeight;
        camera.updateProjectionMatrix();
        renderer.setSize(window.innerWidth, window.innerHeight);
    }

    init();
</script>

<style>
    .carousel-container {
        position: relative;
        width: 100vw;
        height: 100vh;
        background: #020205;
        overflow: hidden;
        font-family: "Outfit", sans-serif;
    }
    #carousel-canvas-container {
        cursor: grab;
    }
    #carousel-canvas-container:active {
        cursor: grabbing;
    }

    .loader {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: #ffd700;
        font-size: 1.8rem;
        letter-spacing: 12px;
        z-index: 100;
        text-transform: uppercase;
        animation: glow 1.5s infinite alternate;
    }
    @keyframes glow {
        from {
            opacity: 0.4;
        }
