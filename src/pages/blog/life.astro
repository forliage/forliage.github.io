import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import { getCollection } from "astro:content";

// 1. Fetch Blog Data for the Carousel
const allPosts = await getCollection("blog");
const lifeKeywords = [
    "welcome",
    "smile",
    "conversation",
    "hallucinate",
    "rbt",
    "cbo",
];
const lifePosts = allPosts
    .filter(
        (post) =>
            lifeKeywords.some((kw) => post.slug.toLowerCase().includes(kw)) ||
            post.data.category === "life" ||
            post.data.tags?.some((tag) => tag.toLowerCase() === "life"),
    )
    .slice(0, 12);

const paddedPosts = [...lifePosts];
while (paddedPosts.length < 12 && paddedPosts.length > 0) {
    paddedPosts.push(...lifePosts);
}
if (paddedPosts.length === 0) {
    for (let i = 0; i < 12; i++)
        paddedPosts.push({
            data: {
                title: `Moment ${i + 1}`,
                description: "A beautiful memory captured in time.",
            },
            slug: "",
        } as any);
}

const finalPosts = paddedPosts.slice(0, 12).map((p) => ({
    title: p.data.title,
    desc: p.data.description || "A slice of life reflection...",
    slug: p.slug,
}));
---

<Layout title="Reflections and Life - Liuye Zhao">
    <Header />
    <main class="carousel-container">
        <!-- UI Overlay -->
        <div class="ui-overlay">
            <div class="title-section">
                <h1>LIFE CAROUSEL</h1>
                <div class="subtitle">
                    Rotating Through Moments of Reflection
                </div>
            </div>

            <div id="info-panel" class="info-panel hidden">
                <button id="close-panel" class="close-btn">&times;</button>
                <div class="panel-content">
                    <h2 id="card-title">Moment Collected</h2>
                    <p id="card-desc">Description of the reflection...</p>
                    <a href="#" id="card-link" class="btn-read">READ ARTICLE</a>
                </div>
            </div>

            <div class="controls-hint">
                DRAG TO ROTATE â€¢ CLICK A HORSE TO EXPLORE
            </div>
        </div>

        <div id="loader" class="loader">Loading 3D Models...</div>
        <!-- 3D Canvas -->
        <div
            id="carousel-canvas-container"
            data-posts={JSON.stringify(finalPosts)}
        >
        </div>
    </main>
</Layout>

<script>
    import * as THREE from "three";
    import { GLTFLoader } from "three/examples/jsm/loaders/GLTFLoader.js";
    import { RoomEnvironment } from "three/examples/jsm/environments/RoomEnvironment.js";

    let scene: THREE.Scene;
    let camera: THREE.PerspectiveCamera;
    let renderer: THREE.WebGLRenderer;
    let carouselGroup: THREE.Group;
    let horseModules: THREE.Group[] = [];
    let requestID: number;
    let raycaster = new THREE.Raycaster();
    let mouse = new THREE.Vector2();

    // Interaction states
    let isDragging = false;
    let prevMouseX = 0;
    let rotationVelocity = 0.005;
    let targetRotationY = 0;
    let currentRotationY = 0;

    const container = document.getElementById(
        "carousel-canvas-container",
    ) as HTMLDivElement;
    const loader = document.getElementById("loader");
    const postsData = JSON.parse(container?.dataset.posts || "[]");

    const infoPanel = document.getElementById("info-panel");
    const cardTitle = document.getElementById("card-title");
    const cardDesc = document.getElementById("card-desc");
    const cardLink = document.getElementById("card-link") as HTMLAnchorElement;
    const closeBtn = document.getElementById("close-panel");

    async function init() {
        if (!container) return;

        // 1. Scene Setup
        scene = new THREE.Scene();
        scene.background = new THREE.Color(0x050508);
        scene.fog = new THREE.FogExp2(0x050508, 0.015);

        camera = new THREE.PerspectiveCamera(
            50,
            window.innerWidth / window.innerHeight,
            0.1,
            1000,
        );
        camera.position.set(0, 18, 65);

        // 2. Renderer
        renderer = new THREE.WebGLRenderer({ antialias: true, alpha: true });
        renderer.setSize(window.innerWidth, window.innerHeight);
        renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
        renderer.shadowMap.enabled = true;
        renderer.shadowMap.type = THREE.PCFSoftShadowMap;
        renderer.toneMapping = THREE.ACESFilmicToneMapping;
        renderer.toneMappingExposure = 1.2;
        container.appendChild(renderer.domElement);

        // --- NEW: Environment for Reflections ---
        const generator = new THREE.PMREMGenerator(renderer);
        scene.environment = generator.fromScene(
            new RoomEnvironment(),
            0.04,
        ).texture;

        // 3. Lighting (Boosted for visibility)
        const sun = new THREE.DirectionalLight(0xfff5ee, 3);
        sun.position.set(20, 50, 40);
        sun.castShadow = true;
        scene.add(sun);

        const fill = new THREE.PointLight(0xffffff, 800, 100);
        fill.position.set(-20, 20, 20);
        scene.add(fill);

        const ambient = new THREE.AmbientLight(0xffffff, 0.8);
        scene.add(ambient);

        // Top Light to catch the cones
        const topLight = new THREE.SpotLight(0xffd700, 1000);
        topLight.position.set(0, 80, 0);
        topLight.angle = Math.PI / 3;
        scene.add(topLight);

        // 4. Load & Construct
        await createCarousel();
        if (loader) loader.style.display = "none";

        // 5. Events
        window.addEventListener("resize", handleResize);
        container.addEventListener("mousedown", onMouseDown);
        window.addEventListener("mousemove", onMouseMove);
        window.addEventListener("mouseup", onMouseUp);
        container.addEventListener("click", onDocumentClick);
        closeBtn?.addEventListener("click", () =>
            infoPanel?.classList.add("hidden"),
        );

        animate();
    }

    async function createCarousel() {
        carouselGroup = new THREE.Group();
        scene.add(carouselGroup);

        const gltfLoader = new GLTFLoader();
        const horseUrl =
            "https://raw.githubusercontent.com/mrdoob/three.js/master/examples/models/gltf/Horse.glb";

        let horseModel: THREE.Group;
        try {
            const gltf = await gltfLoader.loadAsync(horseUrl);
            horseModel = gltf.scene;
            // The horse model is animated, but we'll use its static form and apply colors
            horseModel.scale.set(0.05, 0.05, 0.05); // Scale down the realistic horse
        } catch (e) {
            console.error("Failed to load realistic horse", e);
            // ... fallback logic if needed
            return;
        }

        const goldMat = new THREE.MeshPhysicalMaterial({
            color: 0xffd700,
            metalness: 1.0,
            roughness: 0.1,
            clearcoat: 1.0,
            reflectivity: 1.0,
            envMapIntensity: 1.5,
        });

        const whiteMat = new THREE.MeshPhysicalMaterial({
            color: 0xffffff,
            metalness: 0.0,
            roughness: 0.1,
            clearcoat: 1.0,
            envMapIntensity: 0.8,
        });

        // Pillar & Platter
        const pillar = new THREE.Mesh(
            new THREE.CylinderGeometry(5, 5, 40, 48),
            goldMat,
        );
        pillar.position.y = 15;
        carouselGroup.add(pillar);

        const base = new THREE.Mesh(
            new THREE.CylinderGeometry(28, 28, 2, 64),
            goldMat,
        );
        base.position.y = -2;
        carouselGroup.add(base);

        const ceiling = new THREE.Mesh(
            new THREE.CylinderGeometry(28, 28, 1.5, 64),
            goldMat,
        );
        ceiling.position.y = 32;
        carouselGroup.add(ceiling);

        const roof = new THREE.Mesh(
            new THREE.ConeGeometry(29, 15, 64),
            goldMat,
        );
        roof.position.y = 40;
        carouselGroup.add(roof);

        // 12 Horses
        const radius = 22;
        for (let i = 0; i < 12; i++) {
            const angle = (i / 12) * Math.PI * 2;
            const module = new THREE.Group();

            // Pole
            const pole = new THREE.Mesh(
                new THREE.CylinderGeometry(0.35, 0.35, 36, 8),
                goldMat,
            );
            pole.position.y = 15;
            module.add(pole);

            // Realistic Horse Instance
            const horseInstance = horseModel.clone();
            horseInstance.traverse((child) => {
                if ((child as THREE.Mesh).isMesh) {
                    (child as THREE.Mesh).material = whiteMat;
                }
            });
            horseInstance.position.y = 15;
            horseInstance.rotation.y = -Math.PI / 2; // Orient correctly
            horseInstance.userData = { index: i, clickable: true };
            module.add(horseInstance);

            module.position.set(
                Math.cos(angle) * radius,
                0,
                Math.sin(angle) * radius,
            );
            module.rotation.y = -angle; // Face direction of travel

            carouselGroup.add(module);
            horseModules.push(module);
        }
    }

    function onMouseDown(e: MouseEvent) {
        isDragging = true;
        prevMouseX = e.clientX;
    }

    function onMouseMove(e: MouseEvent) {
        if (isDragging) {
            const dx = e.clientX - prevMouseX;
            targetRotationY += dx * 0.005;
            prevMouseX = e.clientX;
        }
        mouse.x = (e.clientX / window.innerWidth) * 2 - 1;
        mouse.y = -(e.clientY / window.innerHeight) * 2 + 1;
    }

    function onMouseUp() {
        isDragging = false;
    }

    function onDocumentClick() {
        raycaster.setFromCamera(mouse, camera);
        const intersects = raycaster.intersectObjects(
            carouselGroup.children,
            true,
        );

        let clickedHorse = null;
        for (let intersect of intersects) {
            let obj = intersect.object;
            while (obj.parent && !obj.userData.clickable) obj = obj.parent;
            if (obj.userData.clickable) {
                clickedHorse = obj;
                break;
            }
        }

        if (clickedHorse && infoPanel) {
            const idx = clickedHorse.userData.index;
            const post = postsData[idx];
            if (post) {
                if (cardTitle) cardTitle.textContent = post.title;
                if (cardDesc) cardDesc.textContent = post.desc;
                if (cardLink) {
                    cardLink.href = post.slug ? `/blog/${post.slug}` : "#";
                    cardLink.style.display = post.slug
                        ? "inline-block"
                        : "none";
                }
                infoPanel.classList.remove("hidden");
            }
        }
    }

    function animate() {
        requestID = requestAnimationFrame(animate);
        const time = Date.now() * 0.001;

        // --- FIXED ROTATION LOGIC ---
        // If not dragging, target rotation should continuously advance
        if (!isDragging) {
            targetRotationY += rotationVelocity;
        }

        // Smoothly lerp towards target rotation
        currentRotationY += (targetRotationY - currentRotationY) * 0.05;
        if (carouselGroup) {
            carouselGroup.rotation.y = currentRotationY;
        }

        // Bobbing & Mouse Hover
        raycaster.setFromCamera(mouse, camera);
        const intersects = raycaster.intersectObjects(
            carouselGroup.children,
            true,
        );
        let hoveredIdx = -1;
        for (let int of intersects) {
            let o = int.object;
            while (o.parent && !o.userData.clickable) o = o.parent;
            if (o.userData.clickable) {
                hoveredIdx = o.userData.index;
                break;
            }
        }

        horseModules.forEach((mod, i) => {
            const h = mod.children[1] as THREE.Group;
            const bob = Math.sin(time * 3 + i * 0.8) * 6;
            h.position.y = 15 + bob;

            const tScale = hoveredIdx === i ? 0.065 : 0.05;
            h.scale.lerp(new THREE.Vector3(tScale, tScale, tScale), 0.15);
        });

        // Subte camera sway
        camera.position.x = Math.sin(time * 0.2) * 5;
        camera.lookAt(0, 15, 0);

        renderer.render(scene, camera);
    }

    function handleResize() {
        camera.aspect = window.innerWidth / window.innerHeight;
        camera.updateProjectionMatrix();
        renderer.setSize(window.innerWidth, window.innerHeight);
    }

    init();
</script>

