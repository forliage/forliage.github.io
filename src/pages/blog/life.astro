import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import { getCollection } from "astro:content";

// 1. Fetch Blog Data
const allPosts = await getCollection("blog");
const lifeKeywords = [
    "welcome",
    "smile",
    "conversation",
    "hallucinate",
    "rbt",
    "cbo",
];
const lifePosts = allPosts
    .filter(
        (post) =>
            lifeKeywords.some((kw) => post.slug.toLowerCase().includes(kw)) ||
            post.data.category === "life" ||
            post.data.tags?.some((tag) => tag.toLowerCase() === "life"),
    )
    .slice(0, 9);

const paddedPosts = [...lifePosts];
while (paddedPosts.length < 9 && paddedPosts.length > 0) {
    paddedPosts.push(...lifePosts);
}
if (paddedPosts.length === 0) {
    for (let i = 0; i < 9; i++)
        paddedPosts.push({
            data: {
                title: `Moment ${i + 1}`,
                description: "A memory etched in porcelain.",
            },
            slug: "",
        } as any);
}

const finalPosts = paddedPosts.slice(0, 9).map((p) => ({
    title: p.data.title,
    desc: p.data.description || "A slice of life reflection...",
    slug: p.slug,
}));
---

<Layout title="Reflections and Life - Liuye Zhao">
    <Header />
    <main class="carousel-container">
        <!-- UI Overlay -->
        <div class="ui-overlay">
            <div class="title-section">
                <h1>LIFE CAROUSEL</h1>
                <div class="subtitle">
                    Rotating Through Moments of Reflection
                </div>
            </div>

            <div id="info-panel" class="info-panel hidden">
                <button id="close-panel" class="close-btn">&times;</button>
                <div class="panel-content">
                    <h2 id="card-title">Moment Collected</h2>
                    <p id="card-desc">Description of the reflection...</p>
                    <a href="#" id="card-link" class="btn-read">READ ARTICLE</a>
                </div>
            </div>

            <div class="controls-hint">
                DRAG TO ROTATE | CLICK A HORSE TO EXPLORE
            </div>
        </div>

        <div id="loader" class="loader">Glazing Porcelain...</div>
        <!-- 3D Canvas -->
        <div
            id="carousel-canvas-container"
            data-posts={JSON.stringify(finalPosts)}
        >
        </div>
    </main>
</Layout>

<script>
    import * as THREE from "three";
    import { GLTFLoader } from "three/examples/jsm/loaders/GLTFLoader.js";
    import { RoomEnvironment } from "three/examples/jsm/environments/RoomEnvironment.js";
    import { clone as cloneSkinned } from "three/examples/jsm/utils/SkeletonUtils.js";

    let scene: THREE.Scene;
    let camera: THREE.PerspectiveCamera;
    let renderer: THREE.WebGLRenderer;
    let carouselGroup: THREE.Group;
    let horseModules: THREE.Group[] = [];
    let horseShadowMeshes: THREE.Mesh[] = [];
    let requestID: number;
    let raycaster = new THREE.Raycaster();
    let mouse = new THREE.Vector2();
    let globalEnvMap: THREE.Texture;

    function createHorseDetailMaps(size = 128) {
        const colorCanvas = document.createElement("canvas");
        colorCanvas.width = size;
        colorCanvas.height = size;
        const colorCtx = colorCanvas.getContext("2d");

        const roughCanvas = document.createElement("canvas");
        roughCanvas.width = size;
        roughCanvas.height = size;
        const roughCtx = roughCanvas.getContext("2d");

        const bumpCanvas = document.createElement("canvas");
        bumpCanvas.width = size;
        bumpCanvas.height = size;
        const bumpCtx = bumpCanvas.getContext("2d");

        if (colorCtx && roughCtx && bumpCtx) {
            const baseGrad = colorCtx.createLinearGradient(0, 0, size, size);
            baseGrad.addColorStop(0, "#fffef9");
            baseGrad.addColorStop(0.5, "#f7eddc");
            baseGrad.addColorStop(1, "#efdec2");
            colorCtx.fillStyle = baseGrad;
            colorCtx.fillRect(0, 0, size, size);

            colorCtx.strokeStyle = "rgba(156, 124, 84, 0.18)";
            colorCtx.lineWidth = Math.max(1, size * 0.012);
            for (let i = 0; i < 12; i++) {
                const y = size * (0.18 + i * 0.058) + (Math.random() - 0.5) * 2.5;
                colorCtx.beginPath();
                colorCtx.moveTo(size * 0.07, y);
                colorCtx.bezierCurveTo(
                    size * 0.28,
                    y - size * 0.08,
                    size * 0.72,
                    y + size * 0.08,
                    size * 0.95,
                    y,
                );
                colorCtx.stroke();
            }

            for (let i = 0; i < 280; i++) {
                const x = Math.random() * size;
                const y = Math.random() * size;
                const a = 0.03 + Math.random() * 0.06;
                colorCtx.fillStyle = `rgba(146, 112, 76, ${a})`;
                colorCtx.fillRect(x, y, 1, 1);
            }

            colorCtx.fillStyle = "rgba(158, 124, 86, 0.16)";
            colorCtx.beginPath();
            colorCtx.ellipse(size * 0.14, size * 0.56, size * 0.11, size * 0.22, 0, 0, Math.PI * 2);
            colorCtx.fill();

            roughCtx.fillStyle = "rgb(146,146,146)";
            roughCtx.fillRect(0, 0, size, size);
            roughCtx.strokeStyle = "rgba(110,102,90,0.24)";
            roughCtx.lineWidth = 1;
            for (let i = 0; i < 26; i++) {
                roughCtx.beginPath();
                roughCtx.moveTo(size * 0.08, size * (0.15 + i * 0.03));
                roughCtx.bezierCurveTo(
                    size * 0.3,
                    size * (0.1 + i * 0.03),
                    size * 0.7,
                    size * (0.2 + i * 0.03),
                    size * 0.92,
                    size * (0.15 + i * 0.03),
                );
                roughCtx.stroke();
            }

            for (let i = 0; i < 700; i++) {
                const x = Math.random() * size;
                const y = Math.random() * size;
                const v = 126 + Math.floor(Math.random() * 46);
                roughCtx.fillStyle = `rgb(${v},${v},${v})`;
                roughCtx.fillRect(x, y, 1, 1);
            }

            bumpCtx.fillStyle = "rgb(128,128,128)";
            bumpCtx.fillRect(0, 0, size, size);
            bumpCtx.strokeStyle = "rgba(182,182,182,0.52)";
            bumpCtx.lineWidth = Math.max(1, size * 0.016);
            for (let i = 0; i < 10; i++) {
                const y = size * (0.18 + i * 0.07);
                bumpCtx.beginPath();
                bumpCtx.moveTo(size * 0.08, y);
                bumpCtx.quadraticCurveTo(size * 0.55, y - size * 0.085, size * 0.94, y);
                bumpCtx.stroke();
            }

            bumpCtx.fillStyle = "rgba(198,198,198,0.5)";
            bumpCtx.beginPath();
            bumpCtx.ellipse(size * 0.16, size * 0.6, size * 0.08, size * 0.16, 0, 0, Math.PI * 2);
            bumpCtx.fill();
        }

        const horseDetailMap = new THREE.CanvasTexture(colorCanvas);
        horseDetailMap.colorSpace = THREE.SRGBColorSpace;
        horseDetailMap.wrapS = THREE.RepeatWrapping;
        horseDetailMap.wrapT = THREE.RepeatWrapping;
        horseDetailMap.repeat.set(1.8, 1.4);

        const horseDetailRoughnessMap = new THREE.CanvasTexture(roughCanvas);
        horseDetailRoughnessMap.wrapS = THREE.RepeatWrapping;
        horseDetailRoughnessMap.wrapT = THREE.RepeatWrapping;
        horseDetailRoughnessMap.repeat.set(1.8, 1.4);
        const horseDetailBumpMap = new THREE.CanvasTexture(bumpCanvas);
        horseDetailBumpMap.wrapS = THREE.RepeatWrapping;
        horseDetailBumpMap.wrapT = THREE.RepeatWrapping;
        horseDetailBumpMap.repeat.set(1.8, 1.4);

        return { horseDetailMap, horseDetailRoughnessMap, horseDetailBumpMap };
    }

    function createSoftShadowTexture(size = 256) {
        const canvas = document.createElement("canvas");
        canvas.width = size;
        canvas.height = size;
        const ctx = canvas.getContext("2d");
        if (!ctx) return new THREE.CanvasTexture(canvas);

        const grad = ctx.createRadialGradient(
            size * 0.5,
            size * 0.5,
            size * 0.08,
            size * 0.5,
            size * 0.5,
            size * 0.5,
        );
        grad.addColorStop(0, "rgba(0,0,0,0.85)");
        grad.addColorStop(0.45, "rgba(0,0,0,0.52)");
        grad.addColorStop(1, "rgba(0,0,0,0)");
        ctx.fillStyle = grad;
        ctx.fillRect(0, 0, size, size);

        const tex = new THREE.CanvasTexture(canvas);
        tex.colorSpace = THREE.SRGBColorSpace;
        tex.wrapS = THREE.ClampToEdgeWrapping;
        tex.wrapT = THREE.ClampToEdgeWrapping;
        return tex;
    }

    // Physical Parameters
    const HORSE_COUNT = 6;
    const RADIUS = 28;
    const ORBIT_SPEED = 0.0035;
    const HORSE_BASE_Y = 5.2;
    const BOB_AMPLITUDE = 0.72;
    const BOB_FREQ = 1.35;
    const SWAY_AMPLITUDE = 0.011;
    const SWAY_FREQ = 1.05;

    // Interaction states
    let isDragging = false;
    let prevMouseX = 0;
    let targetRotationY = 0;
    let currentRotationY = 0;
    const clock = new THREE.Clock();

    const container = document.getElementById(
        "carousel-canvas-container",
    ) as HTMLDivElement;
    const loaderElement = document.getElementById("loader");
    const postsData = JSON.parse(container?.dataset.posts || "[]");

    const infoPanel = document.getElementById("info-panel");
    const cardTitle = document.getElementById("card-title");
    const cardDesc = document.getElementById("card-desc");
    const cardLink = document.getElementById("card-link") as HTMLAnchorElement;

    async function init() {
        if (!container) return;

        // 1. Scene Setup
        scene = new THREE.Scene();
        scene.background = new THREE.Color(0x020205);
        scene.fog = new THREE.FogExp2(0x020205, 0.0065);

        camera = new THREE.PerspectiveCamera(
            50,
            window.innerWidth / window.innerHeight,
            0.1,
            1000,
        );
        camera.position.set(0, 25, 85);

        // 2. Renderer
        renderer = new THREE.WebGLRenderer({ antialias: true, alpha: true });
        renderer.setSize(window.innerWidth, window.innerHeight);
        renderer.setPixelRatio(Math.min(window.devicePixelRatio, 1.75));
        renderer.toneMapping = THREE.ACESFilmicToneMapping;
        renderer.toneMappingExposure = 1.1;
        renderer.outputColorSpace = THREE.SRGBColorSpace;
        renderer.shadowMap.enabled = false;
        container.appendChild(renderer.domElement);

        // PMREM for High-End Material Reflections
        const pmremGenerator = new THREE.PMREMGenerator(renderer);
        globalEnvMap = pmremGenerator.fromScene(
            new RoomEnvironment(),
            0.04,
        ).texture;
        scene.environment = globalEnvMap;
        scene.environmentIntensity = 1.55;

        // 3. Lighting (Porcelain + Gilded Metal Rig)
        const keyLight = new THREE.DirectionalLight(0xfff2dc, 3.8);
        keyLight.position.set(42, 62, 48);
        scene.add(keyLight);

        const rimLight = new THREE.DirectionalLight(0xe8f0ff, 2.2);
        rimLight.position.set(-52, 34, -42);
        scene.add(rimLight);

        const topWarmLight = new THREE.SpotLight(
            0xffdfad,
            620,
            180,
            Math.PI / 3,
            0.45,
            1.4,
        );
        topWarmLight.position.set(0, 72, 15);
        topWarmLight.target.position.set(0, 16, 0);
        scene.add(topWarmLight);
        scene.add(topWarmLight.target);

        const bounceLight = new THREE.PointLight(0xffd8a0, 260, 120, 2);
        bounceLight.position.set(0, -6, 0);
        scene.add(bounceLight);

        const sideFill = new THREE.PointLight(0xfff4db, 220, 170, 2);
        sideFill.position.set(35, 25, -5);
        scene.add(sideFill);

        const ambient = new THREE.AmbientLight(0xfff8ef, 0.45);
        scene.add(ambient);
        const hemi = new THREE.HemisphereLight(0xfff8ec, 0x090c14, 0.78);
        scene.add(hemi);

        // 4. Construct
        await createCarousel();
        if (loaderElement) loaderElement.style.display = "none";

        // 5. Events
        window.addEventListener("resize", handleResize);
        container.addEventListener("mousedown", (e) => {
            isDragging = true;
            prevMouseX = e.clientX;
        });
        window.addEventListener("mousemove", onMouseMove);
        window.addEventListener("mouseup", () => (isDragging = false));
        container.addEventListener("click", onDocumentClick);
        document
            .getElementById("close-panel")
            ?.addEventListener("click", () =>
                infoPanel?.classList.add("hidden"),
            );

        animate();
    }

    async function createCarousel() {
        carouselGroup = new THREE.Group();
        horseModules = [];
        horseShadowMeshes = [];
        scene.add(carouselGroup);

        const gltfLoader = new GLTFLoader();
        const horseUrl =
            "https://raw.githubusercontent.com/mrdoob/three.js/master/examples/models/gltf/Horse.glb";

        let horseTemplate: THREE.Group | null = null;
        try {
            const gltf = await gltfLoader.loadAsync(horseUrl);
            horseTemplate = gltf.scene;
        } catch (e) {
            console.error("Critical: Failed to load horse", e);
            return;
        }

        if (!horseTemplate) return;

        // --- PREMIUM MATERIAL FORMULAS ---
        const { horseDetailMap, horseDetailRoughnessMap, horseDetailBumpMap } =
            createHorseDetailMaps(128);
        const maxAniso = Math.min(8, renderer.capabilities.getMaxAnisotropy());
        horseDetailMap.anisotropy = maxAniso;
        horseDetailRoughnessMap.anisotropy = maxAniso;
        horseDetailBumpMap.anisotropy = maxAniso;
        const shadowTexture = createSoftShadowTexture(256);

        const goldMat = new THREE.MeshPhysicalMaterial({
            color: 0xd7b15a,
            metalness: 1.0,
            roughness: 0.14,
            clearcoat: 0.65,
            clearcoatRoughness: 0.07,
            envMapIntensity: 3.4,
        });

        // 1) Glazed porcelain: creamy-white ceramic with mild yellow glaze texture.
        const glazedPorcelainMat = new THREE.MeshPhysicalMaterial({
            color: 0xfaf4e7,
            map: horseDetailMap,
            roughnessMap: horseDetailRoughnessMap,
            bumpMap: horseDetailBumpMap,
            bumpScale: 0.32,
            metalness: 0.0,
            roughness: 0.32,
            clearcoat: 0.94,
            clearcoatRoughness: 0.08,
            ior: 1.52,
            transmission: 0.0,
            thickness: 0.26,
            attenuationDistance: 2.0,
            attenuationColor: new THREE.Color(0xf5e7cf),
            sheen: 0.14,
            sheenColor: new THREE.Color(0xffffff),
            sheenRoughness: 0.36,
            envMapIntensity: 1.45,
            specularIntensity: 0.95,
            specularColor: new THREE.Color(0xfffbf3),
            side: THREE.FrontSide,
        });

        // 2) Fur-like shading formula: high roughness + strong sheen (fiber feel), pink.
        const furPinkMat = new THREE.MeshPhysicalMaterial({
            color: 0xf3a6c6,
            roughnessMap: horseDetailRoughnessMap,
            bumpMap: horseDetailBumpMap,
            bumpScale: 0.22,
            metalness: 0.0,
            roughness: 0.82,
            clearcoat: 0.04,
            clearcoatRoughness: 0.9,
            ior: 1.38,
            transmission: 0.0,
            thickness: 0.0,
            sheen: 1.0,
            sheenColor: new THREE.Color(0xffd6e8),
            sheenRoughness: 0.98,
            envMapIntensity: 0.72,
            specularIntensity: 0.26,
            specularColor: new THREE.Color(0xffe9f2),
            side: THREE.FrontSide,
        });

        // 3) Liuli (glass-like): slight transparency, warm yellow tint.
        const liuliYellowMat = new THREE.MeshPhysicalMaterial({
            color: 0xffd355,
            metalness: 0.0,
            roughness: 0.16,
            clearcoat: 1.0,
            clearcoatRoughness: 0.04,
            ior: 1.5,
            transmission: 0.24,
            thickness: 0.6,
            attenuationDistance: 2.2,
            attenuationColor: new THREE.Color(0xffd670),
            envMapIntensity: 2.5,
            specularIntensity: 1.0,
            specularColor: new THREE.Color(0xfff2cc),
            side: THREE.FrontSide,
        });

        // 1. Structure
        const pillar = new THREE.Mesh(
            new THREE.CylinderGeometry(6, 6, 50, 48),
            goldMat,
        );
        pillar.position.y = 15;
        carouselGroup.add(pillar);

        const diskGeo = new THREE.CylinderGeometry(33, 33, 3, 64);
        const base = new THREE.Mesh(diskGeo, goldMat);
        base.position.y = -2;
        carouselGroup.add(base);

        const ceiling = new THREE.Mesh(diskGeo, goldMat);
        ceiling.position.y = 40;
        carouselGroup.add(ceiling);

        const roof = new THREE.Mesh(
            new THREE.ConeGeometry(34, 18, 64),
            goldMat,
        );
        roof.position.y = 48;
        carouselGroup.add(roof);

        // Bright main lamp on top of the center pillar, casting visible downward beam.
        const centerLampTarget = new THREE.Object3D();
        centerLampTarget.position.set(0, -2, 0);
        carouselGroup.add(centerLampTarget);

        const centerLamp = new THREE.SpotLight(
            0xfff6d6,
            1650,
            220,
            Math.PI / 2.65,
            0.2,
            1.15,
        );
        centerLamp.position.set(0, 39.1, 0);
        centerLamp.target = centerLampTarget;
        carouselGroup.add(centerLamp);

        const centerLampFill = new THREE.PointLight(0xffebb8, 520, 95, 2);
        centerLampFill.position.set(0, 37.8, 0);
        carouselGroup.add(centerLampFill);

        const lampBulb = new THREE.Mesh(
            new THREE.SphereGeometry(1.45, 28, 28),
            new THREE.MeshStandardMaterial({
                color: 0xffefbd,
                emissive: 0xffc85c,
                emissiveIntensity: 4.8,
                roughness: 0.18,
                metalness: 0.0,
            }),
        );
        lampBulb.position.copy(centerLamp.position);
        carouselGroup.add(lampBulb);

        const lampBeam = new THREE.Mesh(
            new THREE.ConeGeometry(28.5, 42, 48, 1, true),
            new THREE.MeshBasicMaterial({
                color: 0xffd777,
                transparent: true,
                opacity: 0.18,
                depthWrite: false,
                blending: THREE.AdditiveBlending,
                side: THREE.DoubleSide,
            }),
        );
        lampBeam.position.set(0, 19, 0);
        carouselGroup.add(lampBeam);

        // 2. Horse Instances
        for (let i = 0; i < HORSE_COUNT; i++) {
            const angle = (i / HORSE_COUNT) * Math.PI * 2;
            const module = new THREE.Group();

            // Pole
            const pole = new THREE.Mesh(
                new THREE.CylinderGeometry(0.4, 0.4, 52, 8),
                goldMat,
            );
            pole.position.y = 15;
            module.add(pole);

            // Container for Horse + Detailed Gilded Decorations
            const decorationGroup = new THREE.Group();

            // The Horse Body
            const horse = cloneSkinned(horseTemplate);
            horse.scale.set(0.075, 0.075, 0.075);
            horse.rotation.y = Math.PI; // Correct CCW Inverse Orientation
            horse.updateMatrixWorld(true);

            const rawBounds = new THREE.Box3().setFromObject(horse);
            const rawCenter = new THREE.Vector3();
            rawBounds.getCenter(rawCenter);

            // Align to local origin: center on XZ and place feet at Y=0.
            horse.position.x -= rawCenter.x;
            horse.position.z -= rawCenter.z;
            horse.position.y -= rawBounds.min.y;
            horse.userData = { index: i, clickable: true };
            decorationGroup.add(horse);
            horse.updateMatrixWorld(true);

            const styleIndex = i % 3;
            const horseBodyMat =
                styleIndex === 0
                    ? glazedPorcelainMat.clone()
                    : styleIndex === 1
                      ? furPinkMat.clone()
                      : liuliYellowMat.clone();
            horseBodyMat.envMap = globalEnvMap;
            horseBodyMat.vertexColors = false;

            if (styleIndex === 0) {
                horseBodyMat.clearcoat = 0.94;
                horseBodyMat.clearcoatRoughness = 0.08;
                horseBodyMat.roughness = 0.32;
                horseBodyMat.envMapIntensity = 1.45;
            } else if (styleIndex === 1) {
                // Fur formula emphasis: rough diffuse base + strong sheen for fiber glint.
                horseBodyMat.roughness = 0.84;
                horseBodyMat.sheen = 1.0;
                horseBodyMat.sheenColor = new THREE.Color(0xffd6e8);
                horseBodyMat.sheenRoughness = 0.98;
                horseBodyMat.envMapIntensity = 0.72;
            } else {
                horseBodyMat.transmission = 0.24;
                horseBodyMat.thickness = 0.6;
                horseBodyMat.roughness = 0.16;
                horseBodyMat.attenuationDistance = 2.2;
                horseBodyMat.attenuationColor = new THREE.Color(0xffd670);
                horseBodyMat.envMapIntensity = 2.5;
            }

            horse.traverse((node) => {
                if ((node as THREE.Mesh).isMesh) {
                    const mesh = node as THREE.Mesh;
                    const geometry = mesh.geometry as THREE.BufferGeometry;
                    geometry.computeVertexNormals();
                    geometry.normalizeNormals();
                    mesh.material = horseBodyMat;
                }
            });

            // Dynamic soft shadow blob, fixed on deck and bound to each horse module.
            const horseShadow = new THREE.Mesh(
                new THREE.PlaneGeometry(7.3, 4.2),
                new THREE.MeshBasicMaterial({
                    map: shadowTexture,
                    color: 0x000000,
                    transparent: true,
                    depthWrite: false,
                    opacity: 0.4,
                }),
            );
            horseShadow.rotation.x = -Math.PI / 2;
            horseShadow.position.set(0, -0.48, 0);
            horseShadow.renderOrder = 3;
            module.add(horseShadow);
            horseShadowMeshes.push(horseShadow);

            decorationGroup.position.y = HORSE_BASE_Y;
            module.add(decorationGroup);

            // Orbit Placement
            module.position.set(
                Math.cos(angle) * RADIUS,
                0,
                Math.sin(angle) * RADIUS,
            );

            // CCW Tangential lookAt
            const nextAngle = angle + 0.1;
            module.lookAt(
                Math.cos(nextAngle) * RADIUS,
                0,
                Math.sin(nextAngle) * RADIUS,
            );

            carouselGroup.add(module);
            horseModules.push(module);
        }
    }

    function onMouseMove(e: MouseEvent) {
        if (isDragging) {
            targetRotationY += (e.clientX - prevMouseX) * 0.005;
            prevMouseX = e.clientX;
        }
        mouse.x = (e.clientX / window.innerWidth) * 2 - 1;
        mouse.y = -(e.clientY / window.innerHeight) * 2 + 1;
    }

    function onDocumentClick() {
        raycaster.setFromCamera(mouse, camera);
        const intersects = raycaster.intersectObjects(
            carouselGroup.children,
            true,
        );
        let clicked = null;
        for (let int of intersects) {
            let o = int.object;
            while (o.parent && !o.userData.clickable) o = o.parent;
            if (o.userData.clickable) {
                clicked = o;
                break;
            }
        }
        if (clicked && infoPanel) {
            const data = postsData[clicked.userData.index];
            if (data) {
                if (cardTitle) cardTitle.textContent = data.title;
                if (cardDesc) cardDesc.textContent = data.desc;
                if (cardLink)
                    cardLink.href = data.slug ? `/blog/${data.slug}` : "#";
                infoPanel.classList.remove("hidden");
            }
        }
    }

    function animate() {
        requestID = requestAnimationFrame(animate);
        const delta = Math.min(clock.getDelta(), 0.05);
        const time = clock.elapsedTime;

        if (!isDragging) targetRotationY += ORBIT_SPEED * delta * 60;
        const orbitDamp = 1 - Math.exp(-8 * delta);
        currentRotationY += (targetRotationY - currentRotationY) * orbitDamp;
        if (carouselGroup) carouselGroup.rotation.y = currentRotationY;

        horseModules.forEach((mod, i) => {
            const hCont = mod.children[1] as THREE.Group;
            const bobTarget = Math.sin(time * BOB_FREQ + i * 1.1) * BOB_AMPLITUDE;
            const verticalDamp = 1 - Math.exp(-12 * delta);
            hCont.position.y +=
                (HORSE_BASE_Y + bobTarget - hCont.position.y) * verticalDamp;

            // Subtle sway with damping to avoid visible jitter.
            const swayTarget = Math.sin(time * SWAY_FREQ + i) * SWAY_AMPLITUDE;
            hCont.rotation.z += (swayTarget - hCont.rotation.z) * verticalDamp;

            const shadow = horseShadowMeshes[i];
            if (shadow) {
                const bob = hCont.position.y - HORSE_BASE_Y;
                const size = THREE.MathUtils.clamp(1.04 - bob * 0.12, 0.84, 1.16);
                shadow.scale.set(size, size, 1);
                const mat = shadow.material as THREE.MeshBasicMaterial;
                const targetOpacity = THREE.MathUtils.clamp(
                    0.44 - bob * 0.12,
                    0.23,
                    0.54,
                );
                mat.opacity += (targetOpacity - mat.opacity) * verticalDamp;
            }
        });

        // Keep camera stable to reduce perceived jitter.
        camera.lookAt(0, 20, 0);

        renderer.render(scene, camera);
    }

    function handleResize() {
        camera.aspect = window.innerWidth / window.innerHeight;
        camera.updateProjectionMatrix();
        renderer.setSize(window.innerWidth, window.innerHeight);
    }

