        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(255, 215, 0, 0.5);
    }
    .controls-hint {
        text-align: center;
        color: rgba(255, 255, 255, 0.3);
        font-size: 0.9rem;
        letter-spacing: 8px;
        text-transform: uppercase;
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 2.5rem;
        }
        .info-panel {
            width: 90%;
        }
    }
</style>
