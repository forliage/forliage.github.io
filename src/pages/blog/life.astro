import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import { getCollection } from "astro:content";

// 1. Fetch Blog Data
const allPosts = await getCollection("blog");
const lifeKeywords = [
    "welcome",
    "smile",
    "conversation",
    "hallucinate",
    "rbt",
    "cbo",
];
const lifePosts = allPosts
    .filter(
        (post) =>
            lifeKeywords.some((kw) => post.slug.toLowerCase().includes(kw)) ||
            post.data.category === "life" ||
            post.data.tags?.some((tag) => tag.toLowerCase() === "life"),
    )
    .slice(0, 12);

const paddedPosts = [...lifePosts];
while (paddedPosts.length < 12 && paddedPosts.length > 0) {
    paddedPosts.push(...lifePosts);
}
if (paddedPosts.length === 0) {
    for (let i = 0; i < 12; i++)
        paddedPosts.push({
            data: {
                title: `Reflection ${i + 1}`,
                description: "A moment in time captured.",
            },
            slug: "",
        } as any);
}

const finalPosts = paddedPosts.slice(0, 12).map((p) => ({
    title: p.data.title,
    desc: p.data.description || "A slice of life reflection...",
    slug: p.slug,
}));
---

<Layout title="Reflections and Life - Liuye Zhao">
    <Header />
    <main class="carousel-container">
        <!-- UI Overlay -->
        <div class="ui-overlay">
            <div class="title-section">
                <h1>LIFE CAROUSEL</h1>
                <div class="subtitle">
                    Rotating Through Moments of Reflection
                </div>
            </div>

            <div id="info-panel" class="info-panel hidden">
                <button id="close-panel" class="close-btn">&times;</button>
                <div class="panel-content">
                    <h2 id="card-title">Moment Collected</h2>
                    <p id="card-desc">Description of the reflection...</p>
                    <a href="#" id="card-link" class="btn-read">READ ARTICLE</a>
                </div>
            </div>

            <div class="controls-hint">
                DRAG TO ROTATE • CLICK A HORSE TO EXPLORE
            </div>
        </div>

        <div id="carousel-loading" class="loader">Fired Up 3D Engine...</div>
        <!-- 3D Canvas -->
        <div
            id="carousel-canvas-container"
            data-posts={JSON.stringify(finalPosts)}
        >
        </div>
    </main>
</Layout>

<script>
    import * as THREE from "three";
    import { GLTFLoader } from "three/examples/jsm/loaders/GLTFLoader.js";
    import { RoomEnvironment } from "three/examples/jsm/environments/RoomEnvironment.js";

    let scene: THREE.Scene;
    let camera: THREE.PerspectiveCamera;
    let renderer: THREE.WebGLRenderer;
    let carouselGroup: THREE.Group;
    let horseModules: THREE.Group[] = [];
    let requestID: number;
    let raycaster = new THREE.Raycaster();
    let mouse = new THREE.Vector2();
    let envTexture: THREE.Texture;

    // Interaction states
    let isDragging = false;
    let prevMouseX = 0;
    let rotationVelocity = 0.005;
    let targetRotationY = 0;
    let currentRotationY = 0;

    const container = document.getElementById(
        "carousel-canvas-container",
    ) as HTMLDivElement;
    const loader = document.getElementById("carousel-loading");
    const postsData = JSON.parse(container?.dataset.posts || "[]");

    const infoPanel = document.getElementById("info-panel");
    const cardTitle = document.getElementById("card-title");
    const cardDesc = document.getElementById("card-desc");
    const cardLink = document.getElementById("card-link") as HTMLAnchorElement;
    const closeBtn = document.getElementById("close-panel");

    async function init() {
        if (!container) return;

        // 1. Scene Setup
        scene = new THREE.Scene();
        scene.background = new THREE.Color(0x020205);
        scene.fog = new THREE.FogExp2(0x020205, 0.01);

        camera = new THREE.PerspectiveCamera(
            50,
            window.innerWidth / window.innerHeight,
            0.1,
            1000,
        );
        camera.position.set(0, 25, 80);

        // 2. Renderer
        renderer = new THREE.WebGLRenderer({ antialias: true, alpha: true });
        renderer.setSize(window.innerWidth, window.innerHeight);
        renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
        renderer.toneMapping = THREE.ACESFilmicToneMapping;
        renderer.toneMappingExposure = 2.0;
        renderer.outputColorSpace = THREE.SRGBColorSpace;
        container.appendChild(renderer.domElement);

        // Environment for Reflections (The magic for Porcelain/Gold)
        const pmremGenerator = new THREE.PMREMGenerator(renderer);
        envTexture = pmremGenerator.fromScene(
            new RoomEnvironment(),
            0.04,
        ).texture;
        scene.environment = envTexture;

        // 3. Lighting (Bright Studio Quality)
        const sun = new THREE.DirectionalLight(0xffffff, 5);
        sun.position.set(40, 80, 50);
        scene.add(sun);

        const point1 = new THREE.PointLight(0xffffff, 1500, 150);
        point1.position.set(-40, 40, 40);
        scene.add(point1);

        const point2 = new THREE.PointLight(0xffd700, 1000, 100);
        point2.position.set(40, 10, -40);
        scene.add(point2);

        const ambient = new THREE.AmbientLight(0xffffff, 1.2);
        scene.add(ambient);

        // 4. Build Carousel
        await createCarousel();
        if (loader) loader.style.display = "none";

        // 5. Events
        window.addEventListener("resize", handleResize);
        container.addEventListener("mousedown", onMouseDown);
        window.addEventListener("mousemove", onMouseMove);
        window.addEventListener("mouseup", () => (isDragging = false));
        container.addEventListener("click", onDocumentClick);
        closeBtn?.addEventListener("click", () =>
            infoPanel?.classList.add("hidden"),
        );

        animate();
    }

    async function createCarousel() {
        carouselGroup = new THREE.Group();
        scene.add(carouselGroup);

        const gltfLoader = new GLTFLoader();
        const horseUrl =
            "https://raw.githubusercontent.com/mrdoob/three.js/master/examples/models/gltf/Horse.glb";

        let horseMeshTemplate: THREE.Mesh | null = null;
        try {
            const gltf = await gltfLoader.loadAsync(horseUrl);
            gltf.scene.traverse((node) => {
                if ((node as THREE.Mesh).isMesh)
                    horseMeshTemplate = node as THREE.Mesh;
            });
        } catch (e) {
            console.error("Failed to load realistic horse", e);
            return;
        }

        if (!horseMeshTemplate) return;

        // --- Materials ---
        const goldMat = new THREE.MeshStandardMaterial({
            color: 0xffd700,
            metalness: 1.0,
            roughness: 0.1,
            envMap: envTexture,
            envMapIntensity: 2.0,
        });

        const porcelainMat = new THREE.MeshStandardMaterial({
            color: 0xffffff,
            metalness: 0.0,
            roughness: 0.02,
            envMap: envTexture,
            envMapIntensity: 2.5,
        });

        // 1. Structural Parts
        const pillar = new THREE.Mesh(
            new THREE.CylinderGeometry(6, 6, 50, 48),
            goldMat,
        );
        pillar.position.y = 15;
        carouselGroup.add(pillar);

        const diskGeo = new THREE.CylinderGeometry(32, 32, 2.5, 64);
        const base = new THREE.Mesh(diskGeo, goldMat);
        base.position.y = -2;
        carouselGroup.add(base);

        const ceiling = new THREE.Mesh(diskGeo, goldMat);
        ceiling.position.y = 40;
        carouselGroup.add(ceiling);

        const roof = new THREE.Mesh(
            new THREE.ConeGeometry(33, 18, 64),
            goldMat,
        );
        roof.position.y = 48;
        carouselGroup.add(roof);

        // 2. Horse Instances
        const radius = 26;
        for (let i = 0; i < 12; i++) {
            const angle = (i / 12) * Math.PI * 2;
            const module = new THREE.Group();

            // Pole
            const pole = new THREE.Mesh(
                new THREE.CylinderGeometry(0.4, 0.4, 48, 8),
                goldMat,
            );
            pole.position.y = 15;
            module.add(pole);

            // Horse Container
            const horseContainer = new THREE.Group();

            // The Mesh
            const horse = (horseMeshTemplate as THREE.Mesh).clone();
            horse.material = porcelainMat;
            horse.scale.set(0.07, 0.07, 0.07);
            // Orient CCW but "Inverse" as requested?
            // Standard horse faces +X. CCW travel is tangent to radius.
            // Let's make it face TANGENT properly.
            horse.rotation.y = Math.PI;
            horse.userData = { index: i, clickable: true };
            horseContainer.add(horse);

            // Gilded Saddle (鎏金马鞍)
            const saddle = new THREE.Mesh(
                new THREE.CapsuleGeometry(0.8, 1.8, 4, 12),
                goldMat,
            );
            saddle.rotation.x = Math.PI / 2;
            saddle.position.set(0, 16.5, 0);
            horseContainer.add(saddle);

            horseContainer.position.y = 15;
            module.add(horseContainer);

            // Placement
            const x = Math.cos(angle) * radius;
            const z = Math.sin(angle) * radius;
            module.position.set(x, 0, z);

            // TANGENTIAL ORIENTATION (Look at next point in CCW orbit)
            const nextAngle = angle + 0.1;
            const tx = Math.cos(nextAngle) * radius;
            const tz = Math.sin(nextAngle) * radius;
            module.lookAt(tx, 0, tz);

            carouselGroup.add(module);
            horseModules.push(module);
        }
    }

    function onMouseDown(e: MouseEvent) {
        isDragging = true;
        prevMouseX = e.clientX;
    }

    function onMouseMove(e: MouseEvent) {
        if (isDragging) {
            targetRotationY += (e.clientX - prevMouseX) * 0.005;
            prevMouseX = e.clientX;
        }
        mouse.x = (e.clientX / window.innerWidth) * 2 - 1;
        mouse.y = -(e.clientY / window.innerHeight) * 2 + 1;
    }

    function onDocumentClick() {
        raycaster.setFromCamera(mouse, camera);
        const intersects = raycaster.intersectObjects(
            carouselGroup.children,
            true,
        );
        let clicked = null;
        for (let int of intersects) {
            let o = int.object;
            while (o.parent && !o.userData.clickable) o = o.parent;
            if (o.userData.clickable) {
                clicked = o;
                break;
            }
        }
        if (clicked && infoPanel) {
            const post = postsData[clicked.userData.index];
            if (cardTitle) cardTitle.textContent = post.title;
            if (cardDesc) cardDesc.textContent = post.desc;
            if (cardLink)
                cardLink.href = post.slug ? `/blog/${post.slug}` : "#";
            infoPanel.classList.remove("hidden");
        }
    }

    function animate() {
        requestID = requestAnimationFrame(animate);
        const time = Date.now() * 0.001;

        if (!isDragging) targetRotationY += rotationVelocity;
        currentRotationY += (targetRotationY - currentRotationY) * 0.05;
        if (carouselGroup) carouselGroup.rotation.y = currentRotationY;

        horseModules.forEach((mod, i) => {
            const hCont = mod.children[1] as THREE.Group;
            const bob = Math.sin(time * 3 + i * 0.8) * 8;
            hCont.position.y = 15 + bob;
        });

        // Cinematic look
        camera.position.x = Math.sin(time * 0.1) * 15;
        camera.lookAt(0, 20, 0);

        renderer.render(scene, camera);
    }

    function handleResize() {
        camera.aspect = window.innerWidth / window.innerHeight;
        camera.updateProjectionMatrix();
        renderer.setSize(window.innerWidth, window.innerHeight);
    }

    init();
</script>

<style>
