            opacity: 1;
            text-shadow: 0 0 20px rgba(255, 215, 0, 0.7);
        }
    }

    .ui-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 10;
        pointer-events: none;
        padding: 60px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
    .title-section h1 {
        font-size: 6rem;
        color: #fff;
        letter-spacing: 25px;
        font-weight: 950;
        background: linear-gradient(180deg, #fff 0%, #ffd700 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        filter: drop-shadow(0 0 40px rgba(255, 215, 0, 0.5));
    }
    .subtitle {
        color: #ffd700;
        letter-spacing: 12px;
        font-size: 1.4rem;
        margin-top: 20px;
        text-transform: uppercase;
    }

    .info-panel {
        position: relative;
        background: rgba(5, 5, 12, 0.95);
        backdrop-filter: blur(60px);
        padding: 50px;
        border-radius: 50px;
        border: 2px solid #ffd700;
        width: 550px;
        pointer-events: auto;
        box-shadow: 0 50px 150px rgba(0, 0, 0, 1);
        transition: 0.7s cubic-bezier(0.19, 1, 0.22, 1);
    }
    .info-panel.hidden {
        transform: translateX(-150px) scale(0.9);
        opacity: 0;
        visibility: hidden;
    }
    .close-btn {
        position: absolute;
        top: 25px;
        right: 30px;
        background: none;
        border: none;
        color: #ffd700;
        font-size: 3rem;
        cursor: pointer;
        opacity: 0.6;
    }
    .close-btn:hover {
        opacity: 1;
        transform: rotate(90deg);
        color: #fff;
    }

    .panel-content h2 {
        color: #ffd700;
        font-size: 2.8rem;
        margin: 0 0 25px;
        font-weight: 800;
    }
    .panel-content p {
        font-size: 1.25rem;
        color: rgba(255, 255, 255, 0.85);
        line-height: 1.9;
    }

    .btn-read {
        display: inline-block;
        margin-top: 40px;
        padding: 18px 55px;
        background: linear-gradient(135deg, #ffd700, #ffb000);
        color: #000;
        text-decoration: none;
        font-weight: 950;
        border-radius: 80px;
        transition: 0.4s;
        text-transform: uppercase;
        letter-spacing: 3px;
    }
    .btn-read:hover {
        transform: translateY(-8px) scale(1.05);
        box-shadow: 0 15px 40px rgba(255, 215, 0, 0.5);
    }
    .controls-hint {
        text-align: center;
        color: rgba(255, 255, 255, 0.35);
        font-size: 1rem;
        letter-spacing: 8px;
        text-transform: uppercase;
    }

    @media (max-width: 768px) {
        .title-section h1 {
            font-size: 2.5rem;
            letter-spacing: 6px;
        }
        .info-panel {
            width: 90%;
        }
        .ui-overlay {
            padding: 40px;
        }
    }
</style>
