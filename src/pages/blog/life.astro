        visibility: hidden;
    }
    .close-btn {
        position: absolute;
        top: 25px;
        right: 30px;
        background: none;
        border: none;
        color: #ffd700;
        font-size: 3rem;
        cursor: pointer;
    }
    .panel-content h2 {
        color: #ffd700;
        font-size: 2.8rem;
        margin: 0 0 25px;
        font-weight: 800;
    }
    .panel-content p {
        font-size: 1.25rem;
        color: rgba(255, 255, 255, 0.85);
        line-height: 1.9;
    }
    .btn-read {
        display: inline-block;
        margin-top: 40px;
        padding: 18px 55px;
        background: linear-gradient(135deg, #ffd700, #ffb000);
        color: #000;
        text-decoration: none;
        font-weight: 950;
        border-radius: 80px;
        transition: 0.4s;
        text-transform: uppercase;
        letter-spacing: 3px;
    }
    .btn-read:hover {
        transform: translateY(-8px) scale(1.05);
    }

    .controls-hint {
        text-align: center;
        color: rgba(255, 255, 255, 0.35);
        font-size: 1rem;
        letter-spacing: 10px;
        text-transform: uppercase;
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 2.5rem;
            letter-spacing: 8px;
        }
        .info-panel {
            width: 90%;
        }
    }
</style>
