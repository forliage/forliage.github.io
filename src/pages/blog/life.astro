---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import { getCollection } from "astro:content";

// 1. Fetch Blog Data for the Carousel
const allPosts = await getCollection("blog");
// Select representative "Life/Reflection" posts or use a mix
const lifeKeywords = [
    "welcome",
    "smile",
    "conversation",
    "hallucinate",
    "rbt",
    "cbo",
];
const lifePosts = allPosts
    .filter(
        (post) =>
            lifeKeywords.some((kw) => post.slug.toLowerCase().includes(kw)) ||
            post.data.category === "life" ||
            post.data.tags?.some((tag) => tag.toLowerCase() === "life"),
    )
    .slice(0, 12);

// Ensure we have exactly 12 by padding if necessary (carousel of 12)
const paddedPosts = [...lifePosts];
while (paddedPosts.length < 12 && paddedPosts.length > 0) {
    paddedPosts.push(...lifePosts);
}
if (paddedPosts.length === 0) {
    // Ultimate fallback if no posts match
    for (let i = 0; i < 12; i++)
        paddedPosts.push({
            data: {
                title: `Moment ${i + 1}`,
                description: "A beautiful memory captured in time.",
            },
            slug: "",
        } as any);
}

const finalPosts = paddedPosts.slice(0, 12).map((p) => ({
    title: p.data.title,
    desc: p.data.description || "A slice of life reflection...",
    slug: p.slug,
}));
---

<Layout title="Reflections and Life - Liuye Zhao">
    <Header />
    <main class="carousel-container">
        <!-- UI Overlay -->
        <div class="ui-overlay">
            <div class="title-section">
                <h1>LIFE CAROUSEL</h1>
                <div class="subtitle">
                    Rotating Through Moments of Reflection
                </div>
            </div>

            <div id="info-panel" class="info-panel hidden">
                <button id="close-panel" class="close-btn">&times;</button>
                <div class="panel-content">
                    <h2 id="card-title">Moment Collected</h2>
                    <p id="card-desc">Description of the reflection...</p>
                    <a href="#" id="card-link" class="btn-read">READ ARTICLE</a>
                </div>
            </div>

            <div class="controls-hint">
                DRAG TO ROTATE â€¢ CLICK A HORSE TO EXPLORE
            </div>
        </div>

        <!-- 3D Canvas -->
        <div
            id="carousel-canvas-container"
            data-posts={JSON.stringify(finalPosts)}
        >
        </div>
    </main>
</Layout>

<script>
    import * as THREE from "three";

    let scene: THREE.Scene;
    let camera: THREE.PerspectiveCamera;
    let renderer: THREE.WebGLRenderer;
    let carouselGroup: THREE.Group;
    let horseModules: THREE.Group[] = [];
    let requestID: number;
    let raycaster = new THREE.Raycaster();
    let mouse = new THREE.Vector2();

    // Interaction states
    let isDragging = false;
    let prevMouseX = 0;
    let rotationVelocity = 0.003;
    let targetRotationY = 0;

    const container = document.getElementById(
        "carousel-canvas-container",
    ) as HTMLDivElement;
    const postsData = JSON.parse(container?.dataset.posts || "[]");

    const infoPanel = document.getElementById("info-panel");
    const cardTitle = document.getElementById("card-title");
    const cardDesc = document.getElementById("card-desc");
    const cardLink = document.getElementById("card-link") as HTMLAnchorElement;
    const closeBtn = document.getElementById("close-panel");

    function init() {
        if (!container) return;

        // 1. Scene Setup
        scene = new THREE.Scene();
        scene.background = new THREE.Color(0x0a0a0f);
        scene.fog = new THREE.FogExp2(0x0a0a0f, 0.015);

        camera = new THREE.PerspectiveCamera(
            60,
            window.innerWidth / window.innerHeight,
            0.1,
            1000,
        );
        camera.position.set(0, 15, 60);

        // 2. Renderer
        renderer = new THREE.WebGLRenderer({ antialias: true, alpha: true });
        renderer.setSize(window.innerWidth, window.innerHeight);
        renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
        renderer.shadowMap.enabled = true;
        renderer.shadowMap.type = THREE.PCFSoftShadowMap;
        container.appendChild(renderer.domElement);

        // 3. Lighting (Premium Warm Theme)
        const sun = new THREE.DirectionalLight(0xfff0dd, 2.5);
        sun.position.set(20, 50, 40);
        sun.castShadow = true;
        scene.add(sun);

        const ambient = new THREE.AmbientLight(0xffffff, 0.5);
        scene.add(ambient);

        // Center glow
        const centerLight = new THREE.PointLight(0xffaa44, 100, 60);
        centerLight.position.set(0, 10, 0);
        scene.add(centerLight);

        // Rim lights board
        for (let i = 0; i < 12; i++) {
            const angle = (i / 12) * Math.PI * 2;
            const pLight = new THREE.PointLight(0xffddaa, 80, 50);
            pLight.position.set(Math.cos(angle) * 23, 23, Math.sin(angle) * 23);
            scene.add(pLight);
        }

        // 4. Create Carousel
        createCarousel();

        // 5. Events
        window.addEventListener("resize", handleResize);
        container.addEventListener("mousedown", onMouseDown);
        window.addEventListener("mousemove", onMouseMove);
        window.addEventListener("mouseup", onMouseUp);
        container.addEventListener("click", onDocumentClick);
        closeBtn?.addEventListener("click", () =>
            infoPanel?.classList.add("hidden"),
        );

        animate();
    }

    function createCarousel() {
        carouselGroup = new THREE.Group();
        scene.add(carouselGroup);

        // Materials: Gold and White
        const goldMat = new THREE.MeshPhysicalMaterial({
            color: 0xffd700,
            metalness: 1.0,
            roughness: 0.12,
            clearcoat: 1.0,
            reflectivity: 1.0,
        });

        const whiteMat = new THREE.MeshPhysicalMaterial({
            color: 0xffffff,
            metalness: 0.05,
            roughness: 0.25,
            clearcoat: 1.0,
        });

        // Pillar & Platter
        const pillar = new THREE.Mesh(
            new THREE.CylinderGeometry(4.5, 4.5, 38, 48),
            goldMat,
        );
        pillar.position.y = 14;
        carouselGroup.add(pillar);

        const base = new THREE.Mesh(
            new THREE.CylinderGeometry(25, 25, 1.5, 64),
            goldMat,
        );
        base.position.y = -2;
        carouselGroup.add(base);

        const ceiling = new THREE.Mesh(
            new THREE.CylinderGeometry(25, 25, 1.5, 64),
            goldMat,
        );
        ceiling.position.y = 28;
        carouselGroup.add(ceiling);

        const roof = new THREE.Mesh(
            new THREE.ConeGeometry(25.5, 14, 64),
            goldMat,
        );
        roof.position.y = 35.75;
        carouselGroup.add(roof);

        // 12 Horses
        const orbitRadius = orbitRadiusValue();
        for (let i = 0; i < 12; i++) {
            const angle = (i / 12) * Math.PI * 2;
            const module = new THREE.Group();

            // Pole
            const pole = new THREE.Mesh(
                new THREE.CylinderGeometry(0.3, 0.3, 30, 8),
                goldMat,
            );
            pole.position.y = 13;
            module.add(pole);

            // Horse
            const horse = buildStylizedHorse(whiteMat, goldMat);
            horse.position.y = 12;
            horse.userData = { index: i, clickable: true };
            module.add(horse);

            module.position.set(
                Math.cos(angle) * orbitRadius,
                0,
                Math.sin(angle) * orbitRadius,
            );
            module.rotation.y = -angle + Math.PI / 2;

            carouselGroup.add(module);
            horseModules.push(module);
        }
    }

    function orbitRadiusValue() {
        return window.innerWidth < 768 ? 14 : 19;
    }

    function buildStylizedHorse(
        bodyMat: THREE.Material,
        trimMat: THREE.Material,
    ) {
        const group = new THREE.Group();

        // Body (Capsule)
        const body = new THREE.Mesh(
            new THREE.CapsuleGeometry(1.8, 3.5, 4, 12),
            bodyMat,
        );
        body.rotation.z = Math.PI / 2;
        group.add(body);

        // Neck (Bent cylinder)
        const neck = new THREE.Mesh(
            new THREE.CylinderGeometry(0.8, 1.3, 3, 10),
            bodyMat,
        );
        neck.position.set(2.5, 2, 0);
        neck.rotation.z = -Math.PI / 4;
        group.add(neck);

        // Head (Sphere/Oval)
        const head = new THREE.Mesh(
            new THREE.SphereGeometry(1.1, 20, 20),
            bodyMat,
        );
        head.position.set(3.6, 3.2, 0);
        group.add(head);

        // Mane (Golden blocks)
        const mane = new THREE.Mesh(
            new THREE.BoxGeometry(0.7, 2.5, 0.7),
            trimMat,
        );
        mane.position.set(2.5, 2.5, 0);
        group.add(mane);

        // Tail (Golden fluff)
        const tail = new THREE.Mesh(
            new THREE.SphereGeometry(0.8, 12, 12),
            trimMat,
        );
        tail.position.set(-3, 0.8, 0);
        group.add(tail);

        // Saddle (Gold)
        const saddle = new THREE.Mesh(
            new THREE.BoxGeometry(2, 0.5, 2.5),
            trimMat,
        );
        saddle.position.y = 1.3;
        group.add(saddle);

        return group;
    }

    function onMouseDown(e: MouseEvent) {
        isDragging = true;
        prevMouseX = e.clientX;
    }

    function onMouseMove(e: MouseEvent) {
        if (isDragging) {
            const dx = e.clientX - prevMouseX;
            targetRotationY += dx * 0.005;
            prevMouseX = e.clientX;
        }
        mouse.x = (e.clientX / window.innerWidth) * 2 - 1;
        mouse.y = -(e.clientY / window.innerHeight) * 2 + 1;
    }

    function onMouseUp() {
        isDragging = false;
    }

    function onDocumentClick() {
        raycaster.setFromCamera(mouse, camera);
        const intersects = raycaster.intersectObjects(scene.children, true);

        let clickedHorse = null;
        for (let intersect of intersects) {
            let obj = intersect.object;
            while (obj.parent && !obj.userData.clickable) obj = obj.parent;
            if (obj.userData.clickable) {
                clickedHorse = obj;
                break;
            }
        }

        if (clickedHorse && infoPanel) {
            const idx = clickedHorse.userData.index;
            const post = postsData[idx];
            if (post) {
                if (cardTitle) cardTitle.textContent = post.title;
                if (cardDesc) cardDesc.textContent = post.desc;
                if (cardLink) {
                    cardLink.href = post.slug ? `/blog/${post.slug}` : "#";
                    cardLink.style.display = post.slug
                        ? "inline-block"
                        : "none";
                }
                infoPanel.classList.remove("hidden");
            }
        }
    }

    function animate() {
        requestID = requestAnimationFrame(animate);
        const time = Date.now() * 0.001;

        // Carousel Physics
        if (carouselGroup) {
            carouselGroup.rotation.y +=
                (targetRotationY - carouselGroup.rotation.y) * 0.05;
            carouselGroup.rotation.y += rotationVelocity; // Subtle auto-rotation
        }

        // Bobbing & Mouse Hover
        raycaster.setFromCamera(mouse, camera);
        const intersects = raycaster.intersectObjects(scene.children, true);
        let hoveredObjId = -1;
        for (let int of intersects) {
            let o = int.object;
            while (o.parent && !o.userData.clickable) o = o.parent;
            if (o.userData.clickable) {
                hoveredObjId = o.userData.index;
                break;
            }
        }

        horseModules.forEach((mod, i) => {
            const horse = mod.children[1] as THREE.Group;
            const bob = Math.sin(time * 2.5 + i * 0.8) * 4.5;
            horse.position.y = 12 + bob;

            // Scale effect on hover
            const targetScale = hoveredObjId === i ? 1.2 : 1.0;
            horse.scale.lerp(
                new THREE.Vector3(targetScale, targetScale, targetScale),
                0.15,
            );
        });

        // Dynamic Camera Sway
        camera.position.x = Math.sin(time * 0.15) * 4;
        camera.lookAt(0, 14, 0);

        renderer.render(scene, camera);
    }

    function handleResize() {
        camera.aspect = window.innerWidth / window.innerHeight;
        camera.updateProjectionMatrix();
        renderer.setSize(window.innerWidth, window.innerHeight);
    }

    init();
</script>

