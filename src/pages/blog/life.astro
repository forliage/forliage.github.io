        cursor: grab;
    }
    #carousel-canvas-container:active {
        cursor: grabbing;
    }

    .loader {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: #ffd700;
        font-size: 1.5rem;
