---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import { getCollection } from "astro:content";

// 1. Fetch Blog Data
const allPosts = await getCollection("blog");
const lifeKeywords = [
    "welcome",
    "smile",
    "conversation",
    "hallucinate",
    "rbt",
    "cbo",
];
const lifePosts = allPosts
    .filter(
        (post) =>
            lifeKeywords.some((kw) => post.slug.toLowerCase().includes(kw)) ||
            post.data.category === "life" ||
            post.data.tags?.some((tag) => tag.toLowerCase() === "life"),
    )
    .slice(0, 12);

const paddedPosts = [...lifePosts];
while (paddedPosts.length < 12 && paddedPosts.length > 0) {
    paddedPosts.push(...lifePosts);
}
if (paddedPosts.length === 0) {
    for (let i = 0; i < 12; i++)
        paddedPosts.push({
            data: {
                title: `Moment ${i + 1}`,
                description: "A beautiful memory captured in time.",
            },
            slug: "",
        } as any);
}

const finalPosts = paddedPosts.slice(0, 12).map((p) => ({
    title: p.data.title,
    desc: p.data.description || "A slice of life reflection...",
    slug: p.slug,
}));
---

<Layout title="Reflections and Life - Liuye Zhao">
    <Header />
    <main class="carousel-container">
        <!-- UI Overlay -->
        <div class="ui-overlay">
            <div class="title-section">
                <h1>LIFE CAROUSEL</h1>
                <div class="subtitle">
                    Rotating Through Moments of Reflection
                </div>
            </div>

            <div id="info-panel" class="info-panel hidden">
                <button id="close-panel" class="close-btn">&times;</button>
                <div class="panel-content">
                    <h2 id="card-title">Moment Collected</h2>
                    <p id="card-desc">Description of the reflection...</p>
                    <a href="#" id="card-link" class="btn-read">READ ARTICLE</a>
                </div>
            </div>

            <div class="controls-hint">
                DRAG TO ROTATE • CLICK A HORSE TO EXPLORE
            </div>
        </div>

        <div id="loader" class="loader">Fired Up 3D Engine...</div>
        <!-- 3D Canvas -->
        <div
            id="carousel-canvas-container"
            data-posts={JSON.stringify(finalPosts)}
        >
        </div>
    </main>
</Layout>

<script>
    import * as THREE from "three";
    import { GLTFLoader } from "three/examples/jsm/loaders/GLTFLoader.js";
    import { RoomEnvironment } from "three/examples/jsm/environments/RoomEnvironment.js";

    let scene: THREE.Scene;
    let camera: THREE.PerspectiveCamera;
    let renderer: THREE.WebGLRenderer;
    let carouselGroup: THREE.Group;
    let horseModules: THREE.Group[] = [];
    let requestID: number;
    let raycaster = new THREE.Raycaster();
    let mouse = new THREE.Vector2();

    // Interaction states
    let isDragging = false;
    let prevMouseX = 0;
    let rotationVelocity = 0.005;
    let targetRotationY = 0;
    let currentRotationY = 0;

    const container = document.getElementById(
        "carousel-canvas-container",
    ) as HTMLDivElement;
    const loader = document.getElementById("loader");
    const postsData = JSON.parse(container?.dataset.posts || "[]");

    const infoPanel = document.getElementById("info-panel");
    const cardTitle = document.getElementById("card-title");
    const cardDesc = document.getElementById("card-desc");
    const cardLink = document.getElementById("card-link") as HTMLAnchorElement;
    const closeBtn = document.getElementById("close-panel");

    async function init() {
        if (!container) return;

        // 1. Scene Setup
        scene = new THREE.Scene();
        scene.background = new THREE.Color(0x020205);
        scene.fog = new THREE.FogExp2(0x020205, 0.012);

        camera = new THREE.PerspectiveCamera(
            50,
            window.innerWidth / window.innerHeight,
            0.1,
            1000,
        );
        camera.position.set(0, 20, 70);

        // 2. Renderer
        renderer = new THREE.WebGLRenderer({
            antialias: true,
            alpha: true,
            powerPreference: "high-performance",
        });
        renderer.setSize(window.innerWidth, window.innerHeight);
        renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
        renderer.shadowMap.enabled = true;
        renderer.shadowMap.type = THREE.PCFSoftShadowMap;
        renderer.toneMapping = THREE.ACESFilmicToneMapping;
        renderer.toneMappingExposure = 1.5;
        renderer.outputColorSpace = THREE.SRGBColorSpace;
        container.appendChild(renderer.domElement);

        // Environment for Reflections (Crucial for Glass/Metal)
        const pmremGenerator = new THREE.PMREMGenerator(renderer);
        scene.environment = pmremGenerator.fromScene(
            new RoomEnvironment(),
            0.04,
        ).texture;

        // 3. Lighting (Premium Studio Array)
        const sun = new THREE.DirectionalLight(0xffffff, 4.5);
        sun.position.set(40, 60, 40);
        sun.castShadow = true;
        scene.add(sun);

        const backlight = new THREE.PointLight(0xfff0dd, 1500, 120);
        backlight.position.set(-30, 20, -30);
        scene.add(backlight);

        const ambient = new THREE.AmbientLight(0xffffff, 1.2);
        scene.add(ambient);

        // Spotlights for specific sparkle
        const spot = new THREE.SpotLight(0xffd700, 2000, 150, Math.PI / 4, 0.5);
        spot.position.set(0, 80, 20);
        scene.add(spot);

        // 4. Load Models & Construct
        await createCarousel();
        if (loader) loader.style.display = "none";

        // 5. Events
        window.addEventListener("resize", handleResize);
        container.addEventListener("mousedown", onMouseDown);
        window.addEventListener("mousemove", onMouseMove);
        window.addEventListener("mouseup", onMouseUp);
        container.addEventListener("click", onDocumentClick);
        closeBtn?.addEventListener("click", () =>
            infoPanel?.classList.add("hidden"),
        );

        animate();
    }

    async function createCarousel() {
        carouselGroup = new THREE.Group();
        scene.add(carouselGroup);

        const gltfLoader = new GLTFLoader();
        const horseUrl =
            "https://raw.githubusercontent.com/mrdoob/three.js/master/examples/models/gltf/Horse.glb";

        let horseMesh: THREE.Mesh;
        try {
            const gltf = await gltfLoader.loadAsync(horseUrl);
            horseMesh = gltf.scene.children[0] as THREE.Mesh;
        } catch (e) {
            console.error("Failed to load horse model", e);
            return;
        }

        // --- Materials ---
        const goldMat = new THREE.MeshPhysicalMaterial({
            color: 0xffd700,
            metalness: 1.0,
            roughness: 0.1,
            clearcoat: 1.0,
            reflectivity: 1.0,
            envMapIntensity: 2.5,
        });

        const porcelainMat = new THREE.MeshPhysicalMaterial({
            color: 0xffffff,
            metalness: 0.0,
            roughness: 0.02,
            transmission: 0.35, // Glazed look
            thickness: 1.5,
            ior: 1.45,
            clearcoat: 1.0,
            clearcoatRoughness: 0.02,
            envMapIntensity: 2.2,
            specularIntensity: 1.0,
            specularColor: new THREE.Color(0xffffff),
        });

        // 1. Structure
        const pillar = new THREE.Mesh(
            new THREE.CylinderGeometry(5.5, 5.5, 45, 64),
            goldMat,
        );
        pillar.position.y = 15;
        carouselGroup.add(pillar);

        const platter = new THREE.Mesh(
            new THREE.CylinderGeometry(30, 30, 3, 64),
            goldMat,
        );
        platter.position.y = -2;
        carouselGroup.add(platter);

        const ceiling = new THREE.Mesh(
            new THREE.CylinderGeometry(30, 30, 2, 64),
            goldMat,
        );
        ceiling.position.y = 35;
        carouselGroup.add(ceiling);

        const roof = new THREE.Mesh(
            new THREE.ConeGeometry(31, 16, 64),
            goldMat,
        );
        roof.position.y = 44;
        carouselGroup.add(roof);

        // 2. Horse Instances
        const radius = 24;
        for (let i = 0; i < 12; i++) {
            const angle = (i / 12) * Math.PI * 2;
            const module = new THREE.Group();

            // Pole
            const pole = new THREE.Mesh(
                new THREE.CylinderGeometry(0.35, 0.35, 40, 8),
                goldMat,
            );
            pole.position.y = 15;
            module.add(pole);

            // Horse Container (for easier rotation)
            const horseContainer = new THREE.Group();

            // The Realistic Horse
            const horse = horseMesh.clone();
            horse.material = porcelainMat;
            horse.scale.set(0.065, 0.065, 0.065);
            horse.rotation.y = Math.PI; // FLIP head orientation as requested (Inverse)
            horse.userData = { index: i, clickable: true };
            horseContainer.add(horse);

            // Gilded Saddle (鎏金马鞍)
            const saddle = new THREE.Mesh(
                new THREE.TorusGeometry(1.2, 0.6, 12, 24, Math.PI),
                goldMat,
            );
            saddle.rotation.x = Math.PI / 2;
            saddle.position.set(0, 15, 0); // Roughly on back
            horseContainer.add(saddle);

            horseContainer.position.y = 15;
            module.add(horseContainer);

            // Positioning
            module.position.set(
                Math.cos(angle) * radius,
                0,
                Math.sin(angle) * radius,
            );
            // Face tangentially (perpendicular to radius)
            module.rotation.y = -angle + Math.PI / 2;

            carouselGroup.add(module);
            horseModules.push(module);
        }
    }

    function onMouseDown(e: MouseEvent) {
        isDragging = true;
        prevMouseX = e.clientX;
    }

    function onMouseMove(e: MouseEvent) {
        if (isDragging) {
            const dx = e.clientX - prevMouseX;
            targetRotationY += dx * 0.005;
            prevMouseX = e.clientX;
        }
        mouse.x = (e.clientX / window.innerWidth) * 2 - 1;
        mouse.y = -(e.clientY / window.innerHeight) * 2 + 1;
    }

    function onMouseUp() {
        isDragging = false;
    }

    function onDocumentClick() {
        raycaster.setFromCamera(mouse, camera);
        const intersects = raycaster.intersectObjects(
            carouselGroup.children,
            true,
        );

        let clickedHorse = null;
        for (let intersect of intersects) {
            let obj = intersect.object;
            while (obj.parent && !obj.userData.clickable) obj = obj.parent;
            if (obj.userData.clickable) {
                clickedHorse = obj;
                break;
            }
        }

        if (clickedHorse && infoPanel) {
            const idx = clickedHorse.userData.index;
            const post = postsData[idx];
            if (post) {
                if (cardTitle) cardTitle.textContent = post.title;
                if (cardDesc) cardDesc.textContent = post.desc;
                if (cardLink) {
                    cardLink.href = post.slug ? `/blog/${post.slug}` : "#";
                    cardLink.style.display = post.slug
                        ? "inline-block"
                        : "none";
                }
                infoPanel.classList.remove("hidden");
            }
        }
    }

    function animate() {
        requestID = requestAnimationFrame(animate);
        const time = Date.now() * 0.001;

        // Carousel Rotation
        if (!isDragging) {
            targetRotationY += rotationVelocity;
        }
        currentRotationY += (targetRotationY - currentRotationY) * 0.05;
        if (carouselGroup) {
            carouselGroup.rotation.y = currentRotationY;
        }

        // Bobbing & Mouse Interactions
        raycaster.setFromCamera(mouse, camera);
        const intersects = raycaster.intersectObjects(
            carouselGroup.children,
            true,
        );
        let hoveredIdx = -1;
        for (let int of intersects) {
            let o = int.object;
            while (o.parent && !o.userData.clickable) o = o.parent;
            if (o.userData.clickable) {
                hoveredIdx = o.userData.index;
                break;
            }
        }

        horseModules.forEach((mod, i) => {
            const container = mod.children[1] as THREE.Group;
            const bob = Math.sin(time * 3 + i * 0.8) * 6;
            container.position.y = 15 + bob;

            const tScale = hoveredIdx === i ? 1.25 : 1.0;
            container.scale.lerp(
                new THREE.Vector3(tScale, tScale, tScale),
                0.15,
            );
        });

        // Delicate camera sway
        camera.position.x = Math.sin(time * 0.1) * 8;
        camera.lookAt(0, 15, 0);

        renderer.render(scene, camera);
    }

    function handleResize() {
        camera.aspect = window.innerWidth / window.innerHeight;
        camera.updateProjectionMatrix();
        renderer.setSize(window.innerWidth, window.innerHeight);
    }

    init();
</script>

<style>
    .carousel-container {
        position: relative;
        width: 100vw;
        height: 100vh;
        overflow: hidden;
        background: #020205;
        font-family: "Outfit", sans-serif;
    }
    #carousel-canvas-container {
        cursor: grab;
    }
    #carousel-canvas-container:active {
        cursor: grabbing;
    }

    .loader {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: #ffd700;
        font-size: 1.5rem;
        letter-spacing: 12px;
        z-index: 100;
        text-transform: uppercase;
        animation: pulse 1.5s infinite;
    }
    @keyframes pulse {
        0%,
        100% {
            opacity: 0.3;
        }
        50% {
            opacity: 1;
        }
    }

    .ui-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 10;
        pointer-events: none;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 60px;
    }

    .title-section h1 {
        font-size: 5.5rem;
        margin: 0;
        letter-spacing: 20px;
        font-weight: 900;
        background: linear-gradient(to bottom, #fff 30%, #ffd700 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        filter: drop-shadow(0 0 30px rgba(255, 215, 0, 0.4));
    }
    .subtitle {
        color: #ffd700;
        letter-spacing: 10px;
        font-weight: 300;
        margin-top: 15px;
    }

    .info-panel {
        position: relative;
        background: rgba(5, 5, 10, 0.92);
        backdrop-filter: blur(50px);
        padding: 50px;
        border-radius: 45px;
        border: 1px solid rgba(255, 215, 0, 0.5);
        width: 520px;
        pointer-events: auto;
        box-shadow: 0 40px 120px rgba(0, 0, 0, 0.9);
        transition: all 0.8s cubic-bezier(0.19, 1, 0.22, 1);
    }
    .info-panel.hidden {
        transform: translateX(-150px) scale(0.9);
        opacity: 0;
        visibility: hidden;
    }

    .close-btn {
        position: absolute;
        top: 25px;
        right: 30px;
        background: none;
        border: none;
        color: #ffd700;
        font-size: 3rem;
        cursor: pointer;
        opacity: 0.5;
        transition: 0.3s;
    }
    .close-btn:hover {
        opacity: 1;
        transform: rotate(90deg);
    }

    .panel-content h2 {
        color: #ffd700;
        font-size: 2.5rem;
        margin-top: 0;
        margin-bottom: 20px;
    }
    .panel-content p {
        font-size: 1.15rem;
        color: rgba(255, 255, 255, 0.8);
        line-height: 1.8;
    }

    .btn-read {
        display: inline-block;
        margin-top: 35px;
        padding: 16px 45px;
        background: linear-gradient(135deg, #ffd700, #ffc000);
        color: #000;
        text-decoration: none;
        font-weight: 900;
        border-radius: 70px;
        transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
    }
    .btn-read:hover {
        transform: translateY(-5px) scale(1.05);
        box-shadow: 0 10px 30px rgba(255, 215, 0, 0.4);
    }

    .controls-hint {
        text-align: center;
        color: rgba(255, 255, 255, 0.3);
        font-size: 0.9rem;
        letter-spacing: 6px;
        text-transform: uppercase;
    }

    @media (max-width: 768px) {
        .title-section h1 {
            font-size: 2.2rem;
            letter-spacing: 5px;
        }
        .info-panel {
            width: calc(100vw - 40px);
            left: 0;
            padding: 30px;
        }
        .ui-overlay {
            padding: 30px;
        }
    }
</style>
