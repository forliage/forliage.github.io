---
import Layout from "../../../layouts/Layout.astro";
import Header from "../../../components/Header.astro";
import type { ImageMetadata } from "astro";

export async function getStaticPaths() {
    const courses = [
        { id: "anim", title: "Computer Animation" },
        { id: "cg", title: "Computer Graphics" },
        { id: "num", title: "Numerical Analysis" },
        { id: "img", title: "Digital Image Processing" },
        { id: "co", title: "Computer Organization" },
        { id: "x86", title: "x86 Assembly Language" },
        { id: "arch", title: "Computer Architecture" },
        { id: "db", title: "Database System" },
        { id: "la", title: "Linear Algebra" },
        { id: "toc", title: "Theory of Computation" },
        { id: "os", title: "Operation System" },
        { id: "net", title: "Computer Network" },
    ];

    return courses.map((course) => ({
        params: { courseId: course.id },
        props: { course },
    }));
}

interface Props {
    course: {
        id: string;
        title: string;
    };
}

const { course } = Astro.props;

// Load images and JSON from the hidden _data folder
const allCarouselImages = import.meta.glob<{ default: ImageMetadata }>(
    `/src/pages/blog/zju/**/_data/carousel/*.{png,jpg,jpeg}`,
    { eager: true },
);

const allLectureImages = import.meta.glob<{ default: ImageMetadata }>(
    `/src/pages/blog/zju/**/_data/lectures/*.{svg,png,jpg,jpeg}`,
    { eager: true },
);

const allLecturesJson = import.meta.glob<{
    lectures: Array<{ id: number; title: string; intro: string }>;
}>(`/src/pages/blog/zju/**/_data/lectures.json`, { eager: true });

// Filter for current course
const carouselSlides = Object.keys(allCarouselImages)
    .filter((path) => path.includes(`/${course.id}/_data/carousel/`))
    .map((path) => allCarouselImages[path].default.src)
    .sort();

const courseLectureImages = Object.keys(allLectureImages)
    .filter((path) => path.includes(`/${course.id}/_data/lectures/`))
    .reduce(
        (acc, path) => {
            acc[path] = allLectureImages[path];
            return acc;
        },
        {} as Record<string, { default: ImageMetadata }>,
    );

const lecturesJsonPath = Object.keys(allLecturesJson).find((path) =>
    path.includes(`/${course.id}/_data/lectures.json`),
);

const lecturesData = lecturesJsonPath
    ? allLecturesJson[lecturesJsonPath].lectures
    : [];

// Final lecture data with images
const lectures =
    lecturesData.length > 0
        ? lecturesData.map((lecture) => {
              const imagePath = Object.keys(courseLectureImages).find((p) =>
                  p.includes(`lecture${lecture.id}.`),
              );
              return {
                  ...lecture,
                  image: imagePath
                      ? courseLectureImages[imagePath].default.src
                      : null,
              };
          })
        : Array.from({ length: 10 }, (_, i) => {
              const id = i + 1;
              return {
                  id,
                  title: `Lecture ${id}: Topic Title`,
                  intro: "Introduction to this lecture topic.",
                  image: null,
              };
          });
---

<Layout title={`${course.title} - ZJU Lecture Notes`}>
    <Header />

    <main class="course-page">
        <div id="meteors-container"></div>

        <a href="/blog/zju" class="back-button">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
            >
                <line x1="19" y1="12" x2="5" y2="12"></line>
                <polyline points="12 19 5 12 12 5"></polyline>
            </svg>
            Back
        </a>

        <div class="carousel-container">
            <div id="carousel" class="carousel">
                {
                    carouselSlides.map((slide, index) => (
                        <div class="carousel-slide" data-index={index}>
                            <img src={slide} alt={`Slide ${index + 1}`} />
                        </div>
                    ))
                }
            </div>
        </div>

        <h1 class="course-title">{course.title}</h1>

        <div class="lecture-list">
            {
                lectures.map((lecture) => (
                    <a
                        href={`/blog/zju/${course.id}/lecture-${lecture.id}`}
                        class="lecture-card-link"
                    >
                        <div class="lecture-card">
                            <div class="lecture-image">
                                {lecture.image ? (
                                    <img
                                        src={lecture.image}
                                        alt={lecture.title}
                                    />
                                ) : (
                                    <div class="image-placeholder">
                                        L{lecture.id}
                                    </div>
                                )}
                            </div>
                            <div class="lecture-info">
                                <h3>{lecture.title}</h3>
                                <p>{lecture.intro}</p>
                            </div>
                        </div>
                    </a>
                ))
            }
        </div>
    </main>
</Layout>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const meteorsContainer = document.getElementById("meteors-container");
        if (meteorsContainer) {
            const createMeteor = () => {
                const meteor = document.createElement("div");
                meteor.classList.add("meteor");
                const startX = Math.random() * 100 + 20;
                const startY = Math.random() * 100 - 50;
                const width = Math.random() * 100 + 50;
                meteor.style.left = `${startX}%`;
                meteor.style.top = `${startY}%`;
                meteor.style.width = `${width}px`;
                const duration = Math.random() * 1 + 1;
                meteor.style.animationDuration = `${duration}s`;
                meteorsContainer.appendChild(meteor);
                setTimeout(() => meteor.remove(), duration * 1000);
            };
            setInterval(createMeteor, 300);
        }

        const carousel = document.getElementById("carousel");
        if (carousel && carousel.children.length > 1) {
            const slides = Array.from(carousel.children) as HTMLElement[];
            let currentIndex = 0;
            slides[0].classList.add("active");
            setInterval(() => {
                const nextIndex = (currentIndex + 1) % slides.length;
                slides[nextIndex].classList.add("active");
                slides[currentIndex].classList.add("exit");
                setTimeout(() => {
                    slides[currentIndex].classList.remove("active", "exit");
                    currentIndex = nextIndex;
                }, 800);
            }, 4000);
        }
    });
</script>

<style>
    :root {
        --text-color: #333;
        --highlight-color: #f075ae;
    }
    .course-page {
        min-height: 100vh;
        padding: 8rem 2rem 4rem;
        max-width: 1200px;
        margin: 0 auto;
        font-family:
            -apple-system, BlinkMacSystemFont, "SF Pro Text", "Segoe UI",
            Roboto, sans-serif;
        position: relative;
    }
    #meteors-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 0;
    }
    :global(.meteor) {
        position: absolute;
        height: 2px;
        background: linear-gradient(
            90deg,
            rgba(161, 140, 209, 1),
            rgba(161, 140, 209, 0)
        );
        transform: rotate(-45deg);
        filter: drop-shadow(0 0 6px rgba(161, 140, 209, 0.8));
        animation: shower linear;
    }
    @keyframes shower {
        0% {
            opacity: 0;
            transform: rotate(-45deg) translateX(0);
        }
        10% {
            opacity: 0.7;
        }
        100% {
            opacity: 0;
            transform: rotate(-45deg) translateX(-1000px);
        }
    }
    .back-button {
        position: fixed;
        top: 100px;
        left: 2rem;
        z-index: 100;
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 12px 20px;
        background: rgba(255, 240, 245, 0.7);
        backdrop-filter: blur(16px);
        border: 1px solid rgba(240, 117, 174, 0.3);
        border-radius: 50px;
        color: #f075ae;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    .back-button:hover {
        background: rgba(255, 240, 245, 0.9);
        transform: translateX(-4px);
    }
    .carousel-container {
        width: 100%;
        margin: 0 auto 3rem;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 400px;
    }
    .carousel {
        position: relative;
        width: 100%;
        display: flex;
        justify-content: center;
    }
    .carousel-slide {
        position: absolute;
        opacity: 0;
        transform: translateX(100%);
        transition: all 0.8s ease-in-out;
    }
    .carousel-slide.active {
        opacity: 1;
        transform: translateX(0);
        z-index: 2;
    }
    .carousel-slide.exit {
        opacity: 1;
        transform: translateX(-100%);
        z-index: 1;
    }
    .carousel-slide img {
        height: 400px;
        object-fit: contain;
        max-width: 100%;
    }
    .course-title {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 3rem;
        background: linear-gradient(120deg, #f075ae, #a18cd1);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        position: relative;
        z-index: 10;
        font-weight: 700;
    }
    .lecture-list {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        position: relative;
        z-index: 10;
    }
    .lecture-card-link {
        text-decoration: none;
        color: inherit;
        display: block;
    }
    .lecture-card {
        display: flex;
        align-items: center;
        gap: 2rem;
        padding: 1.5rem;
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(16px);
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.8);
        transition: all 0.3s ease;
    }
    .lecture-card:hover {
        transform: translateY(-4px);
        background: rgba(255, 255, 255, 0.95);
        box-shadow: 0 10px 40px rgba(240, 117, 174, 0.15);
    }
    .lecture-image {
        width: 200px;
        height: 150px;
        border-radius: 12px;
        overflow: hidden;
        background: #f5f5f7;
        flex-shrink: 0;
    }
    .lecture-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .image-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: #ccc;
        font-weight: 700;
    }
    .lecture-info h3 {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
        color: #333;
    }
    .lecture-info p {
        color: #666;
        line-height: 1.6;
    }
    @media (max-width: 768px) {
        .carousel-slide img {
            height: 250px;
        }
        .lecture-card {
            flex-direction: column;
            gap: 1rem;
        }
        .lecture-image {
            width: 100%;
            height: 200px;
        }
    }
</style>
