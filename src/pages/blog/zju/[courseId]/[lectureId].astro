        margin-bottom: 1.5rem;
    }

    .markdown-content ul,
    .markdown-content ol {
        margin-bottom: 1.5rem;
        padding-left: 2rem;
    }

    .markdown-content li {
        margin-bottom: 0.5rem;
    }

    .markdown-content code {
        background: #f5f5f7;
        padding: 0.2rem 0.4rem;
        border-radius: 4px;
        font-size: 0.9em;
