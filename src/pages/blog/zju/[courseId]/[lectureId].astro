---
import Layout from "../../../../layouts/Layout.astro";
import Header from "../../../../components/Header.astro";

export async function getStaticPaths() {
    const courses = [
        { id: "anim", title: "Computer Animation" },
        { id: "cg", title: "Computer Graphics" },
        { id: "num", title: "Numerical Analysis" },
        { id: "img", title: "Digital Image Processing" },
        { id: "co", title: "Computer Organization" },
        { id: "x86", title: "x86 Assembly Language" },
        { id: "arch", title: "Computer Architecture" },
        { id: "db", title: "Database System" },
        { id: "la", title: "Linear Algebra" },
        { id: "toc", title: "Theory of Computation" },
        { id: "os", title: "Operation System" },
        { id: "net", title: "Computer Network" },
    ];

    const allLecturesJson = import.meta.glob<{
        lectures: Array<{ id: number; title: string; intro: string }>;
    }>(`/src/pages/blog/zju/**/_data/lectures.json`, { eager: true });

    const paths = [];

    for (const course of courses) {
        const lecturesJsonPath = Object.keys(allLecturesJson).find((path) =>
            path.includes(`/${course.id}/_data/lectures.json`),
        );

        const lecturesData = lecturesJsonPath
            ? allLecturesJson[lecturesJsonPath].lectures
            : [];

        for (let i = 0; i < lecturesData.length; i++) {
            const lecture = lecturesData[i];
            const prevLecture = i > 0 ? lecturesData[i - 1] : null;
            const nextLecture =
                i < lecturesData.length - 1 ? lecturesData[i + 1] : null;

            paths.push({
                params: {
                    courseId: course.id,
                    lectureId: `lecture-${lecture.id}`,
                },
                props: {
                    course,
                    lecture,
                    lectureNumber: lecture.id,
                    prevLecture,
                    nextLecture,
                },
            });
        }
    }

    return paths;
}

interface Props {
    course: { id: string; title: string };
    lecture: { id: number; title: string; intro: string };
    lectureNumber: number;
    prevLecture: { id: number; title: string } | null;
    nextLecture: { id: number; title: string } | null;
}

const { course, lecture, lectureNumber, prevLecture, nextLecture } =
    Astro.props;

// Load markdown content
let markdownContent = "";
let headings: Array<{ depth: number; text: string; slug: string }> = [];

try {
    const mdModules = import.meta.glob("/src/pages/blog/zju/**/_data/*.md", {
        eager: true,
    });
    const mdPath = `/src/pages/blog/zju/${course.id}/_data/lecture-${lectureNumber}.md`;

    if (mdModules[mdPath]) {
        const mdModule = mdModules[mdPath] as any;
        markdownContent = mdModule.compiledContent
            ? mdModule.compiledContent()
            : "";

        // Extract headings for TOC
        const headingRegex = /<h([1-6])[^>]*id="([^"]*)"[^>]*>(.+?)<\/h\1>/g;
        let match;
        while ((match = headingRegex.exec(markdownContent)) !== null) {
            headings.push({
                depth: parseInt(match[1]),
                slug: match[2],
                text: match[3].replace(/<[^>]+>/g, ""),
            });
        }
    } else {
        markdownContent = `<p>Coming soon: Content for <code>lecture-${lectureNumber}.md</code></p>`;
    }
} catch (error) {
    markdownContent = `<p>Error loading lecture content.</p>`;
}
---

<Layout title={`${lecture.title} - ${course.title}`}>
    <Header />

    <main class="lecture-page">
        <aside class="sidebar">
            <div class="progress-container">
                <svg class="progress-ring" width="120" height="120">
                    <circle
                        class="progress-ring-bg"
                        stroke="#f0f0f0"
                        stroke-width="8"
                        fill="transparent"
                        r="52"
                        cx="60"
                        cy="60"></circle>
                    <circle
                        id="progress-circle"
                        class="progress-ring-circle"
                        stroke="#f075ae"
                        stroke-width="8"
                        fill="transparent"
                        r="52"
                        cx="60"
                        cy="60"></circle>
                </svg>
                <div class="progress-text">
                    <span id="progress-percent">0%</span>
                    <span class="progress-label">已读</span>
                </div>
            </div>

            <nav class="toc">
                <h3>目录</h3>
                <ul>
                    {
                        headings.map((h) => (
                            <li class={`toc-item toc-level-${h.depth}`}>
                                <a href={`#${h.slug}`}>{h.text}</a>
                            </li>
                        ))
                    }
                </ul>
            </nav>

            <a href={`/blog/zju/${course.id}`} class="back-link">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                >
                    <line x1="19" y1="12" x2="5" y2="12"></line>
                    <polyline points="12 19 5 12 12 5"></polyline>
                </svg>
                返回课程
            </a>
        </aside>

        <article class="content" id="main-content">
            <h1 class="lecture-title">{lecture.title}</h1>
            <div class="course-info">
                <span class="course-name">{course.title}</span>
                <span class="lecture-number">第 {lectureNumber} 讲</span>
            </div>

            <div class="markdown-content" set:html={markdownContent} />

            <div class="lecture-navigation">
                {
                    prevLecture ? (
                        <a
                            href={`/blog/zju/${course.id}/lecture-${prevLecture.id}`}
                            class="nav-btn prev"
                        >
                            <span class="nav-label">上一讲</span>
                            <span class="nav-title">{prevLecture.title}</span>
                        </a>
                    ) : (
                        <div class="nav-placeholder" />
                    )
                }

                {
                    nextLecture ? (
                        <a
                            href={`/blog/zju/${course.id}/lecture-${nextLecture.id}`}
                            class="nav-btn next"
                        >
                            <span class="nav-label">下一讲</span>
                            <span class="nav-title">{nextLecture.title}</span>
                        </a>
                    ) : (
                        <div class="nav-placeholder" />
                    )
                }
            </div>
        </article>
    </main>
</Layout>

<script>
    const updateProgress = () => {
        const content = document.getElementById("main-content");
        if (!content) return;
        const scrollTop = window.scrollY;
        const docHeight = content.scrollHeight;
        const winHeight = window.innerHeight;
        const scrollPercent =
            scrollTop / (docHeight - (winHeight > 0 ? winHeight : 1));
        const scrollPercentRounded = Math.min(
            Math.round(Math.max(0, scrollPercent) * 100),
            100,
        );

        const progressText = document.getElementById("progress-percent");
        if (progressText) progressText.textContent = `${scrollPercentRounded}%`;

        const circle = document.getElementById("progress-circle") as any;
        if (circle) {
            const radius = 52;
            const circumference = radius * 2 * Math.PI;
            circle.style.strokeDasharray = `${circumference} ${circumference}`;
            circle.style.strokeDashoffset = (
                circumference -
                (scrollPercentRounded / 100) * circumference
            ).toString();
        }
    };

    const updateActiveTOC = () => {
        const headings = document.querySelectorAll(
            ".markdown-content h1, .markdown-content h2, .markdown-content h3",
        );
        const tocLinks = document.querySelectorAll(".toc a");
        let activeId = "";
        headings.forEach((h) => {
            const rect = h.getBoundingClientRect();
            if (rect.top <= 120) activeId = h.id;
        });
        tocLinks.forEach((link) => {
            link.classList.toggle(
                "active",
                link.getAttribute("href") === `#${activeId}`,
            );
        });
    };

    window.addEventListener("scroll", () => {
        updateProgress();
        updateActiveTOC();
    });
    updateProgress();
    updateActiveTOC();
</script>

<style>
    :root {
        --highlight-color: #f075ae;
        --sidebar-width: 280px;
    }
    .lecture-page {
        display: flex;
        min-height: 100vh;
        padding-top: 80px;
        font-family:
            -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    }
    .sidebar {
        position: fixed;
        left: 0;
        top: 80px;
        width: var(--sidebar-width);
        height: calc(100vh - 80px);
        padding: 2rem 1.5rem;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border-right: 1px solid rgba(240, 117, 174, 0.1);
        overflow-y: auto;
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }
    .progress-container {
        position: relative;
        width: 120px;
        height: 120px;
        margin: 0 auto;
    }
    .progress-ring {
        transform: rotate(-90deg);
    }
    .progress-ring-circle {
        transition: stroke-dashoffset 0.3s ease;
    }
    .progress-text {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
    }
    #progress-percent {
        display: block;
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--highlight-color);
    }
    .progress-label {
        display: block;
        font-size: 0.875rem;
        color: #666;
    }
    .toc h3 {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }
    .toc ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    .toc-item a {
        display: block;
        padding: 0.5rem 0.75rem;
        color: #666;
        text-decoration: none;
        border-radius: 8px;
        font-size: 0.875rem;
        transition: all 0.2s ease;
    }
    .toc-item a:hover,
    .toc-item a.active {
        background: rgba(240, 117, 174, 0.1);
        color: var(--highlight-color);
    }
    .toc-item a.active {
        font-weight: 500;
    }
    .toc-level-2 {
        padding-left: 1rem;
    }
    .toc-level-3 {
        padding-left: 2rem;
    }
    .back-link {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1rem;
        background: rgba(240, 117, 174, 0.1);
        border-radius: 12px;
        color: var(--highlight-color);
        text-decoration: none;
        font-size: 0.875rem;
        font-weight: 500;
        transition: all 0.2s ease;
    }
    .back-link:hover {
        transform: translateX(-4px);
        background: rgba(240, 117, 174, 0.2);
    }
    .content {
        margin-left: var(--sidebar-width);
        flex: 1;
        max-width: 800px;
        padding: 2rem 4rem 4rem 4rem;
    }
    .lecture-title {
        font-size: 2.5rem;
        font-weight: 700;
        background: linear-gradient(120deg, #f075ae, #a18cd1);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 1rem;
    }
    .course-info {
        display: flex;
        gap: 1rem;
        margin-bottom: 3rem;
        padding-bottom: 1.5rem;
        border-bottom: 2px solid rgba(240, 117, 174, 0.1);
    }
    .course-name,
    .lecture-number {
        padding: 0.5rem 1rem;
        background: rgba(240, 117, 174, 0.1);
        border-radius: 20px;
        font-size: 0.875rem;
        color: var(--highlight-color);
        font-weight: 500;
    }
    .lecture-navigation {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
        margin-top: 5rem;
        padding-top: 3rem;
        border-top: 1px solid rgba(240, 117, 174, 0.1);
    }
    .nav-btn {
        display: flex;
        flex-direction: column;
        padding: 1.5rem;
        background: rgba(255, 255, 255, 0.8);
        border: 1px solid rgba(240, 117, 174, 0.1);
        border-radius: 16px;
        text-decoration: none;
        transition: all 0.3s ease;
    }
    .nav-btn:hover {
        background: rgba(255, 255, 255, 0.95);
        border-color: var(--highlight-color);
        transform: translateY(-4px);
        box-shadow: 0 10px 30px rgba(240, 117, 174, 0.1);
    }
    .nav-btn.next {
        text-align: right;
    }
    .nav-label {
        font-size: 0.875rem;
        color: #999;
        margin-bottom: 0.5rem;
    }
    .nav-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #333;
    }
    .nav-btn:hover .nav-title {
        color: var(--highlight-color);
    }
    .markdown-content {
        line-height: 1.8;
        color: #333;
        font-size: 1.1rem;
    }
    .markdown-content h1,
    .markdown-content h2,
    .markdown-content h3 {
        margin-top: 2.5rem;
        margin-bottom: 1rem;
        font-weight: 600;
        color: #222;
        scroll-margin-top: 100px;
    }
    .markdown-content p {
        margin-bottom: 1.5rem;
    }
    .markdown-content img {
        max-width: 100%;
        height: auto;
        border-radius: 12px;
        margin: 2rem 0;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }
    @media (max-width: 1024px) {
        .sidebar {
            display: none;
        }
        .content {
            margin-left: 0;
            padding: 2rem;
        }
    }
</style>
