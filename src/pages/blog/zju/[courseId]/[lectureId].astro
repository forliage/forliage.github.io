---
import Layout from "../../../../layouts/Layout.astro";
import Header from "../../../../components/Header.astro";

export async function getStaticPaths() {
    const courses = [
        { id: "anim", title: "Computer Animation" },
        { id: "cg", title: "Computer Graphics" },
        { id: "num", title: "Numerical Analysis" },
        { id: "img", title: "Digital Image Processing" },
        { id: "co", title: "Computer Organization" },
        { id: "x86", title: "x86 Assembly Language" },
        { id: "arch", title: "Computer Architecture" },
        { id: "db", title: "Database System" },
        { id: "la", title: "Linear Algebra" },
        { id: "toc", title: "Theory of Computation" },
        { id: "os", title: "Operation System" },
        { id: "net", title: "Computer Network" },
    ];

    const allLecturesJson = import.meta.glob<{
        lectures: Array<{ id: number; title: string; intro: string }>;
    }>(`/src/pages/blog/zju/**/_data/lectures.json`, { eager: true });

    const paths = [];

    for (const course of courses) {
        const lecturesJsonPath = Object.keys(allLecturesJson).find((path) =>
            path.includes(`/${course.id}/_data/lectures.json`),
        );

        const lecturesData = lecturesJsonPath
            ? allLecturesJson[lecturesJsonPath].lectures
            : [];

        for (let i = 0; i < lecturesData.length; i++) {
            const lecture = lecturesData[i];
            const prevLecture = i > 0 ? lecturesData[i - 1] : null;
            const nextLecture =
                i < lecturesData.length - 1 ? lecturesData[i + 1] : null;

            paths.push({
                params: {
                    courseId: course.id,
                    lectureId: `lecture-${lecture.id}`,
                },
                props: {
                    course,
                    lecture,
                    lectureNumber: lecture.id,
                    prevLecture,
                    nextLecture,
                },
            });
        }
    }

    return paths;
}

interface Props {
    course: { id: string; title: string };
    lecture: { id: number; title: string; intro: string };
    lectureNumber: number;
    prevLecture: { id: number; title: string } | null;
    nextLecture: { id: number; title: string } | null;
}

const { course, lecture, lectureNumber, prevLecture, nextLecture } =
    Astro.props;

// Load markdown content
let markdownContent = "";
let headings: Array<{ depth: number; text: string; slug: string }> = [];

try {
    const mdModules = import.meta.glob("/src/pages/blog/zju/**/_data/*.md", {
        eager: true,
    });
    const mdPath = `/src/pages/blog/zju/${course.id}/_data/lecture-${lectureNumber}.md`;

    if (mdModules[mdPath]) {
        const mdModule = mdModules[mdPath] as any;
        markdownContent = mdModule.compiledContent
            ? mdModule.compiledContent()
            : "";

        // Use getHeadings() for reliable TOC
        if (mdModule.getHeadings) {
            headings = mdModule.getHeadings().filter((h: any) => h.depth <= 3);
        } else {
            // Fallback to regex if getHeadings is missing
            const headingRegex =
                /<h([1-6])[^>]*id="([^"]*)"[^>]*>(.+?)<\/h\1>/g;
            let match;
            while ((match = headingRegex.exec(markdownContent)) !== null) {
                headings.push({
                    depth: parseInt(match[1]),
                    slug: match[2],
                    text: match[3].replace(/<[^>]+>/g, ""),
                });
            }
        }
    } else {
        markdownContent = `<p>Coming soon: Content for <code>lecture-${lectureNumber}.md</code></p>`;
    }
} catch (error) {
    markdownContent = `<p>Error loading lecture content.</p>`;
}
---

<Layout title={`${lecture.title} - ${course.title}`}>
    <Header />

    <main class="lecture-page">
        <aside class="sidebar">
            <div class="progress-container">
                <svg class="progress-ring" width="120" height="120">
                    <circle
                        class="progress-ring-bg"
                        stroke="#f0f0f0"
                        stroke-width="8"
                        fill="transparent"
                        r="52"
                        cx="60"
                        cy="60"></circle>
                    <circle
                        id="progress-circle"
                        class="progress-ring-circle"
                        stroke="#f075ae"
                        stroke-width="8"
                        fill="transparent"
                        r="52"
                        cx="60"
                        cy="60"></circle>
                </svg>
                <div class="progress-text">
                    <span id="progress-percent">0%</span>
                    <span class="progress-label">Read</span>
                </div>
            </div>

            <a href={`/blog/zju/${course.id}`} class="back-link">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                >
                    <line x1="19" y1="12" x2="5" y2="12"></line>
                    <polyline points="12 19 5 12 12 5"></polyline>
                </svg>
                Back to Course
            </a>

            <nav class="toc">
                <h3>Contents</h3>
                <ul>
                    {
                        headings.map((h) => (
                            <li class={`toc-item toc-level-${h.depth}`}>
                                <a href={`#${h.slug}`}>{h.text}</a>
                            </li>
                        ))
                    }
                </ul>
            </nav>
        </aside>

        <article class="content" id="main-content">
            <div class="article-inner">
                <header class="lecture-header">
                    <h1 class="lecture-title">{lecture.title}</h1>
                    <div class="course-badges">
                        <span class="badge course-badge">{course.title}</span>
                        <span class="badge lecture-badge"
                            >第 {lectureNumber} 讲</span
                        >
                    </div>
                </header>

                <div class="markdown-content" set:html={markdownContent} />

                <div class="lecture-navigation">
                    {
                        prevLecture ? (
                            <a
                                href={`/blog/zju/${course.id}/lecture-${prevLecture.id}`}
                                class="nav-btn prev"
                            >
                                <span class="nav-label">上一讲</span>
                                <span class="nav-title">
                                    {prevLecture.title}
                                </span>
                            </a>
                        ) : (
                            <div class="nav-placeholder" />
                        )
                    }

                    {
                        nextLecture ? (
                            <a
                                href={`/blog/zju/${course.id}/lecture-${nextLecture.id}`}
                                class="nav-btn next"
                            >
                                <span class="nav-label">下一讲</span>
                                <span class="nav-title">
                                    {nextLecture.title}
                                </span>
                            </a>
                        ) : (
                            <div class="nav-placeholder" />
                        )
                    }
                </div>
            </div>
        </article>
    </main>
</Layout>

<script>
    const updateProgress = () => {
        const content = document.getElementById("main-content");
        if (!content) return;
        const scrollTop = window.scrollY;
        const docHeight = content.scrollHeight;
        const winHeight = window.innerHeight;
        const scrollPercent =
            scrollTop / (docHeight - (winHeight > 0 ? winHeight : 1));
        const scrollPercentRounded = Math.min(
            Math.round(Math.max(0, scrollPercent) * 100),
            100,
        );

        const progressText = document.getElementById("progress-percent");
        if (progressText) progressText.textContent = `${scrollPercentRounded}%`;

        const circle = document.getElementById("progress-circle") as any;
        if (circle) {
            const radius = 52;
            const circumference = radius * 2 * Math.PI;
            circle.style.strokeDasharray = `${circumference} ${circumference}`;
            circle.style.strokeDashoffset = (
                circumference -
                (scrollPercentRounded / 100) * circumference
            ).toString();
        }
    };

    const updateActiveTOC = () => {
        const headings = document.querySelectorAll(
            ".markdown-content h1, .markdown-content h2, .markdown-content h3",
        );
        const tocLinks = document.querySelectorAll(".toc a");
        let activeId = "";
        headings.forEach((h) => {
            const rect = h.getBoundingClientRect();
            if (rect.top <= 120) activeId = h.id;
        });
        tocLinks.forEach((link) => {
            link.classList.toggle(
                "active",
                link.getAttribute("href") === `#${activeId}`,
            );
        });
    };

    window.addEventListener("scroll", () => {
        updateProgress();
        updateActiveTOC();
    });
    updateProgress();
    updateActiveTOC();
</script>

<style>
    :root {
        --highlight-color: #f075ae;
        --sidebar-width: 280px;
        --content-max-width: 1200px;
    }
    .lecture-page {
        display: grid;
        grid-template-columns: var(--sidebar-width) 1fr;
        min-height: 100vh;
        padding-top: 80px;
        background: #fafafa;
    }

    /* Sidebar */
    .sidebar {
        position: fixed;
        left: 0;
        top: 80px;
        width: var(--sidebar-width);
        height: calc(100vh - 80px);
        background: white;
        border-right: 1px solid rgba(0, 0, 0, 0.05);
        padding: 2.5rem 1.5rem;
        display: flex;
        flex-direction: column;
        gap: 2.5rem;
        overflow-y: auto;
        z-index: 50;
    }

    .progress-container {
        position: relative;
        width: 120px;
        height: 120px;
        margin: 0 auto;
    }
    .progress-ring {
        transform: rotate(-90deg);
    }
    .progress-ring-circle {
        transition: stroke-dashoffset 0.3s ease;
    }
    .progress-text {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
    }
    #progress-percent {
        display: block;
        font-size: 1.5rem;
        font-weight: 800;
        color: var(--highlight-color);
    }
    .progress-label {
        font-size: 0.8rem;
        color: #999;
    }

    .toc h3 {
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: #aaa;
        margin-bottom: 1.5rem;
        padding-left: 0.75rem;
    }
    .toc ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    .toc-item a {
        display: block;
        padding: 0.6rem 0.75rem;
        color: #555;
        text-decoration: none;
        font-size: 0.9rem;
        border-radius: 8px;
        transition: all 0.2s;
        line-height: 1.4;
    }
    .toc-item a:hover {
        background: #fef2f7;
        color: var(--highlight-color);
    }
    .toc-item a.active {
        background: var(--highlight-color);
        color: white;
        font-weight: 600;
        box-shadow: 0 4px 12px rgba(240, 117, 174, 0.2);
    }
    .toc-level-2 {
        padding-left: 1rem;
    }
    .toc-level-3 {
        padding-left: 2rem;
    }

    .back-link {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.8rem 1rem;
        background: #f8f8f8;
        border-radius: 12px;
        color: #666;
        text-decoration: none;
        font-size: 0.9rem;
        transition: all 0.2s;
    }
    .back-link:hover {
        background: #f0f0f0;
        color: #333;
        transform: translateX(-4px);
    }

    /* Content */
    .content {
        grid-column: 2;
        padding: 4rem 2rem;
        background: white;
        display: block; /* Remove flex centering, use margin auto on inner */
    }
    .article-inner {
        width: 100%;
        max-width: var(--content-max-width);
        margin: 0 auto;
    }

    .lecture-header {
        margin-bottom: 3rem;
        text-align: center;
        border-bottom: 1px solid #f0f0f0;
        padding-bottom: 2.5rem;
    }
    .lecture-title {
        font-size: 2.8rem;
        font-weight: 800;
        color: #111;
        margin-bottom: 1.2rem;
        line-height: 1.2;
    }
    .course-badges {
        display: flex;
        justify-content: center;
        gap: 0.75rem;
    }
    .badge {
        padding: 0.5rem 1.25rem;
        border-radius: 50px;
        font-size: 0.9rem;
        font-weight: 500;
        letter-spacing: 0.02em;
    }
    .course-badge {
        background: #f0f7ff;
        color: #007aff;
    }
    .lecture-badge {
        background: #fff0f5;
        color: #f075ae;
    }

    /* Markdown Styles */
    .markdown-content {
        font-size: 1.15rem;
        line-height: 1.9;
        color: #333;
    }
    .markdown-content :global(h1),
    .markdown-content :global(h2),
    .markdown-content :global(h3) {
        color: #111;
        margin: 4rem 0 1.5rem;
        font-weight: 800;
        scroll-margin-top: 100px;
    }
    .markdown-content :global(h1) {
        font-size: 2.25rem;
    }
    .markdown-content :global(h2) {
        font-size: 1.8rem;
        border-bottom: 2px solid #fef2f7;
        padding-bottom: 0.5rem;
    }
    .markdown-content :global(h3) {
        font-size: 1.4rem;
    }

    .markdown-content :global(p) {
        margin-bottom: 1.8rem;
    }
    .markdown-content :global(img) {
        max-width: 100%;
        height: auto;
        border-radius: 12px;
        margin: 2.5rem auto;
        display: block;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    }
    /* Specific scaling for GIFs */
    .markdown-content :global(img[src*=".gif"]) {
        max-width: 450px; /* Sensible default for standard md */
        margin: 2.5rem auto;
        border-radius: 8px;
    }
    /* Matrix and Math layout fixes */
    .markdown-content :global(.katex-display) {
        text-align: center;
        width: 100%;
    }
    .markdown-content :global(.katex-mathml),
    .markdown-content :global(.katex-html .sr-only) {
        display: none !important;
    }
    /* Matrix "squash" fix - Reset line-height and spacing for KaTeX */
    .markdown-content :global(.katex) {
        font-size: 1.15em;
        line-height: normal !important;
        text-indent: 0;
    }
    .markdown-content :global(.katex *) {
        line-height: normal !important;
        -webkit-font-smoothing: antialiased !important;
    }
    .markdown-content :global(.katex .vlist div) {
        white-space: nowrap;
    }
    .markdown-content :global(.katex-display > .katex) {
        white-space: normal;
    }

    /* Navigation */
    .lecture-navigation {
        display: flex;
        justify-content: space-between;
        gap: 2rem;
        margin-top: 5rem;
        padding-top: 3rem;
        border-top: 1px solid #f0f0f0;
    }
    .nav-btn {
        flex: 1;
        display: flex;
        flex-direction: column;
        padding: 1.2rem 1.8rem;
        background: #fcfcfc;
        border: 1px solid #eee;
        border-radius: 12px;
        text-decoration: none;
        transition: all 0.2s;
    }
    .nav-btn:hover {
        background: #fff;
        border-color: var(--highlight-color);
        transform: translateY(-2px);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    }
    .nav-btn.next {
        text-align: right;
    }
    .nav-label {
        font-size: 0.75rem;
        color: #999;
        margin-bottom: 0.3rem;
    }
    .nav-title {
        font-size: 1rem;
        font-weight: 600;
        color: #333;
    }
    .nav-placeholder {
        flex: 1;
    }

    @media (max-width: 1200px) {
        .sidebar {
            display: none;
        }
        .lecture-page {
            grid-template-columns: 1fr;
        }
        .content {
            grid-column: 1;
            padding: 2rem;
        }
    }
</style>
