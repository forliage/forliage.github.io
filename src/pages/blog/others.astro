<Layout title="Other Lecture Notes - Liuye Zhao">
    <Header />

    <main class="universe-container">
        <!-- SVG Filter Definitions for Realistic Noise -->
        <svg style="display: none;">
            <filter id="nebula-noise">
                <feTurbulence
                    type="fractalNoise"
                    baseFrequency="0.015"
                    numOctaves="3"
                    seed="5"></feTurbulence>
                <feDisplacementMap in="SourceGraphic" scale="100"
                ></feDisplacementMap>
            </filter>
        </svg>

        <!-- Galaxy Background (Scale handled via JS) -->
        <div id="galaxy-wrapper">
            <canvas id="galaxy-canvas"></canvas>
        </div>

        <!-- Realistic Nebulas (Smoke/Noise) -->
        <div id="floating-nebulas" class="floating-nebulas">
            <div class="nebula-cloud cloud-1"></div>
            <div class="nebula-cloud cloud-2"></div>
            <div class="nebula-cloud cloud-3"></div>
        </div>

        <!-- Solar System Tunnel -->
        <div id="solar-system" class="solar-system">
            <!-- Back Button -->
            <a href="/blog" class="back-button">
                <svg
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                >
                    <line x1="19" y1="12" x2="5" y2="12"></line>
                    <polyline points="12 19 5 12 12 5"></polyline>
                </svg>
                Back to Universe
            </a>

            <!-- Focus Reset Overlay -->
            <div id="focus-overlay" class="focus-overlay"></div>

            <div class="planets-wrapper" id="planets-wrapper">
                {
                    courses.map((course, index) => {
                        // WIDENED TUNNEL GRID
                        const side = index % 2 === 0 ? 1 : -1;

                        // Massive X-Spread (Â±35vw) to guarantee no overlap with center or text
                        const xOffset = side * 35; // Use VW units for responsiveness logic in JS or approximation here in PX? Let's use PX but large.
                        const xPx = side * 500; // 500px left/right

                        // Y Axis: Slight up/down
                        const yOffset =
                            index % 3 === 0 ? -150 : index % 3 === 1 ? 150 : 0;

                        // Z Axis: Massive 1000px separation
                        const zDepth = -(index * 1200 + 600);

                        return (
                            <div
                                class="planet-container"
                                id={`planet-${course.id}`}
                                data-x={xPx}
                                data-y={yOffset}
                                data-z={zDepth}
                                style={`
                                --planet-size: ${course.size}px;
                                --planet-color: ${course.color};
                                --secondary-color: ${course.secondaryColor};
                                --ring-color: ${course.ringColor};
                                --orbit-speed: ${course.orbitSpeed}s;
                                transform: translate3d(${xPx}px, ${yOffset}px, ${zDepth}px);
                            `}
                            >
                                <div class="planet-body">
                                    <div
                                        class={`planet-surface ${course.textureType}`}
                                    />
                                    <div class="planet-shadow" />
                                    <div class="planet-ring" />
                                </div>

                                <div
                                    class={`planet-info info-${side > 0 ? "right" : "left"}`}
                                >
                                    <h2 class="planet-title">{course.title}</h2>
                                    <p class="planet-intro">{course.intro}</p>
                                    <a
                                        href={`/blog/others/${course.id}`}
                                        class="visit-btn"
                                    >
                                        LAND ON PLANET
                                    </a>
                                </div>
                            </div>
                        );
                    })
                }
            </div>
        </div>

        <!-- Entrance Screen -->
        <div id="entrance-screen" class="entrance-screen">
            <h1 class="galaxy-title">Explore the Cosmos</h1>
            <button id="enter-btn" class="enter-button">ENTER GALAXY</button>
        </div>
    </main>
</Layout>

<script>
    /* --- Galaxy Particle Engine --- */
    const canvas = document.getElementById(
        "galaxy-canvas",
    ) as HTMLCanvasElement;
    const ctx = canvas.getContext("2d");
    let width = 0,
        height = 0;
    let particles: any[] = [];
    let animationId: number;

    const galaxyWrapper = document.getElementById("galaxy-wrapper");

    function resize() {
        if (!canvas) return;
        width = canvas.width = window.innerWidth;
        height = canvas.height = window.innerHeight;
    }

    function initGalaxy() {
        if (!width) return;
        // Restore MASSIVE scale
        const maxRadius = Math.max(width, height) * 1.5;

        particles = [];
        for (let i = 0; i < 4000; i++) {
            const spin = (i / 4000) * 3 * Math.PI * 2;
            const distance = Math.pow(Math.random(), 1.5) * maxRadius;

            let color = `rgba(255, 255, 255, ${Math.random()})`;
            if (distance > maxRadius * 0.1)
                color = `rgba(200, 220, 255, ${Math.random() * 0.9})`;
            if (distance > maxRadius * 0.4)
                color = `rgba(180, 100, 255, ${Math.random() * 0.7})`;

            particles.push({
                angle: spin,
                radius: distance,
                speed:
                    (0.0002 + Math.random() * 0.0005) / (distance * 0.0005 + 1),
                size: Math.random() * 2.5,
                color: color,
            });
        }
    }

    function animateGalaxy() {
        if (!ctx) return;
        ctx.fillStyle = "#020205";
        ctx.fillRect(0, 0, width, height);

        ctx.save();
        ctx.translate(width / 2, height / 2);
        ctx.scale(1, 0.6);

        particles.forEach((p) => {
            p.angle += p.speed;
            const x = Math.cos(p.angle) * p.radius;
            const y = Math.sin(p.angle) * p.radius;

            ctx.beginPath();
            ctx.fillStyle = p.color;
            ctx.arc(x, y, p.size, 0, Math.PI * 2);
            ctx.fill();
        });

        ctx.restore();
        animationId = requestAnimationFrame(animateGalaxy);
    }

    if (canvas) {
        window.addEventListener("resize", () => {
            resize();
            initGalaxy();
        });
        resize();
        initGalaxy();
        animateGalaxy();
    }

    /* --- Interaction & Event Handling --- */
    const enterBtn = document.getElementById("enter-btn");
    const entranceScreen = document.getElementById("entrance-screen");
    const solarSystem = document.getElementById("solar-system");
    const floatingNebulas = document.getElementById("floating-nebulas");

    function startJourney() {
        if (
            !entranceScreen ||
            !galaxyWrapper ||
            !solarSystem ||
            !floatingNebulas
        )
            return;

        // 1. Animate Out
        entranceScreen.style.opacity = "0";

        // Massive Zoom Out (Scale Up)
        galaxyWrapper.style.transition =
            "transform 2.5s cubic-bezier(0.7, 0, 0.3, 1), opacity 2.5s ease";
        galaxyWrapper.style.transform = "scale(5) rotate(90deg)";
        galaxyWrapper.style.opacity = "0";

        // 2. Remove Overlays from Layout (The "Unkillable" Fix)
        // Ensure nothing blocks clicks after animation
        setTimeout(() => {
            entranceScreen.style.display = "none";
            galaxyWrapper.style.display = "none";

            solarSystem.style.opacity = "1";
            solarSystem.style.pointerEvents = "auto";
            floatingNebulas.style.opacity = "1";

            const planets = document.querySelectorAll(".planet-container");
            planets.forEach((p, i) => {
                setTimeout(() => {
                    p.classList.add("visible");
                }, i * 150);
            });
        }, 1200); // Shorter than transition to ensure overlapping interactions work sooner
    }

    if (enterBtn) {
        enterBtn.addEventListener("click", startJourney);
    }

    /* --- Focus & Click Logic --- */
    const planetsWrapper = document.getElementById("planets-wrapper");
    const focusOverlay = document.getElementById("focus-overlay");

    if (planetsWrapper && focusOverlay) {
        planetsWrapper.addEventListener("click", (e) => {
            const target = e.target as HTMLElement;
            if (target.closest("a")) return;

            const planetContainer = target.closest(
                ".planet-container",
            ) as HTMLElement;

            if (planetContainer) {
                const x = parseFloat(planetContainer.dataset.x || "0");
                const y = parseFloat(planetContainer.dataset.y || "0");
                const z = parseFloat(planetContainer.dataset.z || "0");

                document.body.classList.add("focus-mode");
                focusOverlay.classList.add("active");

                // Move wrapper to center target
                // Z offset + 500 to bring close
                planetsWrapper.style.transform = `translate3d(${-x}px, ${-y}px, ${-z + 500}px)`;

                document
                    .querySelectorAll(".planet-container")
                    .forEach((p) => p.classList.remove("focused"));
                planetContainer.classList.add("focused");
            }
        });

        const resetFocus = () => {
            document.body.classList.remove("focus-mode");
            focusOverlay.classList.remove("active");
            planetsWrapper.style.transform = "none";
            document
                .querySelectorAll(".planet-container")
                .forEach((p) => p.classList.remove("focused"));
        };

        focusOverlay.addEventListener("click", resetFocus);
    }
</script>

<style>
    :root {
        --space-bg: #020205;
    }

    .universe-container {
        position: relative;
        width: 100vw;
        height: 100vh;
        background-color: var(--space-bg);
        overflow: hidden;
        font-family: "Outfit", sans-serif;
    }

    #galaxy-wrapper {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
        pointer-events: none;
        transform-origin: center center;
    }
    #galaxy-canvas {
        width: 100%;
        height: 100%;
    }

    /* REALISTIC NEBULAS (SVG Noise) */
    .floating-nebulas {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 5;
        pointer-events: none;
        opacity: 0;
        transition: opacity 2s ease;
    }

    .nebula-cloud {
        position: absolute;
        border-radius: 50%;
        filter: url(#nebula-noise) blur(30px); /* The Magic: Noise Filter */
        opacity: 0.6;
        animation: breath 15s infinite alternate ease-in-out;
        mix-blend-mode: screen; /* Lighten effect */
    }

    .cloud-1 {
        top: 20%;
        left: 10%;
        width: 600px;
        height: 500px;
        background: radial-gradient(
            circle,
            rgba(50, 200, 255, 0.5),
            transparent 70%
        );
    }
    .cloud-2 {
        bottom: 10%;
        right: 5%;
        width: 700px;
        height: 600px;
        background: radial-gradient(
            circle,
            rgba(255, 50, 150, 0.4),
            transparent 70%
        );
        animation-delay: -5s;
    }
    .cloud-3 {
        top: 40%;
        left: 40%;
        width: 500px;
        height: 500px;
        background: radial-gradient(
            circle,
            rgba(150, 50, 255, 0.4),
            transparent 70%
        );
        animation-delay: -10s;
    }

    @keyframes breath {
        0% {
            transform: scale(1) rotate(0deg);
            opacity: 0.5;
        }
        100% {
            transform: scale(1.1) rotate(5deg);
            opacity: 0.8;
        }
    }

    /* Solar System Tunnel */
    .solar-system {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 10;
        opacity: 0;
        pointer-events: none; /* Initially none */
        transition: opacity 1s ease;
        perspective: 1500px;
        overflow-y: scroll; /* Allow deep scroll */
        overflow-x: hidden;
    }

    .planets-wrapper {
        position: relative;
        min-height: 500vh; /* Extremely Deep tunnel */
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding-top: 50vh;
        transform-style: preserve-3d;
        transition: transform 1.2s cubic-bezier(0.2, 0.8, 0.2, 1);
    }

    /* Planet Item */
    .planet-container {
        position: absolute;
        left: 50%;
        top: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        width: auto;
        height: auto;
        opacity: 0;
        transition:
            opacity 1s ease,
            filter 0.5s ease;
        pointer-events: auto !important; /* Force Clickable */
        cursor: pointer;
        transform-style: preserve-3d;
    }

    .planet-container.visible {
        opacity: 1;
    }

    /* Focus Mode States */
    body.focus-mode .planet-container:not(.focused) {
        filter: blur(15px) grayscale(0.9);
        opacity: 0.1;
        pointer-events: none !important;
    }
    body.focus-mode .planet-container.focused {
        z-index: 2000;
    }

    .focus-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.85);
        z-index: 99;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.5s ease;
        backdrop-filter: blur(8px);
    }
    .focus-overlay.active {
        opacity: 1;
        pointer-events: auto;
    }

    /* Info positioning - Strict Side */
    .planet-info {
        position: absolute;
        width: 300px;
        padding: 25px;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(20px);
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.15);
        color: #fff;
        opacity: 0.9;
        transition:
            transform 0.3s ease,
            opacity 0.3s ease;
    }

    .info-right {
        left: 160%;
        text-align: left;
        border-left: 4px solid var(--planet-color);
    }
    .info-left {
        right: 160%;
        text-align: right;
        border-right: 4px solid var(--planet-color);
        direction: rtl;
    }
    .info-left * {
        direction: ltr;
    }

    .planet-title {
        font-size: 1.6rem;
        color: var(--planet-color);
        margin: 0 0 0.5rem 0;
        text-shadow: 0 0 20px var(--ring-color);
    }
    .planet-intro {
        font-size: 1rem;
        color: #ddd;
        line-height: 1.6;
        margin-bottom: 1.2rem;
    }

    .visit-btn {
        display: inline-block;
        padding: 12px 24px;
        border: 2px solid var(--planet-color);
        color: var(--planet-color);
        text-decoration: none;
        font-size: 0.9rem;
        letter-spacing: 2px;
        font-weight: 800;
        border-radius: 6px;
        pointer-events: auto;
    }
    .visit-btn:hover {
        background: var(--planet-color);
        color: #000;
        box-shadow: 0 0 30px var(--planet-color);
    }

    /* Planet & Ring */
    .planet-body {
        width: var(--planet-size);
        height: var(--planet-size);
        position: relative;
        transform-style: preserve-3d;
        transform: rotateX(20deg) rotateZ(10deg);
        transition: transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .planet-container:hover .planet-body {
        transform: rotateX(20deg) rotateZ(10deg) scale(1.2);
    }

    .planet-surface {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        background: var(--planet-color);
        overflow: hidden;
        box-shadow:
            inset -30px -30px 80px rgba(0, 0, 0, 0.9),
            inset 15px 15px 50px rgba(255, 255, 255, 0.5),
            0 0 40px var(--planet-color);
    }

    /* Textures */
    .planet-surface.striped {
        background: repeating-linear-gradient(
            0deg,
            var(--planet-color),
            var(--planet-color) 15px,
            var(--secondary-color) 15px,
            var(--secondary-color) 25px
        );
        background-size: 100% 200%;
        animation: spin var(--orbit-speed) linear infinite;
    }
    .planet-surface.gaseous {
        background:
            radial-gradient(
                circle at 30% 30%,
                transparent,
                rgba(255, 255, 255, 0.4)
            ),
            var(--planet-color);
        filter: blur(2px);
        box-shadow: inset 0 0 60px var(--secondary-color);
    }
    .planet-surface.cratered {
        background-image:
            radial-gradient(
                circle at 20% 40%,
                var(--secondary-color) 8%,
                transparent 9%
            ),
            radial-gradient(
                circle at 70% 70%,
                var(--secondary-color) 12%,
                transparent 13%
            );
        background-color: var(--planet-color);
        background-size: 200% 100%;
        animation: spin var(--orbit-speed) linear infinite;
    }

    @keyframes spin {
        0% {
            background-position: 0% 0%;
        }
        100% {
            background-position: 200% 0%;
        }
    }

    .planet-ring {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 180%;
        height: 180%;
        border-radius: 50%;
        border: 35px solid var(--ring-color);
        border-top-color: transparent;
        border-bottom-color: rgba(255, 255, 255, 0.5);
        transform: translate(-50%, -50%) rotateX(75deg) rotateY(10deg);
        box-shadow: 0 0 30px var(--ring-color);
        pointer-events: none;
    }

    /* UI Overlay */
    .entrance-screen {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        z-index: 100;
        transition: opacity 0.8s;
        pointer-events: auto;
    }
    .galaxy-title {
        font-size: 5rem;
        color: #fff;
        text-shadow: 0 0 60px rgba(255, 255, 255, 0.6);
        text-transform: uppercase;
        font-weight: 900;
        letter-spacing: 20px;
        text-align: center;
        margin-bottom: 3rem;
    }
    .enter-button {
        padding: 20px 60px;
        font-size: 1.5rem;
        background: rgba(0, 0, 0, 0.5);
        border: 2px solid #fff;
        color: #fff;
        border-radius: 60px;
        cursor: pointer;
        text-transform: uppercase;
        letter-spacing: 6px;
        transition: all 0.3s;
    }
    .enter-button:hover {
        background: #fff;
        color: #000;
        box-shadow: 0 0 50px #fff;
        transform: scale(1.1);
    }

    .back-button {
        position: fixed;
        top: 40px;
        left: 40px;
        z-index: 200;
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 24px;
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 30px;
        color: #fff;
        text-decoration: none;
        backdrop-filter: blur(10px);
    }

    @media (max-width: 768px) {
        .planets-wrapper {
            padding-top: 150px;
            min-height: 100vh;
        }
        .planet-container {
            position: relative;
            left: auto;
            top: auto;
            transform: none !important;
            flex-direction: column;
            margin-bottom: 120px;
            pointer-events: auto !important;
        }
        .planet-info {
            position: relative;
            left: auto;
            right: auto;
            top: 20px;
            width: 90%;
            text-align: center;
            border: none;
            border-bottom: 3px solid var(--planet-color);
        }
        .info-left {
            direction: ltr;
        }
    }
</style>
