        background-size: 200% 100%;
        animation: surfaceSpin var(--orbit-speed, 20s) linear infinite;
    }
    .planet-surface.gaseous {
        background: linear-gradient(
            175deg,
            var(--planet-color) 0%,
            var(--secondary-color) 25%,
            var(--planet-color) 50%,
            var(--secondary-color) 75%,
            var(--planet-color) 100%
        );
        background-size: 250% 100%;
        animation: surfaceSpin var(--orbit-speed, 20s) linear infinite;
    }
    .planet-surface.cratered {
        background:
            radial-gradient(
                circle at 30% 30%,
                var(--secondary-color) 12%,
                transparent 25%
            ),
            radial-gradient(
                circle at 75% 75%,
                var(--secondary-color) 18%,
                transparent 30%
            ),
            var(--planet-color);
        background-size: 200% 100%;
        animation: surfaceSpin var(--orbit-speed, 20s) linear infinite;
    }
    @keyframes surfaceSpin {
        0% {
            background-position: 0% 0%;
        }
        100% {
            background-position: 200% 0%;
        }
    }

    .planet-shadow {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(
            circle at 85% 15%,
            transparent 15%,
            rgba(0, 0, 0, 0.9) 85%
