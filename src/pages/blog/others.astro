            <!-- Focus Reset Overlay -->
            <div id="focus-overlay" class="focus-overlay"></div>

            <div class="planets-wrapper" id="planets-wrapper">
                {courses.map((course, index) => {
                    // Calculate random positions logic in CSS or inline style for 3D depth
                    // We distribute them in a semi-circle or zig-zag 3D patterns
                    // Using simple alternating offset for demonstration
                    const xOffset = (index % 2 === 0 ? 1 : -1) * (150 + Math.random() * 100);
                    const zDepth = -index * 400; // Receding further into distance
                    const yOffset = (Math.random() - 0.5) * 300;
                    
                    return (
                        <div 
                            class="planet-container" 
                            id={`planet-${course.id}`}
                            data-x={xOffset}
                            data-y={yOffset}
                            data-z={zDepth}
                            style={`
                                --planet-size: ${course.size}px;
                                --planet-color: ${course.color};
                                --secondary-color: ${course.secondaryColor};
                                --ring-color: ${course.ringColor};
                                --orbit-speed: ${course.orbitSpeed}s;
                                transform: translate3d(${xOffset}px, ${yOffset}px, ${zDepth}px);
                            `}
                        >
                            <div class="planet-body">
                                <div class={`planet-surface ${course.textureType}`}></div>
                                <div class="planet-shadow"></div>
                                <div class="planet-ring"></div>
                            </div>
                            
                            <div class="planet-info">
                                <h2 class="planet-title">{course.title}</h2>
                                <p class="planet-intro">{course.intro}</p>
                                <a href={`/blog/others/${course.id}`} class="visit-btn">LAND ON PLANET</a>
                            </div>
                        </div>
                    );
                })}
            </div>
        </div>
    </main>
</Layout>

<script>
    /* --- Galaxy Particle Engine --- */
    const canvas = document.getElementById('galaxy-canvas') as HTMLCanvasElement;
    const ctx = canvas.getContext('2d');

    let width = 0;
    let height = 0;
    let particles: Particle[] = [];
    const particleCount = 4000; // Increased count

    interface Particle {
        x: number;
        y: number;
        z: number; // Not used for canvas 2d projection here but for logic
        size: number;
        color: string;
        angle: number;
        radius: number; // Distance from center
        speed: number;
    }

    function resize() {
        width = canvas.width = window.innerWidth;
        height = canvas.height = window.innerHeight;
    }

    function initGalaxy() {
        particles = [];
        const maxRadius = Math.max(width, height) * 0.8; // Larger Galaxy
        
        for (let i = 0; i < particleCount; i++) {
            // Spiral Galaxy Logic
            // r = a + b * theta
            const armCount = 2; // Two main arms visually cleaner
            const spin = i / particleCount * armCount * Math.PI * 2 + Math.random() * 0.5;
            
            // Logarithmic distribution for density at center
            const randomDist = Math.pow(Math.random(), 1.5);
            const distance = randomDist * maxRadius; 
            
            // Add randomness to cloud width (arm thickness)
            const armWidth = Math.max(20, distance * 0.3); // Wider arms at edge
            const randomOffset = (Math.random() - 0.5) * armWidth * 2; 

            // Color gradient based on distance
            // Center = Hot/White/Cyan, Edge = Purple/Pink/Blue
            let color;
            if (distance < maxRadius * 0.2) {
                // Core
                color = `rgba(255, 250, 240, ${0.8 + Math.random() * 0.2})`;
            } else if (distance < maxRadius * 0.5) {
                // Mid
                color = `rgba(100, 200, 255, ${0.6 + Math.random() * 0.2})`;
            } else {
                // Edge
                color = `rgba(200, 100, 255, ${0.4 + Math.random() * 0.3})`;
            }

            particles.push({
                x: 0, y: 0, z: 0,
                angle: spin,
                radius: distance + randomOffset,
                speed: (0.0005 + Math.random() * 0.001) / (distance * 0.001 + 1), 
                size: Math.random() * 2 + (1 - randomDist) * 2, // Larger stars in center
                color: color
            });
        }
    }

    function animateGalaxy() {
        if (!ctx) return;
        
        ctx.fillStyle = '#050510'; // Deep space fade
        ctx.fillRect(0, 0, width, height);
        
        ctx.save();
        ctx.translate(width / 2, height / 2);

        // Tilt the galaxy for 3D effect
        ctx.scale(1, 0.5); 

        particles.forEach(p => {
            p.angle += p.speed;
            
            const x = Math.cos(p.angle) * p.radius;
            const y = Math.sin(p.angle) * p.radius;

            ctx.beginPath();
            ctx.fillStyle = p.color;
            ctx.arc(x, y, p.size, 0, Math.PI * 2);
            ctx.fill();
        });

        ctx.restore();
        requestAnimationFrame(animateGalaxy);
    }

    window.addEventListener('resize', () => { resize(); initGalaxy(); });
    
    // Init Visuals
    if (canvas) {
        resize();
        initGalaxy();
        animateGalaxy();
    }

    /* --- Interaction Logic --- */
    const enterBtn = document.getElementById('enter-btn');
    const entranceScreen = document.getElementById('entrance-screen');
    const solarSystem = document.getElementById('solar-system');
    const galaxyCanvas = document.getElementById('galaxy-canvas');
    const floatingNebulas = document.getElementById('floating-nebulas');

    if (enterBtn && entranceScreen && solarSystem && galaxyCanvas && floatingNebulas) {
        enterBtn.addEventListener('click', () => {
             // 1. Fade out entrance text
             entranceScreen.style.opacity = '0';
             entranceScreen.style.pointerEvents = 'none';

             // 2. Zoom/Dissolve Galaxy
             galaxyCanvas.style.transition = 'transform 2s ease-in, opacity 2s ease';
             galaxyCanvas.style.transform = 'scale(4) rotate(90deg)'; // Much larger zoom
             galaxyCanvas.style.opacity = '0';

             // 3. Show Solar System & Nebulas
             setTimeout(() => {
                 solarSystem.style.opacity = '1';
                 solarSystem.style.pointerEvents = 'auto';
                 floatingNebulas.style.opacity = '1';
                 
                 // Trigger entrance animations for planets
                 const planets = document.querySelectorAll('.planet-container');
                 planets.forEach((p, i) => {
                     setTimeout(() => {
                         p.classList.add('visible');
                     }, i * 200);
                 });
             }, 1000);
        });
    }

    /* --- Focus Logic --- */
    const planetsWrapper = document.getElementById('planets-wrapper');
    const focusOverlay = document.getElementById('focus-overlay');
    const planets = document.querySelectorAll('.planet-container');

    if (planetsWrapper && focusOverlay) {
        planets.forEach(planet => {
            planet.addEventListener('click', (e) => {
                // Don't trigger if clicking link
                if ((e.target as HTMLElement).tagName === 'A') return;

                const target = e.currentTarget as HTMLElement;
                const x = parseFloat(target.dataset.x || '0');
                const y = parseFloat(target.dataset.y || '0');
                const z = parseFloat(target.dataset.z || '0');

                // Enter Focus Mode
                document.body.classList.add('focus-mode');
                focusOverlay.classList.add('active');

                // Center the wrapper on this planet
                // We need to negate the planet's position to bring it to (0,0,0) center of wrapper
                // Then apply a large forward transition to bring it close to camera
                planetsWrapper.style.transform = `
                    translate3d(${-x}px, ${-y}px, ${-z + 300}px) 
                `;

                // Add focused class to target, remove from others
                planets.forEach(p => p.classList.remove('focused'));
                target.classList.add('focused');
            });
        });

        // Click overlay to exit focus
        focusOverlay.addEventListener('click', () => {
            document.body.classList.remove('focus-mode');
            focusOverlay.classList.remove('active');
            planetsWrapper.style.transform = 'none';
            planets.forEach(p => p.classList.remove('focused'));
        });
    }
</script>

<style>
    :root {
        --space-bg: #050510;
        --star-color: #ffffff;
    }

    .universe-container {
        position: relative;
        width: 100vw;
        height: 100vh;
        background-color: var(--space-bg);
        overflow: hidden; /* Hide overflow for immersive feel */
        font-family: 'Outfit', sans-serif;
    }

    /* Galaxy Canvas */
    #galaxy-canvas {
        position: absolute;
        top: 0; left: 0;
        width: 100%; height: 100%;
        z-index: 1;
    }

    /* Nebula Layers (CSS Clouds) */
    .nebula-layer {
        position: absolute;
        top: 0; left: 0;
        width: 200%; height: 200%;
        background-image: 
            radial-gradient(circle at 50% 50%, rgba(76, 29, 149, 0.1), transparent 60%),
            radial-gradient(circle at 20% 80%, rgba(219, 39, 119, 0.05), transparent 50%);
        filter: blur(80px);
        z-index: 2;
        animation: drift 60s infinite linear;
        opacity: 0.5;
        pointer-events: none;
    }
    
    .layer-2 {
        animation-direction: reverse;
        animation-duration: 90s;
        background-image: 
            radial-gradient(circle at 80% 20%, rgba(56, 189, 248, 0.08), transparent 50%);
    }

    /* Floating Light Nebulas (Foreground) */
    .floating-nebulas {
        position: absolute; top: 0; left: 0; width: 100%; height: 100%;
        z-index: 3; pointer-events: none; opacity: 0;
        transition: opacity 2s ease;
    }

    .nebula-cloud {
        position: absolute;
        border-radius: 50%;
        filter: blur(60px);
        opacity: 0.4;
        animation: floatNebula 20s infinite ease-in-out alternate;
    }

    .cloud-1 {
        top: 20%; left: 20%; width: 400px; height: 300px;
        background: radial-gradient(circle, rgba(100, 200, 255, 0.3), transparent 70%);
    }
    .cloud-2 {
        bottom: 30%; right: 15%; width: 500px; height: 400px;
        background: radial-gradient(circle, rgba(255, 100, 200, 0.2), transparent 70%);
        animation-delay: -5s;
    }
    .cloud-3 {
        top: 60%; left: 40%; width: 300px; height: 300px;
        background: radial-gradient(circle, rgba(150, 100, 255, 0.25), transparent 70%);
        animation-delay: -10s;
    }

    @keyframes floatNebula {
        0% { transform: translate(0, 0) scale(1); }
        100% { transform: translate(30px, -20px) scale(1.1); }
    }

    @keyframes drift {
        0% { transform: translate(0, 0); }
        50% { transform: translate(-10%, -5%); }
        100% { transform: translate(0, 0); }
    }

    /* Entrance Screen */
    .entrance-screen {
        position: absolute;
        top: 0; left: 0; w-100%; h-100%;
        display: flex; flex-direction: column; 
        justify-content: center; align-items: center;
        z-index: 100;
        width: 100%; height: 100%;
        transition: opacity 1s ease;
    }

    .galaxy-title {
        font-size: 3.5rem;
        color: #fff;
        text-shadow: 0 0 30px rgba(255, 255, 255, 0.8);
        margin-bottom: 3rem;
        letter-spacing: 8px; /* WIDER */
        text-transform: uppercase;
        font-weight: 700; /* BOLDER */
        text-align: center;
    }

    .enter-button {
        padding: 15px 50px;
        font-size: 1.2rem;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: white;
        border-radius: 50px;
        cursor: pointer;
        backdrop-filter: blur(10px);
        transition: all 0.5s ease;
        letter-spacing: 4px;
        text-transform: uppercase;
        font-weight: 600;
    }

    .enter-button:hover {
        background: rgba(255, 255, 255, 0.3);
        box-shadow: 0 0 30px rgba(255, 255, 255, 0.4);
        transform: scale(1.1);
        letter-spacing: 6px;
    }

    /* Solar System Container */
    .solar-system {
        position: absolute;
        top: 0; left: 0; width: 100%; height: 100%;
        z-index: 10;
        opacity: 0; /* Hidden initially */
        pointer-events: none; /* Initially none, later auto */
        transition: opacity 2s ease;
        perspective: 1200px;
        /* Scrollable content inside fixed perspective */
        overflow-y: auto; 
        overflow-x: hidden;
    }

    .planets-wrapper {
        position: relative;
        min-height: 250vh; /* Deep scroll */
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding-top: 25vh; /* Centers first item better */
        transform-style: preserve-3d;
        transition: transform 1.5s cubic-bezier(0.2, 0.8, 0.2, 1);
    }

    /* Individual Planet Container */
    .planet-container {
        position: absolute; /* Using absolute positioning for layout in 3D wrapper */
        left: 50%; top: 50%; /* Centered origin */
        /* Translate handled by inline style */
        
        display: flex;
        align-items: center;
        gap: 50px;
        opacity: 0;
        cursor: pointer;
        transform-style: preserve-3d;
        transition: opacity 1s ease, filter 0.5s ease;
    }
    
    .planet-container.visible {
        opacity: 1;
    }

    /* Focus Mode Styles */
    body.focus-mode .planet-container:not(.focused) {
        filter: blur(5px) grayscale(0.5);
        opacity: 0.3;
        pointer-events: none;
    }

    body.focus-mode .planet-container.focused {
        z-index: 100;
        /* We scale the focused item slightly for emphasis */
    }
    
    body.focus-mode .planet-container.focused .planet-info {
        opacity: 1;
        pointer-events: auto;
        transform: scale(1.1) translateX(20px);
        background: rgba(0, 0, 0, 0.6); /* Darker backdrop for readability */
    }

    .focus-overlay {
        position: fixed; top: 0; left: 0; width: 100%; height: 100%;
        background: rgba(0,0,0,0.6);
        z-index: 9;
        opacity: 0; pointer-events: none;
        transition: opacity 0.5s ease;
        backdrop-filter: blur(2px);
    }
    
    .focus-overlay.active {
        opacity: 1; pointer-events: auto;
    }

    /* Planet Body Visualization */
    .planet-body {
        width: var(--planet-size);
        height: var(--planet-size);
        position: relative;
        transform-style: preserve-3d;
        /* Tilt for better ring view */
        transform: rotateZ(10deg) rotateX(20deg); 
        transition: transform 0.5s ease;
    }
    
    .planet-container:hover .planet-body {
        transform: rotateZ(10deg) rotateX(20deg) scale(1.1);
    }

    /* Planet Surface (Sphere look) */
    .planet-surface {
        width: 100%; height: 100%;
        border-radius: 50%;
        /* No black anymore - use colored atmosphere */
        background: var(--planet-color);
        position: relative;
        overflow: hidden;
        box-shadow: 
            inset -20px -20px 50px rgba(0,0,0,0.8), /* Shadow side */
            inset 10px 10px 30px rgba(255,255,255,0.6), /* Lit highlight */
            0 0 30px var(--planet-color); /* Glow */
    }

    /* Texture Simulations - IMPROVED (No black) */
    .planet-surface.striped {
        /* Colored stripes */
        background: repeating-linear-gradient(
            0deg,
            var(--planet-color),
            var(--planet-color) 10px,
            var(--secondary-color) 10px,
            var(--secondary-color) 15px
        );
        background-size: 100% 200%;
        animation: spinTexture var(--orbit-speed) linear infinite; /* Dynamic speed */
    }

    .planet-surface.gaseous {
        /* Cloud noise */
        background: radial-gradient(circle at 30% 30%, transparent 0%, rgba(255,255,255,0.2) 100%),
                    var(--planet-color);
        /* Use SVG filter or complex gradient for better gas effect if possible, simplified here */
        box-shadow: inset 0 0 50px var(--secondary-color);
        filter: blur(1px);
    }
    
    .planet-surface.cratered {
        /* Spots */
        background-image: 
            radial-gradient(circle at 20% 40%, var(--secondary-color) 5%, transparent 6%),
            radial-gradient(circle at 60% 70%, var(--secondary-color) 8%, transparent 9%),
            radial-gradient(circle at 80% 20%, var(--secondary-color) 15%, transparent 16%);
        background-color: var(--planet-color);
        background-size: 200% 100%; /* Wider for spin */
        animation: spinTexture var(--orbit-speed) linear infinite;
    }

    @keyframes spinTexture {
        0% { background-position: 0% 0%; }
        100% { background-position: 200% 0%; }
    }

    /* Planet Rings */
    .planet-ring {
        position: absolute;
        top: 50%; left: 50%;
        width: 160%; height: 160%;
        border-radius: 50%;
        border: 20px solid var(--ring-color); /* Thicker ring */
        border-top-color: transparent; /* Gap effect behind */
        border-bottom-color: rgba(255, 255, 255, 0.2); /* Front highlight */
        transform: translate(-50%, -50%) rotateX(75deg) rotateY(10deg);
        box-shadow: 0 0 20px var(--ring-color);
        pointer-events: none;
    }

    /* Planet Info Card */
    .planet-info {
        width: 300px;
        padding: 20px;
        background: rgba(255, 255, 255, 0.05); /* Very light glass */
        backdrop-filter: blur(10px);
        border-radius: 12px;
        border-left: 4px solid var(--planet-color);
        color: #fff;
        opacity: 0.8;
        transition: all 0.3s ease;
        /* Position relative to planet in flex container */
    }

    .planet-info:hover {
        background: rgba(255, 255, 255, 0.15);
        opacity: 1;
    }

    .planet-title {
        font-size: 1.5rem;
        margin: 0 0 0.5rem 0;
        color: var(--planet-color);
        text-shadow: 0 0 10px var(--ring-color);
    }

    .planet-intro {
        font-size: 0.95rem;
        color: #ddd;
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }

    .visit-btn {
        display: inline-block;
        padding: 10px 20px;
        border: 1px solid var(--planet-color);
        color: var(--planet-color);
        text-decoration: none;
        font-size: 0.85rem;
        letter-spacing: 2px;
        transition: all 0.3s;
        text-transform: uppercase;
        font-weight: 700;
        border-radius: 4px;
        position: relative;
        z-index: 200; /* Ensure clickable */
    }

    .visit-btn:hover {
        background: var(--planet-color);
        color: #000;
        box-shadow: 0 0 20px var(--planet-color);
    }

    /* Back Button Override for this page */
    .back-button {
        position: fixed;
        top: 100px; left: 2rem; z-index: 200;
        display: flex; align-items: center; gap: 8px;
        padding: 10px 20px;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
        border-radius: 50px;
        text-decoration: none;
        transition: 0.3s;
    }
    
    .back-button:hover {
        background: rgba(255, 255, 255, 0.2);
    }

    @media (max-width: 768px) {
        /* Mobile Reset */
        .planets-wrapper {
            height: auto;
            min-height: 100vh;
            padding-top: 150px;
        }

        .planet-container {
            position: relative; /* Stack normal flow */
            left: auto; top: auto;
            transform: none !important; /* Remove 3D positioning */
            flex-direction: column;
            margin-bottom: 100px;
            text-align: center;
        }

        .planet-info {
            width: 90%;
            border-left: none;
            border-bottom: 4px solid var(--planet-color);
        }

        .galaxy-title {
            font-size: 2rem;
            letter-spacing: 2px;
            padding: 0 20px;
        }
    }
</style>
