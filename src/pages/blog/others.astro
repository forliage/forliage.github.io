        border-color: var(--ring-color);
        opacity: 0.3;
    }
    .ring-detail {
        width: 125%;
        height: 125%;
        border-width: 50px;
        border-color: transparent;
        background: repeating-conic-gradient(
            from 0deg,
            transparent 0,
            transparent 1.5deg,
            rgba(255, 255, 255, 0.12) 1.5deg,
            rgba(255, 255, 255, 0.12) 2.5deg
        );
        -webkit-mask-image: radial-gradient(
            circle,
            transparent 40%,
            #000 41%,
            #000 55%,
            transparent 56%
        );
    }

