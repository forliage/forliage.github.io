        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
        pointer-events: none;
    }
    #galaxy-canvas {
        width: 100%;
        height: 100%;
    }

    .galaxy-glow-center {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 800px;
        height: 300px;
        transform: translate(-50%, -50%) rotate(0.15rad);
        background: radial-gradient(
            ellipse,
            rgba(255, 255, 255, 0.15) 0%,
            rgba(100, 150, 255, 0.1) 40%,
            transparent 75%
        );
        pointer-events: none;
        filter: blur(80px);
        opacity: 0.8;
    }

