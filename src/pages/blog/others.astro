<Layout title="Other Lecture Notes - Liuye Zhao">
    <Header />

    <main class="universe-container">
        <!-- Search & Filter Controls (Top Center) -->
        <div class="search-overlay">
            <div class="search-bar">
                <svg
                    class="search-icon"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                >
                    <circle cx="11" cy="11" r="8"></circle>
                    <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                </svg>
                <input
                    type="text"
                    id="planet-search"
                    placeholder="Search by name, intro or tag..."
                />
                <div id="search-result-count" class="result-count">
                    Showing all stars
                </div>
            </div>
        </div>

        <!-- SVG Filter for Nebulas -->
        <svg style="display: none;">
            <filter id="nebula-noise">
                <feTurbulence
                    type="fractalNoise"
                    baseFrequency="0.012"
                    numOctaves="4"
                    seed="5"></feTurbulence>
                <feDisplacementMap in="SourceGraphic" scale="150"
                ></feDisplacementMap>
            </filter>
        </svg>

        <!-- Galaxy Background -->
        <div id="galaxy-wrapper">
            <canvas id="galaxy-canvas"></canvas>
        </div>

        <!-- High-End Nebulas -->
        <div id="floating-nebulas" class="floating-nebulas">
            <div class="nebula-cloud cloud-1"></div>
            <div class="nebula-cloud cloud-2"></div>
            <div class="nebula-cloud cloud-3"></div>
        </div>

        <!-- Solar System Scroll Content -->
        <div id="solar-system" class="solar-system">
            <!-- Back Button -->
            <a href="/blog" class="back-button">
                <svg
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                >
                    <line x1="19" y1="12" x2="5" y2="12"></line>
                    <polyline points="12 19 5 12 12 5"></polyline>
                </svg>
                Back to Universe
            </a>

            <div id="focus-overlay" class="focus-overlay"></div>

            <div class="planets-wrapper" id="planets-wrapper">
                <div class="title-spacer"></div>

                {
                    courses.map((course) => {
                        return (
                            <div
                                class="planet-container"
                                id={`planet-${course.id}`}
                                data-title={course.title.toLowerCase()}
                                data-intro={course.intro.toLowerCase()}
                                data-tags={course.tags.join(",").toLowerCase()}
                                style={`
                                --planet-size: ${course.size}px;
                                --planet-color: ${course.color};
                                --secondary-color: ${course.secondaryColor};
                                --ring-color: ${course.ringColor};
                                --orbit-speed: ${course.orbitSpeed}s;
                            `}
                            >
                                <div class="planet-visual">
                                    <div class="planet-body">
                                        <div
                                            class={`planet-surface ${course.textureType}`}
                                        />
                                        <div class="planet-reflection" />
                                        <div class="planet-shadow" />
                                        <div class="planet-ring" />
                                        <div class="planet-atmosphere-glow" />
                                    </div>
                                </div>

                                <div class="planet-info">
                                    <div class="planet-tags">
                                        {course.tags.map((tag) => (
                                            <span class="tag">{tag}</span>
                                        ))}
                                    </div>
                                    <h2 class="planet-title">{course.title}</h2>
                                    <p class="planet-intro">{course.intro}</p>
                                    <a
                                        href={`/blog/others/${course.id}`}
                                        class="visit-btn"
                                    >
                                        LAND ON PLANET
                                    </a>
                                </div>
                            </div>
                        );
                    })
                }

                <div class="end-spacer"></div>
            </div>
        </div>

        <!-- Entrance UI -->
        <div id="entrance-screen" class="entrance-screen">
            <h1 class="galaxy-title">Explore the Cosmos</h1>
            <p class="galaxy-subtitle">Deep dive into advanced lectures</p>
            <button id="enter-btn" class="enter-button">START VOYAGE</button>
        </div>
    </main>
</Layout>

<script>
    /* --- Premium Galaxy Particle Engine --- */
    const canvas = document.getElementById(
        "galaxy-canvas",
    ) as HTMLCanvasElement;
    const ctx = canvas.getContext("2d");
    let width = 0,
        height = 0;
    let particles: any[] = [];
    let animationId: number;

    function resize() {
        if (!canvas) return;
        width = canvas.width = window.innerWidth;
        height = canvas.height = window.innerHeight;
    }

    function initGalaxy(densityScale = 1.0) {
        if (!width) return;
        particles = [];

        // Massive star field (12,000+ stars for texture)
        const count = 12000 * densityScale;
        const maxRadius = Math.max(width, height) * 1.5;

        for (let i = 0; i < count; i++) {
            // Distribution: More stars at core, fewer at edge
            const distFactor = Math.pow(Math.random(), 1.5);
            const distance = distFactor * maxRadius;

            // Spiraling effect
            const angle = (i / count) * 4 * Math.PI * 2 + Math.random() * 0.5;

            // Size variation based on depth/distance
            const size = (1 - distFactor) * 2 + Math.random() * 1.5;

            // Vivid Color Palette
            let color = `rgba(255, 255, 255, ${Math.random()})`;
            if (distFactor < 0.2)
                color = `rgba(255, 255, 255, ${0.8 + Math.random() * 0.2})`; // Core is bright white
            else if (distFactor < 0.5)
                color = `rgba(180, 220, 255, ${0.4 + Math.random() * 0.4})`; // Mid is blueish
            else color = `rgba(200, 150, 255, ${0.2 + Math.random() * 0.3})`; // Outer is purple/deep

            particles.push({
                x: 0,
                y: 0,
                angle: angle,
                radius: distance,
                speed: (0.00005 + Math.random() * 0.0001) / (distFactor + 0.1),
                size: size,
                color: color,
            });
        }
    }

    function animateGalaxy() {
        if (!ctx) return;
        ctx.fillStyle = "#010103"; // Infinite black
        ctx.fillRect(0, 0, width, height);

        ctx.save();
        ctx.translate(width / 2, height / 2);
        ctx.scale(1, 0.7); // Tilt

        particles.forEach((p) => {
            p.angle += p.speed;
            const x = Math.cos(p.angle) * p.radius;
            const y = Math.sin(p.angle) * p.radius;

            ctx.beginPath();
            ctx.fillStyle = p.color;
            ctx.arc(x, y, p.size, 0, Math.PI * 2);
            ctx.fill();

            // Subtle bloom for larger stars
            if (p.size > 2.5) {
                ctx.shadowBlur = 10;
                ctx.shadowColor = p.color;
            } else {
                ctx.shadowBlur = 0;
            }
        });

        ctx.restore();
        animationId = requestAnimationFrame(animateGalaxy);
    }

    if (canvas) {
        window.addEventListener("resize", () => {
            resize();
            initGalaxy();
        });
        resize();
        initGalaxy();
        animateGalaxy();
    }

    /* --- Interaction & Filtering --- */
    const enterBtn = document.getElementById("enter-btn");
    const entranceScreen = document.getElementById("entrance-screen");
    const solarSystem = document.getElementById("solar-system");
    const floatingNebulas = document.getElementById("floating-nebulas");
    const searchInput = document.getElementById(
        "planet-search",
    ) as HTMLInputElement;
    const resultCount = document.getElementById("search-result-count");

    function startJourney() {
        if (!entranceScreen || !solarSystem || !floatingNebulas) return;

        entranceScreen.style.opacity = "0";

        // Massive expansion re-init
        initGalaxy(2.5);

        setTimeout(() => {
            entranceScreen.style.display = "none";
            solarSystem.style.opacity = "1";
            solarSystem.style.pointerEvents = "auto";
            floatingNebulas.style.opacity = "1";

            document.querySelectorAll(".planet-container").forEach((p, i) => {
                setTimeout(() => p.classList.add("visible"), i * 150);
            });
        }, 800);
    }

    if (enterBtn) enterBtn.addEventListener("click", startJourney);

    // Real-time Search Logic
    if (searchInput) {
        searchInput.addEventListener("input", (e) => {
            const val = (e.target as HTMLInputElement).value.toLowerCase();
            const planets = document.querySelectorAll(
                ".planet-container",
            ) as NodeListOf<HTMLElement>;
            let found = 0;

            planets.forEach((p) => {
                const title = p.dataset.title || "";
                const intro = p.dataset.intro || "";
                const tags = p.dataset.tags || "";

                if (
                    title.includes(val) ||
                    intro.includes(val) ||
                    tags.includes(val)
                ) {
                    p.style.display = "flex";
                    setTimeout(() => p.classList.add("search-match"), 10);
                    found++;
                } else {
                    p.classList.remove("search-match");
                    setTimeout(() => (p.style.display = "none"), 400); // Wait for transition
                }
            });

            if (resultCount) {
                resultCount.textContent = val
                    ? `Found ${found} matching stars`
                    : "Showing all stars";
            }
        });
    }

    /* --- Enhanced Focus Mode --- */
    const planetsWrapper = document.getElementById("planets-wrapper");
    const focusOverlay = document.getElementById("focus-overlay");

    if (planetsWrapper && focusOverlay) {
        planetsWrapper.addEventListener("click", (e) => {
            const target = e.target as HTMLElement;
            if (target.closest("a")) return;

            const planetContainer = target.closest(
                ".planet-container",
            ) as HTMLElement;

            if (planetContainer) {
                // Focus: Scale up focused, scale down others
                planetContainer.scrollIntoView({
                    behavior: "smooth",
                    inline: "center",
                    block: "center",
                });

                document.body.classList.add("focus-mode");
                focusOverlay.classList.add("active");

                document
                    .querySelectorAll(".planet-container")
                    .forEach((p) => p.classList.remove("focused"));
                planetContainer.classList.add("focused");
            }
        });

        const resetFocus = () => {
            document.body.classList.remove("focus-mode");
            focusOverlay.classList.remove("active");
            document
                .querySelectorAll(".planet-container")
                .forEach((p) => p.classList.remove("focused"));
        };

        focusOverlay.addEventListener("click", resetFocus);
    }
</script>

<style>
    :root {
        --space-bg: #010103;
        --glass: rgba(255, 255, 255, 0.08);
        --glass-border: rgba(255, 255, 255, 0.15);
        --accent: #4dabf7;
    }

    .universe-container {
        position: relative;
        width: 100vw;
        height: 100vh;
        background-color: var(--space-bg);
        overflow: hidden;
        font-family: "Outfit", sans-serif;
    }

    /* Search Bar UI */
    .search-overlay {
        position: fixed;
        top: 30px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 1000;
        width: 100%;
        max-width: 500px;
        padding: 0 20px;
    }
    .search-bar {
        background: var(--glass);
        backdrop-filter: blur(20px);
        border: 1px solid var(--glass-border);
        border-radius: 50px;
        padding: 12px 25px;
        display: flex;
        align-items: center;
        gap: 15px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
    }
    .search-bar:focus-within {
        background: rgba(255, 255, 255, 0.12);
        border-color: rgba(255, 255, 255, 0.3);
        max-width: 600px;
    }
    .search-icon {
        color: #aaa;
    }
    #planet-search {
        background: transparent;
        border: none;
        color: #fff;
        font-size: 1rem;
        width: 100%;
        outline: none;
        letter-spacing: 0.5px;
    }
    #planet-search::placeholder {
        color: #888;
    }
    .result-count {
        font-size: 0.7rem;
        color: #666;
        white-space: nowrap;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    #galaxy-wrapper {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
        pointer-events: none;
    }
    #galaxy-canvas {
        width: 100%;
        height: 100%;
    }

    /* Nebulas */
    .floating-nebulas {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
        pointer-events: none;
        opacity: 0;
        transition: opacity 2s ease;
    }
    .nebula-cloud {
        position: absolute;
        border-radius: 50%;
        filter: url(#nebula-noise) blur(40px);
        opacity: 0.45;
        animation: drift 25s infinite alternate ease-in-out;
        mix-blend-mode: screen;
    }
    .cloud-1 {
        top: -10%;
        left: -10%;
        width: 50%;
        height: 50%;
        background: radial-gradient(
            circle,
            rgba(77, 171, 247, 0.4),
            transparent 80%
        );
    }
    .cloud-2 {
        bottom: -10%;
        right: -10%;
        width: 60%;
        height: 60%;
        background: radial-gradient(
            circle,
            rgba(218, 119, 242, 0.3),
            transparent 80%
        );
        animation-delay: -5s;
    }
    .cloud-3 {
        top: 30%;
        right: 20%;
        width: 40%;
        height: 40%;
        background: radial-gradient(
            circle,
            rgba(105, 219, 124, 0.25),
            transparent 80%
        );
        animation-delay: -12s;
    }

    @keyframes drift {
        0% {
            transform: translate(0, 0) scale(1);
        }
        100% {
            transform: translate(5vw, -5vh) scale(1.1);
        }
    }

    /* Solar System */
    .solar-system {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 10;
        opacity: 0;
        pointer-events: none;
        transition: opacity 1s ease;
        overflow-x: auto;
        overflow-y: hidden;
        scrollbar-width: none;
        -ms-overflow-style: none; /* Hide scrollbar but keep functional */
    }
    .solar-system::-webkit-scrollbar {
        display: none;
    }

    .planets-wrapper {
        display: flex;
        align-items: center;
        height: 100%;
        width: max-content;
        padding: 0 10vw;
    }
    .title-spacer {
        min-width: 40vw;
    }
    .end-spacer {
        min-width: 40vw;
    }

    /* Planet Container */
    .planet-container {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 700px;
        height: 100%;
        opacity: 0;
        transition: all 0.6s cubic-bezier(0.2, 0.8, 0.2, 1);
        pointer-events: auto !important;
        cursor: pointer;
        margin-right: 15rem;
    }
    .planet-container.visible {
        opacity: 1;
    }

    /* Search Filtering animation */
    .planet-container:not(.search-match) {
        transform: scale(0.8) translateY(50px);
        opacity: 0;
        filter: blur(20px);
    }

    .planet-visual {
        position: relative;
        height: 500px;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        perspective: 1200px;
    }

    /* Planet Body & Advanced Textures */
    .planet-body {
        width: var(--planet-size);
        height: var(--planet-size);
        position: relative;
        transform-style: preserve-3d;
        transform: rotateX(25deg) rotateZ(15deg);
        transition: transform 0.8s cubic-bezier(0.2, 0.8, 0.2, 1.2);
    }

    .planet-container:hover .planet-body {
        transform: rotateX(25deg) rotateZ(15deg) scale(1.15);
    }
    .planet-container.focused .planet-body {
        transform: rotateX(25deg) rotateZ(15deg) scale(1.6);
    }

    .planet-surface {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        background: var(--planet-color);
        overflow: hidden;
        /* Dramatic Internal Shadowing */
        box-shadow:
            inset -35px -35px 90px rgba(0, 0, 0, 0.95),
            inset 20px 20px 60px rgba(255, 255, 255, 0.4),
            0 0 50px rgba(var(--planet-color), 0.3);
    }

    /* Premium Texture Animations (Self-Rotation) */
    .planet-surface.striped {
        background:
            linear-gradient(
                to bottom,
                transparent 30%,
                rgba(0, 0, 0, 0.1) 40%,
                transparent 60%
            ),
            repeating-linear-gradient(
                0deg,
                var(--planet-color),
                var(--planet-color) 20px,
                var(--secondary-color) 20px,
                var(--secondary-color) 40px
            );
        background-size: 100% 200%;
        animation: rotateTexture 25s linear infinite;
    }
    .planet-surface.gaseous {
        background: var(--planet-color);
        background-image:
            radial-gradient(
                circle at 30% 30%,
                rgba(255, 255, 255, 0.3),
                transparent 70%
            ),
            repeating-radial-gradient(
                circle,
                transparent,
                rgba(0, 0, 0, 0.05) 10px,
                transparent 20px
            );
        animation: rotateGaseous 40s linear infinite;
    }
    .planet-surface.cratered {
        background-color: var(--planet-color);
        background-image:
            radial-gradient(
                circle at 15% 15%,
                var(--secondary-color) 10%,
                transparent 12%
            ),
            radial-gradient(
                circle at 60% 70%,
                var(--secondary-color) 15%,
                transparent 18%
            ),
            radial-gradient(
                circle at 80% 20%,
                var(--secondary-color) 5%,
                transparent 6%
            );
        background-size: 200% 100%;
        animation: rotateTexture 35s linear infinite;
    }

    @keyframes rotateTexture {
        0% {
            background-position: 0% 0%;
        }
        100% {
            background-position: 200% 0%;
        }
    }
    @keyframes rotateGaseous {
        0% {
            filter: hue-rotate(0deg);
        }
        100% {
            filter: hue-rotate(360deg);
        }
    }

    /* Surface Lighting (Reflection/Glint) */
    .planet-reflection {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border-radius: 50%;
        background: linear-gradient(
            135deg,
            rgba(255, 255, 255, 0.4) 0%,
            transparent 40%
        );
        pointer-events: none;
    }
    .planet-atmosphere-glow {
        position: absolute;
        top: -5%;
        left: -5%;
        width: 110%;
        height: 110%;
        border-radius: 50%;
        box-shadow:
            inset 0 0 50px var(--planet-color),
            0 0 60px var(--planet-color);
        opacity: 0.3;
        pointer-events: none;
    }

    .planet-ring {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 170%;
        height: 170%;
        border-radius: 50%;
        border: 35px solid var(--ring-color);
        border-top-color: transparent;
        border-bottom-color: rgba(255, 255, 255, 0.4);
        transform: translate(-50%, -50%) rotateX(75deg) rotateY(15deg);
        box-shadow: 0 0 40px var(--ring-color);
        pointer-events: none;
        opacity: 0.8;
    }

    /* Focus Mode */
    body.focus-mode .planet-container:not(.focused) {
        filter: blur(15px) grayscale(1);
        opacity: 0.15;
        transform: scale(0.6);
        pointer-events: none !important;
    }
    body.focus-mode .planet-container.focused {
        z-index: 2000;
    }

    .focus-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.85);
        z-index: 99;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.5s ease;
        backdrop-filter: blur(8px);
    }
    .focus-overlay.active {
        opacity: 1;
        pointer-events: auto;
    }

    /* Info UI below planet */
    .planet-info {
        width: 100%;
        max-width: 420px;
        text-align: center;
        padding: 30px;
        background: rgba(0, 0, 0, 0.4);
        backdrop-filter: blur(25px);
        border-radius: 20px;
        border: 1px solid var(--glass-border);
        box-shadow: 0 15px 50px rgba(0, 0, 0, 0.6);
        color: #fff;
        opacity: 0.7;
        transition: all 0.5s cubic-bezier(0.2, 0.8, 0.2, 1);
        transform: translateY(30px);
        z-index: 2001; /* Above almost everything */
    }
    .planet-container:hover .planet-info,
    .planet-container.focused .planet-info {
        opacity: 1;
        transform: translateY(0);
        border-color: var(--planet-color);
        box-shadow: 0 0 40px rgba(var(--planet-color), 0.2);
    }

    .planet-tags {
        display: flex;
