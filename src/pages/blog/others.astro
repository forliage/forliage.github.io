---

<Layout title="Other Lecture Notes - Liuye Zhao">
    <Header />

    <main class="universe-container">
        <!-- Galaxy Background (Z-Index 1) -->
        <canvas id="galaxy-canvas"></canvas>

        <!-- High Visibility Nebulas (Z-Index 5) -->
        <div id="floating-nebulas" class="floating-nebulas">
            <div class="nebula-cloud cloud-1"></div>
            <div class="nebula-cloud cloud-2"></div>
            <div class="nebula-cloud cloud-3"></div>
            <div class="nebula-cloud cloud-4"></div>
        </div>

        <!-- Solar System Tunnel (Z-Index 10) -->
        <div id="solar-system" class="solar-system">
            <!-- Back Button -->
            <a href="/blog" class="back-button">
                <svg
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                >
                    <line x1="19" y1="12" x2="5" y2="12"></line>
                    <polyline points="12 19 5 12 12 5"></polyline>
                </svg>
                Back to Universe
            </a>

            <!-- Focus Reset Overlay (Z-Index 99) -->
            <div id="focus-overlay" class="focus-overlay"></div>

            <div class="planets-wrapper" id="planets-wrapper">
                {
                    courses.map((course, index) => {
                        // STRICT TUNNEL LAYOUT - DETERMINISTIC
                        // Left (-1) / Right (1) alternating
                        const side = index % 2 === 0 ? 1 : -1;

                        // X Axis: Far apart to avoid center overlap
                        // Left  = -350px
                        // Right = +350px
                        const xOffset = side * 400;

                        // Y Axis: Slight variation up/down, keeping near eye-level
                        const yOffset =
                            index % 3 === 0 ? -100 : index % 3 === 1 ? 100 : 0;

                        // Z Axis: Strict 800px separation per item
                        // Planet 0: -500px, Planet 1: -1300px, etc.
                        const zDepth = -(index * 800 + 500);

                        return (
                            <div
                                class="planet-container"
                                id={`planet-${course.id}`}
                                data-x={xOffset}
                                data-y={yOffset}
                                data-z={zDepth}
                                style={`
                                --planet-size: ${course.size}px;
                                --planet-color: ${course.color};
                                --secondary-color: ${course.secondaryColor};
                                --ring-color: ${course.ringColor};
                                --orbit-speed: ${course.orbitSpeed}s;
                                transform: translate3d(${xOffset}px, ${yOffset}px, ${zDepth}px);
                            `}
                            >
                                <div class="planet-body">
                                    <div
                                        class={`planet-surface ${course.textureType}`}
                                    />
                                    <div class="planet-shadow" />
                                    <div class="planet-ring" />
                                </div>

                                <div
                                    class={`planet-info info-${side > 0 ? "right" : "left"}`}
                                >
                                    <h2 class="planet-title">{course.title}</h2>
                                    <p class="planet-intro">{course.intro}</p>
                                    <a
                                        href={`/blog/others/${course.id}`}
                                        class="visit-btn"
                                    >
                                        LAND ON PLANET
                                    </a>
                                </div>
                            </div>
                        );
                    })
                }
            </div>
        </div>

        <!-- Entrance Screen (Z-Index 100) -->
        <div id="entrance-screen" class="entrance-screen">
            <h1 class="galaxy-title">Explore the Cosmos</h1>
            <button id="enter-btn" class="enter-button">ENTER GALAXY</button>
        </div>
    </main>
</Layout>

<script>
    /* --- Galaxy Particle Engine --- */
    const canvas = document.getElementById(
        "galaxy-canvas",
    ) as HTMLCanvasElement;
    const ctx = canvas.getContext("2d");
    let width = 0,
        height = 0;
    let particles: any[] = [];
    let animationId: number;

    function resize() {
        if (!canvas) return;
        width = canvas.width = window.innerWidth;
        height = canvas.height = window.innerHeight;
    }

    function initGalaxy() {
        if (!width) return;
        particles = [];
        const maxRadius = Math.max(width, height) * 1.2; // Massive Galaxy

        for (let i = 0; i < 3000; i++) {
            const spin = (i / 3000) * 2 * Math.PI * 2 + Math.random() * 0.5;
            const distance = Math.pow(Math.random(), 1.2) * maxRadius;

            // Vivid Colors
            let color = `rgba(255, 255, 255, ${Math.random()})`;
            if (distance > maxRadius * 0.2)
                color = `rgba(100, 200, 255, ${Math.random() * 0.8})`;
            if (distance > maxRadius * 0.5)
                color = `rgba(200, 100, 255, ${Math.random() * 0.6})`;

            particles.push({
                angle: spin,
                radius: distance,
                speed:
                    (0.0005 + Math.random() * 0.001) / (distance * 0.001 + 1),
                size: Math.random() * 2,
                color: color,
            });
        }
    }

    function animateGalaxy() {
        if (!ctx) return;
        ctx.fillStyle = "#020205"; // Deep black bg
        ctx.fillRect(0, 0, width, height);

        ctx.save();
        ctx.translate(width / 2, height / 2);

        // Slight tilt
        ctx.scale(1, 0.6);

        particles.forEach((p) => {
            p.angle += p.speed;
            const x = Math.cos(p.angle) * p.radius;
            const y = Math.sin(p.angle) * p.radius;

            ctx.beginPath();
            ctx.fillStyle = p.color;
            ctx.arc(x, y, p.size, 0, Math.PI * 2);
            ctx.fill();
        });

        ctx.restore();
        animationId = requestAnimationFrame(animateGalaxy);
    }

    if (canvas) {
        window.addEventListener("resize", () => {
            resize();
            initGalaxy();
        });
        resize();
        initGalaxy();
        animateGalaxy();
    }

    /* --- Interaction & Event Handling --- */
    const enterBtn = document.getElementById("enter-btn");
    const entranceScreen = document.getElementById("entrance-screen");
    const solarSystem = document.getElementById("solar-system");
    const galaxyCanvas = document.getElementById("galaxy-canvas");
    const floatingNebulas = document.getElementById("floating-nebulas");

    function startJourney() {
        if (
            !entranceScreen ||
            !galaxyCanvas ||
            !solarSystem ||
            !floatingNebulas
        )
            return;

        // 1. Disable interaction on entrance/background layers to prevent blocking clicks
        entranceScreen.style.pointerEvents = "none";
        galaxyCanvas.style.pointerEvents = "none";

        // 2. Animate out
        entranceScreen.style.opacity = "0";
        galaxyCanvas.style.transition = "transform 2s ease-in, opacity 2s ease";
        galaxyCanvas.style.transform = "scale(4) rotate(60deg)";
        galaxyCanvas.style.opacity = "0";

        // 3. Show System
        setTimeout(() => {
            solarSystem.style.opacity = "1";
            solarSystem.style.pointerEvents = "auto"; // Enable interactions here!
            floatingNebulas.style.opacity = "1";

            const planets = document.querySelectorAll(".planet-container");
            planets.forEach((p, i) => {
                setTimeout(() => {
                    p.classList.add("visible");
                }, i * 200);
            });
        }, 800);
    }

    if (enterBtn) {
        enterBtn.addEventListener("click", startJourney);
    }

    /* --- Focus & Click Logic --- */
    const planetsWrapper = document.getElementById("planets-wrapper");
    const focusOverlay = document.getElementById("focus-overlay");

    // Delegation allows catching bubbles from children
    if (planetsWrapper && focusOverlay) {
        // Handle planet click via delegation on wrapper
        planetsWrapper.addEventListener("click", (e) => {
            const target = e.target as HTMLElement;

            // Check if clicked the "Land on Planet" link
            if (target.closest("a")) return; // Let link work naturally

            // Check if clicked a planet container (or its children)
            const planetContainer = target.closest(
                ".planet-container",
            ) as HTMLElement;

            if (planetContainer) {
                // Focus Logic
                const x = parseFloat(planetContainer.dataset.x || "0");
                const y = parseFloat(planetContainer.dataset.y || "0");
                const z = parseFloat(planetContainer.dataset.z || "0");

                document.body.classList.add("focus-mode");
                focusOverlay.classList.add("active");

                // Move wrapper to bring planet to center (0,0,0) then pull it close (+400z)
                planetsWrapper.style.transform = `translate3d(${-x}px, ${-y}px, ${-z + 400}px)`;

                // Highlight planet
                document
                    .querySelectorAll(".planet-container")
                    .forEach((p) => p.classList.remove("focused"));
                planetContainer.classList.add("focused");
            }
        });

        // Reset
        const resetFocus = () => {
            document.body.classList.remove("focus-mode");
            focusOverlay.classList.remove("active");
            planetsWrapper.style.transform = "none";
            document
                .querySelectorAll(".planet-container")
                .forEach((p) => p.classList.remove("focused"));
        };

        focusOverlay.addEventListener("click", resetFocus);
    }
</script>

<style>
    :root {
        --space-bg: #020205;
    }

    .universe-container {
        position: relative;
        width: 100vw;
        height: 100vh;
        background-color: var(--space-bg);
        overflow: hidden;
        font-family: "Outfit", sans-serif;
    }

    #galaxy-canvas {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
        pointer-events: none; /* Ensure no click blocking */
    }

    /* High-Vis Nebulas */
    .floating-nebulas {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 5;
        pointer-events: none;
        opacity: 0;
        transition: opacity 2s ease;
    }

    .nebula-cloud {
        position: absolute;
        border-radius: 50%;
        filter: blur(60px);
        opacity: 0.6; /* High Opacity */
        animation: breath 8s infinite alternate ease-in-out;
    }

    .cloud-1 {
        top: 20%;
        left: 10%;
        width: 400px;
        height: 400px;
        background: radial-gradient(
            circle,
            rgba(100, 220, 255, 0.4),
            transparent 70%
        );
    }
    .cloud-2 {
        bottom: 20%;
        right: 10%;
        width: 500px;
        height: 500px;
        background: radial-gradient(
            circle,
            rgba(255, 100, 200, 0.4),
            transparent 70%
        );
        animation-delay: -2s;
    }
    .cloud-3 {
        top: 50%;
        left: 50%;
        width: 600px;
        height: 600px;
        transform: translate(-50%, -50%);
        background: radial-gradient(
            circle,
            rgba(180, 100, 255, 0.3),
            transparent 70%
        );
        animation-delay: -4s;
    }
    .cloud-4 {
        /* Extra Bright Spot */
        top: 10%;
        right: 30%;
        width: 200px;
        height: 200px;
        background: radial-gradient(
            circle,
            rgba(100, 255, 150, 0.5),
            transparent 70%
        );
    }

    @keyframes breath {
        0% {
            opacity: 0.4;
            transform: scale(1);
        }
        100% {
            opacity: 0.7;
            transform: scale(1.1);
        }
    }

    /* Solar System Tunnel */
    .solar-system {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 10;
        opacity: 0;
        pointer-events: none; /* Controlled by JS */
        transition: opacity 1s ease;
        perspective: 1200px;
        overflow-y: scroll; /* Allow deep scroll */
        overflow-x: hidden;
    }

    .planets-wrapper {
        position: relative;
        min-height: 400vh; /* Deep tunnel space */
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding-top: 50vh; /* Start tunnel somewhat deep */
        transform-style: preserve-3d;
        transition: transform 1.2s cubic-bezier(0.2, 0.8, 0.2, 1);
    }

    /* Planet Item */
    .planet-container {
        position: absolute;
        left: 50%;
        top: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        width: auto;
        height: auto;
        opacity: 0;
        transition:
            opacity 1s ease,
            filter 0.5s ease;
        pointer-events: auto !important; /* Force Clickable */
        cursor: pointer;
        transform-style: preserve-3d;
    }

    .planet-container.visible {
        opacity: 1;
    }

    /* Focus Mode States */
    body.focus-mode .planet-container:not(.focused) {
        filter: blur(10px) grayscale(0.8);
        opacity: 0.2;
        pointer-events: none !important;
    }
    body.focus-mode .planet-container.focused {
        z-index: 2000; /* Top most when focused */
    }

    .focus-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.8);
        z-index: 99;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.5s ease;
        backdrop-filter: blur(5px);
    }
    .focus-overlay.active {
        opacity: 1;
        pointer-events: auto;
    }

    /* Layout: Info positioning */
    .planet-info {
        position: absolute;
        width: 280px;
        padding: 20px;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(15px);
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #fff;
        opacity: 0.9;
        transition:
            transform 0.3s ease,
            opacity 0.3s ease;
    }

    /* Place info strictly to side to avoid overlap */
    .info-right {
        left: 160%;
        text-align: left;
        border-left: 3px solid var(--planet-color);
    }
    .info-left {
        right: 160%;
        text-align: right;
        border-right: 3px solid var(--planet-color);
        direction: rtl;
    }
    .info-left h2,
    .info-left p,
    .info-left a {
        direction: ltr;
    } /* Restore text direction */

    .planet-title {
        font-size: 1.4rem;
        color: var(--planet-color);
        margin: 0 0 0.5rem 0;
        text-shadow: 0 0 10px var(--ring-color);
    }
    .planet-intro {
        font-size: 0.9rem;
        color: #ccc;
        line-height: 1.5;
        margin-bottom: 1rem;
    }

    .visit-btn {
        display: inline-block;
        padding: 10px 20px;
        border: 1px solid var(--planet-color);
        color: var(--planet-color);
        text-decoration: none;
        font-size: 0.8rem;
        letter-spacing: 2px;
        font-weight: 700;
        border-radius: 4px;
        pointer-events: auto;
    }
    .visit-btn:hover {
        background: var(--planet-color);
        color: #000;
        box-shadow: 0 0 20px var(--planet-color);
    }

    /* Planet & Ring */
    .planet-body {
        width: var(--planet-size);
        height: var(--planet-size);
        position: relative;
        transform-style: preserve-3d;
        transform: rotateX(15deg) rotateZ(5deg);
        transition: transform 0.3s ease;
    }

    .planet-container:hover .planet-body {
        transform: rotateX(15deg) rotateZ(5deg) scale(1.1);
    }

    .planet-surface {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        background: var(--planet-color);
        overflow: hidden;
        box-shadow:
            inset -20px -20px 60px rgba(0, 0, 0, 0.9),
            inset 10px 10px 40px rgba(255, 255, 255, 0.4),
            0 0 30px var(--planet-color);
    }

    /* Procedural Textures */
    .planet-surface.striped {
        background: repeating-linear-gradient(
            0deg,
            var(--planet-color),
            var(--planet-color) 10px,
            var(--secondary-color) 10px,
            var(--secondary-color) 15px
        );
        background-size: 100% 200%;
        animation: spin var(--orbit-speed) linear infinite;
    }
    .planet-surface.gaseous {
        background:
            radial-gradient(
                circle at 30% 30%,
                transparent,
                rgba(255, 255, 255, 0.2)
            ),
            var(--planet-color);
        filter: blur(1px);
        box-shadow: inset 0 0 50px var(--secondary-color);
    }
    .planet-surface.cratered {
        background-image:
            radial-gradient(
                circle at 20% 40%,
                var(--secondary-color) 5%,
                transparent 6%
            ),
            radial-gradient(
                circle at 70% 70%,
                var(--secondary-color) 10%,
                transparent 11%
            );
        background-color: var(--planet-color);
        background-size: 200% 100%;
        animation: spin var(--orbit-speed) linear infinite;
    }

    @keyframes spin {
        0% {
            background-position: 0% 0%;
        }
        100% {
            background-position: 200% 0%;
        }
    }

    .planet-ring {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 160%;
        height: 160%;
        border-radius: 50%;
        border: 30px solid var(--ring-color);
        border-top-color: transparent;
        border-bottom-color: rgba(255, 255, 255, 0.4);
        transform: translate(-50%, -50%) rotateX(75deg) rotateY(5deg);
        box-shadow: 0 0 20px var(--ring-color);
        pointer-events: none;
    }

    /* Entrance UI */
    .entrance-screen {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        z-index: 100;
        transition: opacity 0.8s;
        pointer-events: auto; /* Initially clickable */
    }
    .galaxy-title {
        font-size: 4rem;
        color: #fff;
        text-shadow: 0 0 50px rgba(255, 255, 255, 0.8);
        text-transform: uppercase;
        font-weight: 800;
        letter-spacing: 12px;
        text-align: center;
        margin-bottom: 2rem;
    }
    .enter-button {
        padding: 15px 40px;
        font-size: 1.2rem;
        background: transparent;
        border: 2px solid #fff;
        color: #fff;
        border-radius: 50px;
        cursor: pointer;
        text-transform: uppercase;
        letter-spacing: 4px;
        transition: all 0.3s;
    }
    .enter-button:hover {
        background: #fff;
        color: #000;
        box-shadow: 0 0 40px #fff;
    }

    .back-button {
        position: fixed;
        top: 30px;
        left: 30px;
        z-index: 200;
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 10px 20px;
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 30px;
        color: #fff;
        text-decoration: none;
        backdrop-filter: blur(5px);
    }

    @media (max-width: 768px) {
        .planets-wrapper {
            padding-top: 150px;
            min-height: 100vh;
        }
        .planet-container {
            position: relative;
            left: auto;
            top: auto;
            transform: none !important;
            flex-direction: column;
            margin-bottom: 120px;
            pointer-events: auto !important;
        }
        .planet-info {
            position: relative;
            left: auto;
            right: auto;
            top: 20px;
            width: 90%;
            text-align: center;
            border: none;
            border-bottom: 3px solid var(--planet-color);
        }
        .info-left {
            direction: ltr;
        }
    }
</style>
