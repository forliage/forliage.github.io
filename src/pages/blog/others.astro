<script>
    /* --- Phase 7: Ultra-Dense Galaxy (22k Stars) --- */
    const canvas = document.getElementById(
        "galaxy-canvas",
    ) as HTMLCanvasElement;
    const ctx = canvas.getContext("2d");
    let width = 0,
        height = 0;
    let particles: any[] = [];
    let animationId: number;

    function resize() {
        if (!canvas) return;
        width = canvas.width = window.innerWidth;
        height = canvas.height = window.innerHeight;
    }

    function initGalaxy(density = 1.0) {
        if (!width) return;
        particles = [];
        const maxRadius = Math.sqrt(width ** 2 + height ** 2) * 1.8;
        // 22k Stars
        const count = 22000 * density;

        for (let i = 0; i < count; i++) {
            const angle = Math.random() * Math.PI * 2;
            const distance = Math.pow(Math.random(), 1.4) * maxRadius;

            let colorPool = [
                "255, 255, 255",
                "180, 220, 255",
                "255, 200, 220",
                "220, 255, 180",
                "230, 200, 255",
                "255, 230, 180",
            ];
            let baseColor =
                colorPool[Math.floor(Math.random() * colorPool.length)];

            // Soften central stars significantly to keep title readable
            const isCore = distance < maxRadius * 0.12;
            const opacityMod = isCore ? 0.15 : 0.7;

            particles.push({
                angle: angle,
                radius: distance,
                speed:
                    (0.00004 + Math.random() * 0.0001) /
                    (distance * 0.0003 + 0.1),
                size: isCore ? Math.random() * 1.5 : Math.random() * 2.2,
                opacity: Math.random() * opacityMod * 0.8 + 0.1,
                color: `rgba(${baseColor},`,
            });
        }
    }

    function animateGalaxy() {
        if (!ctx) return;
        ctx.fillStyle = "#020205";
        ctx.fillRect(0, 0, width, height);

        ctx.save();
        ctx.translate(width / 2, height / 2);
        ctx.scale(1.4, 0.4); // Flat cinematic ellipse
        ctx.rotate(0.3);

        particles.forEach((p) => {
            p.angle += p.speed;
            const x = Math.cos(p.angle) * p.radius;
            const y = Math.sin(p.angle) * p.radius;

            ctx.beginPath();
            ctx.fillStyle = `${p.color}${p.opacity})`;
            ctx.arc(x, y, p.size, 0, Math.PI * 2);
            ctx.fill();
        });

        ctx.restore();
        animationId = requestAnimationFrame(animateGalaxy);
    }

    if (canvas) {
        window.addEventListener("resize", () => {
            resize();
            initGalaxy();
        });
        resize();
        initGalaxy();
        animateGalaxy();
    }

    /* --- Core Interactions --- */
    const enterBtn = document.getElementById("enter-btn");
    const entranceScreen = document.getElementById("entrance-screen");
    const solarSystem = document.getElementById("solar-system");
    const searchContainer = document.getElementById("search-container");
    const backBtn = document.getElementById("back-to-galaxy-btn");

    function startJourney() {
        if (!entranceScreen || !solarSystem || !searchContainer) return;
        entranceScreen.style.opacity = "0";
        setTimeout(() => {
            entranceScreen.style.display = "none";
            solarSystem.classList.add("active");
            searchContainer.classList.remove("hidden");

            document.querySelectorAll(".planet-container").forEach((p, i) => {
                setTimeout(() => p.classList.add("visible"), i * 150);
            });
        }, 800);
    }

    enterBtn?.addEventListener("click", startJourney);

    /* --- Search Logic --- */
    const searchInput = document.getElementById(
        "course-search",
    ) as HTMLInputElement;
    const tagBtns = document.querySelectorAll(".tag-btn");
    const planets = document.querySelectorAll(".planet-container");

    function filterPlanets() {
        const query = searchInput.value.toLowerCase();
        const activeTag =
            document
                .querySelector(".tag-btn.active")
                ?.getAttribute("data-tag") || "all";

        planets.forEach((p) => {
            const title =
                p.querySelector(".planet-title")?.textContent?.toLowerCase() ||
                "";
            const tags = (p as HTMLElement).dataset.tags?.split(",") || [];
            const matchesQuery = title.includes(query);
            const matchesTag = activeTag === "all" || tags.includes(activeTag);

            if (matchesQuery && matchesTag) {
                (p as HTMLElement).style.display = "flex";
                setTimeout(() => ((p as HTMLElement).style.opacity = "1"), 10);
            } else {
                (p as HTMLElement).style.opacity = "0";
                setTimeout(
                    () => ((p as HTMLElement).style.display = "none"),
                    500,
                );
            }
        });
    }

    searchInput?.addEventListener("input", filterPlanets);
    tagBtns.forEach((btn) => {
        btn.addEventListener("click", () => {
            tagBtns.forEach((b) => b.classList.remove("active"));
            btn.classList.add("active");
            filterPlanets();
        });
    });

    /* --- Focus Animation --- */
    planets.forEach((planet) => {
        planet.addEventListener("click", (e) => {
            if ((e.target as HTMLElement).closest("a")) return;
            if (planet.classList.contains("focused")) return;

            planets.forEach((p) => p.classList.remove("focused", "dimmed"));
            planet.classList.add("focused");
            planets.forEach((p) => {
                if (p !== planet) p.classList.add("dimmed");
            });

            // Ensure centered planet is lowered slightly for visual balance
            planet.scrollIntoView({
                behavior: "smooth",
                inline: "center",
                block: "center",
            });
            backBtn?.classList.remove("hidden");
        });
    });

    backBtn?.addEventListener("click", () => {
        planets.forEach((p) => p.classList.remove("focused", "dimmed"));
        backBtn.classList.add("hidden");
    });
</script>

<style>
    :root {
        --space-bg: #020205;
        --accent-glow: rgba(100, 200, 255, 0.4);
    }

    .universe-container {
        position: relative;
        width: 100vw;
        height: 100vh;
        background-color: var(--space-bg);
        overflow: hidden;
        font-family: "Outfit", sans-serif;
        color: #fff;
    }

    /* BACK LINK - Repositioned away from edge */
    .back-link {
        position: fixed;
        top: 35px;
        left: 35px;
        z-index: 300;
        display: flex;
        align-items: center;
        gap: 10px;
        text-decoration: none;
        color: rgba(255, 255, 255, 0.7);
        font-weight: 500;
        font-size: 1rem;
        padding: 10px 22px;
        border-radius: 40px;
        background: rgba(255, 255, 255, 0.06);
        border: 1px solid rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(25px);
        transition: all 0.4s ease;
    }
    .back-link:hover {
        color: #fff;
        background: rgba(255, 255, 255, 0.15);
        transform: translateX(5px);
        border-color: rgba(255, 255, 255, 0.4);
    }

    #galaxy-wrapper {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
        pointer-events: none;
    }
    #galaxy-canvas {
        width: 100%;
        height: 100%;
    }

    .galaxy-glow-center {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 70vw;
        height: 35vh;
        transform: translate(-50%, -50%) rotate(0.4rad);
        background: radial-gradient(
            ellipse,
            rgba(120, 180, 255, 0.2) 0%,
            rgba(220, 120, 255, 0.1) 40%,
            transparent 80%
        );
        pointer-events: none;
        filter: blur(100px);
        opacity: 0.8;
    }

    /* SEARCH UI - Clean Spacing */
    .search-container {
        position: fixed;
        top: 35px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 250;
        width: 90%;
        max-width: 500px;
        transition: all 0.6s cubic-bezier(0.19, 1, 0.22, 1);
    }
    .search-container.hidden {
        opacity: 0;
        transform: translate(-50%, -60px);
        pointer-events: none;
    }

    .search-box {
        background: rgba(10, 10, 25, 0.6);
        backdrop-filter: blur(35px);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 18px;
        padding: 14px;
        box-shadow: 0 40px 80px rgba(0, 0, 0, 0.8);
    }

    #course-search {
        width: 100%;
        background: transparent;
        border: none;
        border-bottom: 2px solid rgba(255, 255, 255, 0.1);
        color: #fff;
        font-size: 1rem;
        padding: 10px;
        margin-bottom: 8px;
        outline: none;
    }

    .tag-filters {
        display: flex;
        gap: 6px;
        flex-wrap: wrap;
    }
    .tag-btn {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #bbb;
        padding: 4px 12px;
        border-radius: 10px;
        cursor: pointer;
        font-size: 0.75rem;
        transition: all 0.3s;
    }
    .tag-btn:hover,
    .tag-btn.active {
        background: #fff;
        color: #000;
        font-weight: bold;
        border-color: #fff;
    }

    /* PLANETARY SYSTEM - Padding-Top to avoid search bar occlusion */
    .solar-system {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 10;
        overflow-x: auto;
        overflow-y: hidden;
        display: none;
        transition: opacity 1s;
        scroll-behavior: smooth;
    }
    .solar-system.active {
        display: block;
        opacity: 1;
    }

    .planets-wrapper {
        display: flex;
        align-items: center;
        height: 100%;
        padding: 12vh 40vw 0 40vw;
        width: max-content; /* 12vh cushion for search bar */
    }

    .planet-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 500px;
        margin-right: 400px;
        cursor: pointer;
        transition:
            transform 1s cubic-bezier(0.19, 1, 0.22, 1),
            opacity 0.6s;
        opacity: 0;
    }
    .planet-container.visible {
        opacity: 1;
    }
    .planet-container.focused {
        transform: scale(1.3) translateY(30px);
        z-index: 150;
    }
    .planet-container.dimmed {
        opacity: 0.08;
        filter: blur(12px) grayscale(1);
        pointer-events: none;
    }

    /* PLANET VISUALS - ROTATION AXIS & BOUNDING BOX FIX */
    .planet-visual {
        position: relative;
        width: var(--planet-size);
        height: var(--planet-size);
        margin-bottom: 60px;
        transform-style: preserve-3d;
    }
    .planet-glow {
        position: absolute;
        top: -30%;
        left: -30%;
        width: 160%;
        height: 160%;
        background: radial-gradient(
            circle,
            var(--planet-color) 0%,
            transparent 70%
        );
        opacity: 0.4;
        filter: blur(30px);
        pointer-events: none;
    }

    .planet-body {
        width: 100%;
        height: 100%;
        position: relative;
        transform-style: preserve-3d;
        /* Tilt so spinning axis is perpendicular to rotateX(75deg) rings */
        transform: rotateX(15deg) rotateY(15deg);
    }

    .planet-surface {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        background: var(--planet-color);
        position: relative;
        overflow: hidden; /* Clicks boundary box artifacts */
        box-shadow:
            inset -45px -45px 90px rgba(0, 0, 0, 0.95),
            inset 25px 25px 60px rgba(255, 255, 255, 0.45);

        /* NOISE FIXED: Border radius 50% on pseudo-element + overflow hidden above */
        &::after {
            content: "";
            position: absolute;
            top: -10%;
            left: -10%;
            width: 120%;
            height: 120%;
            background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='5' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
            opacity: 0.18;
            mix-blend-mode: overlay;
            border-radius: 50%;
        }
    }

    /* SURFACE ANIMATIONS - Spinning across the tilted equator */
    .planet-surface.striped {
        background: repeating-linear-gradient(
            90deg,
            var(--planet-color),
            var(--planet-color) 35px,
            var(--secondary-color) 35px,
            var(--secondary-color) 65px
        );
        background-size: 200% 100%;
        animation: surfaceSpin var(--orbit-speed) linear infinite;
    }
    .planet-surface.gaseous {
        background: linear-gradient(
            90deg,
            var(--planet-color),
            var(--secondary-color),
            var(--planet-color)
        );
        background-size: 200% 100%;
        animation: surfaceSpin 15s linear infinite;
    }
    .planet-surface.cratered {
        background:
            radial-gradient(
                circle at 30% 30%,
                var(--secondary-color) 12%,
                transparent 22%
            ),
            radial-gradient(
                circle at 70% 50%,
                var(--secondary-color) 18%,
                transparent 28%
            ),
            var(--planet-color);
        background-size: 200% 100%;
        animation: surfaceSpin 30s linear infinite;
    }

    /* Scrolling X instead of Y to align with ring plane tilt */
    @keyframes surfaceSpin {
        0% {
            background-position: 0% 0%;
        }
        100% {
            background-position: -200% 0%;
        }
    }

    .planet-shadow {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(
            circle at 10% 15%,
            transparent 15%,
            rgba(0, 0, 0, 0.95) 100%
        );
        border-radius: 50%;
        pointer-events: none;
    }

    /* RINGS */
    .planet-rings {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 230%;
        height: 230%;
        transform: translate(-50%, -50%) rotateX(75deg);
        pointer-events: none;
        transform-style: preserve-3d;
    }
    .ring-inner,
    .ring-outer,
    .ring-detail {
        position: absolute;
        top: 50%;
        left: 50%;
        border-radius: 50%;
        transform: translate(-50%, -50%);
        border-style: solid;
    }
    .ring-inner {
        width: 100%;
        height: 100%;
        border-width: 25px;
        border-color: var(--ring-color);
        opacity: 0.55;
    }
    .ring-outer {
        width: 145%;
        height: 145%;
        border-width: 18px;
        border-color: var(--ring-color);
        opacity: 0.25;
    }
    .ring-detail {
        width: 122%;
        height: 122%;
        border-width: 48px;
        border-color: transparent;
        background: repeating-conic-gradient(
            from 0deg,
            transparent 0,
            transparent 0.5deg,
            rgba(255, 255, 255, 0.1) 0.5deg,
            rgba(255, 255, 255, 0.1) 1deg
        );
        -webkit-mask-image: radial-gradient(
            circle,
            transparent 40%,
            #000 41%,
            #000 55%,
            transparent 56%
        );
    }

