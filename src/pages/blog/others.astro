        color: var(--planet-color);
        text-decoration: none;
        border-radius: 14px;
        font-weight: 800;
        font-size: 1rem;
        letter-spacing: 3px;
        transition: all 0.4s;
    }
    .visit-btn:hover {
        background: var(--planet-color);
        color: #000;
        box-shadow: 0 0 50px var(--planet-color);
    }

