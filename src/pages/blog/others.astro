        background: rgba(255, 255, 255, 0.06);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #aaa;
        padding: 3px 10px;
        border-radius: 10px;
        cursor: pointer;
        font-size: 0.7rem;
        transition: 0.3s;
    }
    .tag-btn:hover,
    .tag-btn.active {
        background: #fff;
        color: #000;
    }

    /* ORBIT SYSTEM */
    .solar-system {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0;
        height: 0;
        z-index: 100;
        display: none;
        transform-style: preserve-3d;
    }
    .solar-system.active {
        display: block;
    }

    .planet-container {
        position: absolute;
        top: 0;
        left: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 400px;
        transform-origin: center center;
        cursor: pointer;
        transform-style: preserve-3d;
        will-change: transform, opacity;
        margin-left: -200px;
        margin-top: -200px;
    }

    /* VISUAL PERSISTENCE */
    .planet-visual {
        position: relative;
        width: var(--planet-size);
        height: var(--planet-size);
