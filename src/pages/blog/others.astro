        font-size: 0.95rem;
        padding: 8px 16px;
        border-radius: 20px;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }
    .back-link:hover {
        color: #fff;
        background: rgba(255, 255, 255, 0.15);
        transform: translateX(-5px) scale(1.05);
        border-color: rgba(255, 255, 255, 0.3);
    }

    #galaxy-wrapper {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
        pointer-events: none;
    }
    #galaxy-canvas {
        width: 100%;
        height: 100%;
    }

    .galaxy-glow-center {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 60vw;
        height: 30vh;
        transform: translate(-50%, -50%) rotate(0.3rad);
        background: radial-gradient(
            ellipse,
            rgba(100, 150, 255, 0.25) 0%,
            rgba(200, 100, 255, 0.15) 30%,
            transparent 70%
        );
        pointer-events: none;
        filter: blur(60px);
        opacity: 0.8;
    }

    /* SEARCH UI */
    .search-container {
        position: fixed;
        top: 90px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 110;
        width: 90%;
        max-width: 600px;
        transition: all 0.5s ease;
    }
    .search-container.hidden {
        opacity: 0;
        transform: translate(-50%, -40px);
        pointer-events: none;
    }

    .search-box {
        background: rgba(10, 10, 20, 0.4);
        backdrop-filter: blur(30px);
        border: 1px solid rgba(255, 255, 255, 0.12);
        border-radius: 24px;
        padding: 18px;
        box-shadow:
            0 20px 40px rgba(0, 0, 0, 0.6),
            0 0 20px rgba(100, 200, 255, 0.1);
    }

    #course-search {
        width: 100%;
        background: transparent;
        border: none;
        border-bottom: 2px solid rgba(255, 255, 255, 0.1);
        color: #fff;
        font-size: 1.1rem;
        padding: 12px;
        margin-bottom: 12px;
        outline: none;
        transition: border-color 0.3s;
    }
    #course-search:focus {
        border-color: #fff;
    }

    .tag-filters {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
    }
    .tag-btn {
        background: rgba(255, 255, 255, 0.06);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #ccc;
        padding: 6px 18px;
        border-radius: 18px;
        cursor: pointer;
        font-size: 0.85rem;
        transition: all 0.3s;
    }
    .tag-btn:hover,
    .tag-btn.active {
        background: #fff;
        color: #000;
        font-weight: bold;
    }

    /* PLANETARY SYSTEM */
    .solar-system {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 10;
        overflow-x: auto;
        overflow-y: hidden;
        display: none;
        transition: opacity 1s;
        scroll-behavior: smooth;
    }
    .solar-system.active {
        display: block;
        opacity: 1;
    }

    .planets-wrapper {
        display: flex;
        align-items: center;
        height: 100%;
        padding: 0 35vw;
        width: max-content;
    }

    .planet-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 500px;
        margin-right: 300px;
        cursor: pointer;
        transition:
            transform 0.8s cubic-bezier(0.34, 1.56, 0.64, 1),
            opacity 0.6s,
            filter 0.6s;
        opacity: 0;
    }
    .planet-container.visible {
        opacity: 1;
    }
    .planet-container.focused {
        transform: scale(1.4) translateY(-20px);
        z-index: 150;
    }
    .planet-container.dimmed {
        opacity: 0.15;
        filter: blur(8px) grayscale(0.8);
        pointer-events: none;
    }

    /* ROUGH TEXTURES & GLOW (Phase 6) */
    .planet-visual {
        position: relative;
        width: var(--planet-size);
        height: var(--planet-size);
        margin-bottom: 60px;
        transform-style: preserve-3d;
    }
    .planet-glow {
        position: absolute;
        top: -30%;
        left: -30%;
        width: 160%;
        height: 160%;
        background: radial-gradient(
            circle,
            var(--planet-color) 0%,
            transparent 70%
        );
        opacity: 0.5;
        filter: blur(20px);
        pointer-events: none;
    }

    .planet-body {
        width: 100%;
        height: 100%;
        position: relative;
        transform-style: preserve-3d;
        transform: rotateX(20deg) rotateZ(10deg);
    }

    .planet-surface {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        background: var(--planet-color);
        overflow: hidden;
        box-shadow:
            inset -40px -40px 80px rgba(0, 0, 0, 0.9),
            inset 20px 20px 50px rgba(255, 255, 255, 0.4),
            0 0 50px var(--planet-color);
        /* Adding Rough Texture Overlay */
        &::after {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
            opacity: 0.15;
            mix-blend-mode: overlay;
            pointer-events: none;
        }
    }

    .planet-surface.striped {
        background: repeating-linear-gradient(
            0deg,
            var(--planet-color),
            var(--planet-color) 25px,
            var(--secondary-color) 25px,
            var(--secondary-color) 45px
        );
        background-size: 100% 200%;
        animation: surfaceSpin var(--orbit-speed) linear infinite;
    }
    .planet-surface.gaseous {
        background: linear-gradient(
            135deg,
            var(--planet-color) 20%,
            var(--secondary-color) 40%,
            var(--planet-color) 60%,
            var(--secondary-color) 80%
        );
        background-size: 400% 400%;
        animation: gasFlow 10s ease infinite;
    }
    .planet-surface.cratered {
        background:
            radial-gradient(
                circle at 30% 30%,
                var(--secondary-color) 10%,
                transparent 20%
            ),
            radial-gradient(
                circle at 70% 60%,
                var(--secondary-color) 15%,
                transparent 25%
            ),
            radial-gradient(
                circle at 10% 80%,
                var(--secondary-color) 8%,
                transparent 15%
            ),
            var(--planet-color);
        background-size: 200% 100%;
        animation: surfaceSpin 30s linear infinite reverse;
    }

    @keyframes surfaceSpin {
        0% {
            background-position: 0% 0%;
        }
        100% {
            background-position: 0% 200%;
        }
    }
    @keyframes gasFlow {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }

    .planet-shadow {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(
            circle at 80% 20%,
            transparent 20%,
            rgba(0, 0, 0, 0.85) 90%
        );
        border-radius: 50%;
        pointer-events: none;
    }

    /* DETAILED SATURN RINGS */
    .planet-rings {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 220%;
        height: 220%;
        transform: translate(-50%, -50%) rotateX(75deg) rotateY(5deg);
        pointer-events: none;
        transform-style: preserve-3d;
    }
    .ring-inner,
    .ring-outer,
    .ring-detail {
        position: absolute;
        top: 50%;
        left: 50%;
        border-radius: 50%;
        transform: translate(-50%, -50%);
        border-style: solid;
    }
    .ring-inner {
        width: 100%;
        height: 100%;
        border-width: 20px;
        border-color: var(--ring-color);
        opacity: 0.6;
    }
    .ring-outer {
        width: 130%;
        height: 130%;
        border-width: 12px;
        border-color: var(--ring-color);
        opacity: 0.3;
    }
    /* "Grooved" Detail with record-like texture */
    .ring-detail {
        width: 115%;
        height: 115%;
        border-width: 40px;
        border-color: transparent;
        background: repeating-conic-gradient(
            from 0deg,
            transparent 0,
            transparent 1deg,
            rgba(255, 255, 255, 0.1) 1deg,
            rgba(255, 255, 255, 0.1) 2deg
        );
        -webkit-mask-image: radial-gradient(
            circle,
            transparent 40%,
            #000 41%,
            #000 55%,
            transparent 56%
        );
    }

    /* INFO CARD */
    .planet-info {
        background: rgba(15, 15, 25, 0.4);
        backdrop-filter: blur(25px);
        border-radius: 20px;
        padding: 28px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        text-align: center;
        width: 100%;
        max-width: 380px;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.5);
        transform: translateY(30px);
        opacity: 0;
        transition: all 0.5s ease;
