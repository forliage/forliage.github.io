---

<Layout title="Other Lecture Notes - Liuye Zhao">
    <Header />

    <main class="universe-container">
        <!-- SVG Filter Definitions for Realistic Noise Nebulas -->
        <svg style="display: none;">
            <filter id="nebula-noise">
                <feTurbulence
                    type="fractalNoise"
                    baseFrequency="0.012"
                    numOctaves="4"
                    seed="5"></feTurbulence>
                <feDisplacementMap in="SourceGraphic" scale="150"
                ></feDisplacementMap>
            </filter>
        </svg>

        <!-- Galaxy Background (Absolute, behind scroll) -->
        <div id="galaxy-wrapper">
            <canvas id="galaxy-canvas"></canvas>
        </div>

        <!-- Realistic Nebulas (Fixed Background Layer) -->
        <div id="floating-nebulas" class="floating-nebulas">
            <div class="nebula-cloud cloud-1"></div>
            <div class="nebula-cloud cloud-2"></div>
            <div class="nebula-cloud cloud-3"></div>
        </div>

        <!-- Horizontal Scroll Container -->
        <div id="solar-system" class="solar-system">
            <!-- Back Button -->
            <a href="/blog" class="back-button">
                <svg
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                >
                    <line x1="19" y1="12" x2="5" y2="12"></line>
                    <polyline points="12 19 5 12 12 5"></polyline>
                </svg>
                Back to Universe
            </a>

            <!-- Focus Reset Overlay -->
            <div id="focus-overlay" class="focus-overlay"></div>

            <div class="planets-wrapper" id="planets-wrapper">
                <!-- Spacer for Title -->
                <div class="title-spacer"></div>

                {
                    courses.map((course, index) => {
                        return (
                            <div
                                class="planet-container"
                                id={`planet-${course.id}`}
                                style={`
                                --planet-size: ${course.size}px;
                                --planet-color: ${course.color};
                                --secondary-color: ${course.secondaryColor};
                                --ring-color: ${course.ringColor};
                                --orbit-speed: ${course.orbitSpeed}s;
                            `}
                            >
                                <div class="planet-visual">
                                    <div class="planet-body">
                                        <div
                                            class={`planet-surface ${course.textureType}`}
                                        />
                                        <div class="planet-shadow" />
                                        <div class="planet-ring" />
                                    </div>
                                </div>

                                <div class="planet-info">
                                    <h2 class="planet-title">{course.title}</h2>
                                    <p class="planet-intro">{course.intro}</p>
                                    <a
                                        href={`/blog/others/${course.id}`}
                                        class="visit-btn"
                                    >
                                        LAND ON PLANET
                                    </a>
                                </div>
                            </div>
                        );
                    })
                }

                <!-- Spacer for End -->
                <div class="end-spacer"></div>
            </div>
        </div>

        <!-- Entrance Screen (Overlay) -->
        <div id="entrance-screen" class="entrance-screen">
            <h1 class="galaxy-title">Explore the Cosmos</h1>
            <p class="galaxy-subtitle">
                Scroll horizontally to navigate the stars
            </p>
            <button id="enter-btn" class="enter-button">START JOURNEY</button>
        </div>
    </main>
</Layout>

<script>
    /* --- Robust Galaxy Engine (Native Scale) --- */
    const canvas = document.getElementById(
        "galaxy-canvas",
    ) as HTMLCanvasElement;
    const ctx = canvas.getContext("2d");
    let width = 0,
        height = 0;
    let particles: any[] = [];
    let animationId: number;

    function resize() {
        if (!canvas) return;
        width = canvas.width = window.innerWidth;
        height = canvas.height = window.innerHeight;
    }

    function initGalaxy(expanseFactor = 1.0) {
        if (!width) return;
        particles = [];

        // Ensure galaxy covers 1.5x screen diagonal to cover corners during rotation
        const maxRadius =
            Math.sqrt(width * width + height * height) * 0.8 * expanseFactor;

        const count = 3000 * expanseFactor; // More stars if expanding

        for (let i = 0; i < count; i++) {
            const spin = (i / count) * 3 * Math.PI * 2;
            const distance = Math.pow(Math.random(), 1.2) * maxRadius;

            let color = `rgba(255, 255, 255, ${Math.random()})`;
            if (distance > maxRadius * 0.1)
                color = `rgba(200, 220, 255, ${Math.random() * 0.9})`;
            if (distance > maxRadius * 0.4)
                color = `rgba(180, 100, 255, ${Math.random() * 0.7})`;

            particles.push({
                angle: spin,
                radius: distance,
                speed:
                    (0.0001 + Math.random() * 0.0002) / (distance * 0.0005 + 1),
                size: Math.random() * 2.5,
                color: color,
            });
        }
    }

    function animateGalaxy() {
        if (!ctx) return;
        ctx.fillStyle = "#020205";
        ctx.fillRect(0, 0, width, height);

        ctx.save();
        ctx.translate(width / 2, height / 2);
        // Subtle tilt, no CSS scale needed
        ctx.scale(1, 0.8);

        particles.forEach((p) => {
            p.angle += p.speed;
            const x = Math.cos(p.angle) * p.radius;
            const y = Math.sin(p.angle) * p.radius;

            ctx.beginPath();
            ctx.fillStyle = p.color;
            ctx.arc(x, y, p.size, 0, Math.PI * 2);
            ctx.fill();
        });

        ctx.restore();
        animationId = requestAnimationFrame(animateGalaxy);
    }

    if (canvas) {
        window.addEventListener("resize", () => {
            resize();
            initGalaxy();
        });
        resize();
        initGalaxy(); // Start normal sized
        animateGalaxy();
    }

    /* --- Interaction & Event Handling --- */
    const enterBtn = document.getElementById("enter-btn");
    const entranceScreen = document.getElementById("entrance-screen");
    const solarSystem = document.getElementById("solar-system");
    const floatingNebulas = document.getElementById("floating-nebulas");

    function startJourney() {
        if (!entranceScreen || !solarSystem || !floatingNebulas) return;

        // 1. Text fades out
        entranceScreen.style.opacity = "0";

        // 2. Expand Galaxy via Logic (re-init with bigger radius)
        // We do a smooth transition by quickly adding more distant stars?
        // Or actually, let's keep it simple: The canvas is static background, we just reveal the content.
        // Re-init with larger scale to simulate "zoom in" without pixelation
        initGalaxy(2.5);

        // 3. Reveal System
        setTimeout(() => {
            // Remove overlays physically
            entranceScreen.style.display = "none";

            solarSystem.style.opacity = "1";
            solarSystem.style.pointerEvents = "auto";
            floatingNebulas.style.opacity = "1";

            const planets = document.querySelectorAll(".planet-container");
            planets.forEach((p, i) => {
                setTimeout(() => {
                    p.classList.add("visible");
                }, i * 150);
            });
        }, 800);
    }

    if (enterBtn) {
        enterBtn.addEventListener("click", startJourney);
    }

    /* --- Focus Logic (Simplified) --- */
    const planetsWrapper = document.getElementById("planets-wrapper");
    const focusOverlay = document.getElementById("focus-overlay");

    if (planetsWrapper && focusOverlay) {
        planetsWrapper.addEventListener("click", (e) => {
            const target = e.target as HTMLElement;
            if (target.closest("a")) return;

            const planetContainer = target.closest(
                ".planet-container",
            ) as HTMLElement;

            if (planetContainer) {
                // Focus Logic: Just centers it in view and dims others
                // But since it's scrollable, maybe we just use scrollIntoView?
                planetContainer.scrollIntoView({
                    behavior: "smooth",
                    inline: "center",
                    block: "center",
                });

                document.body.classList.add("focus-mode");
                focusOverlay.classList.add("active");

                document
                    .querySelectorAll(".planet-container")
                    .forEach((p) => p.classList.remove("focused"));
                planetContainer.classList.add("focused");
            }
        });

        const resetFocus = () => {
            document.body.classList.remove("focus-mode");
            focusOverlay.classList.remove("active");
            document
                .querySelectorAll(".planet-container")
                .forEach((p) => p.classList.remove("focused"));
        };

        focusOverlay.addEventListener("click", resetFocus);
    }
</script>

<style>
    :root {
        --space-bg: #020205;
    }

    .universe-container {
        position: relative;
        width: 100vw;
        height: 100vh;
        background-color: var(--space-bg);
        overflow: hidden;
        font-family: "Outfit", sans-serif;
    }

    #galaxy-wrapper {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0; /* Base Layer */
        pointer-events: none;
    }
    #galaxy-canvas {
        width: 100%;
        height: 100%;
    }

    /* REALISTIC NEBULAS (Fixed Background) */
    .floating-nebulas {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
        pointer-events: none;
        opacity: 0;
        transition: opacity 2s ease;
    }

    .nebula-cloud {
        position: absolute;
        border-radius: 50%;
        filter: url(#nebula-noise) blur(30px);
        opacity: 0.5;
        animation: breath 20s infinite alternate ease-in-out;
        mix-blend-mode: screen;
    }

    .cloud-1 {
        top: 10%;
        left: 5%;
        width: 800px;
        height: 600px;
        background: radial-gradient(
            circle,
            rgba(50, 200, 255, 0.4),
            transparent 70%
        );
    }
    .cloud-2 {
        bottom: 5%;
        right: 5%;
        width: 900px;
        height: 700px;
        background: radial-gradient(
            circle,
            rgba(255, 50, 150, 0.35),
            transparent 70%
        );
        animation-delay: -5s;
    }
    .cloud-3 {
        top: 30%;
        left: 40%;
        width: 600px;
        height: 600px;
        background: radial-gradient(
            circle,
            rgba(150, 50, 255, 0.3),
            transparent 70%
        );
        animation-delay: -10s;
    }

    @keyframes breath {
        0% {
            transform: scale(1) translate(0, 0);
            opacity: 0.4;
        }
        100% {
            transform: scale(1.1) translate(20px, -10px);
            opacity: 0.7;
        }
    }

    /* Solar System: Horizontal Scroll */
    .solar-system {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 10;
        opacity: 0;
        pointer-events: none; /* Initially none */
        transition: opacity 1s ease;
        overflow-x: auto; /* Horizontal Scroll */
        overflow-y: hidden;
        /* Custom Scrollbar */
        scrollbar-width: thin;
        scrollbar-color: rgba(255, 255, 255, 0.3) transparent;
    }

    .planets-wrapper {
        display: flex; /* Row Layout */
        align-items: center;
        height: 100%;
        width: max-content; /* Grow with content */
        padding: 0 10vw;
    }

    /* Initial Spacer */
    .title-spacer {
        min-width: 50vw;
    }
    .end-spacer {
        min-width: 30vw;
    }

    /* Planet Item */
    .planet-container {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 600px; /* Each planet gets 600px slot */
        height: 100%;
        opacity: 0;
        transition:
            opacity 1s ease,
            filter 0.5s ease;
        pointer-events: auto !important;
        cursor: pointer;
        margin-right: 150px; /* Gap between planets */
    }

    .planet-container.visible {
        opacity: 1;
    }

    /* Visual Wrapper */
    .planet-visual {
        position: relative;
        height: 400px;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        perspective: 1000px;
    }

    /* Focus Mode States */
    body.focus-mode .planet-container:not(.focused) {
        filter: blur(10px) grayscale(0.8);
        opacity: 0.3;
        pointer-events: none !important;
    }

    .focus-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.8);
        z-index: 99;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.5s ease;
        backdrop-filter: blur(5px);
    }
    .focus-overlay.active {
        opacity: 1;
        pointer-events: auto;
    }

    /* Info positioning: Below Planet */
    .planet-info {
        width: 100%;
        max-width: 320px;
        text-align: center;
        padding: 20px;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border-radius: 12px;
        border-top: 2px solid var(--planet-color);
        color: #fff;
        opacity: 0.8;
        transition:
            transform 0.3s ease,
            opacity 0.3s ease;
        transform: translateY(20px);
    }

    .planet-container:hover .planet-info,
    .planet-container.focused .planet-info {
        opacity: 1;
        transform: translateY(0);
        background: rgba(255, 255, 255, 0.1);
    }

    .planet-title {
        font-size: 1.8rem;
        color: var(--planet-color);
        margin: 0 0 0.8rem 0;
        text-shadow: 0 0 15px var(--ring-color);
    }
    .planet-intro {
        font-size: 1rem;
        color: #ccc;
        line-height: 1.5;
        margin-bottom: 1.5rem;
    }

    .visit-btn {
        display: inline-block;
        padding: 12px 30px;
        border: 2px solid var(--planet-color);
        color: var(--planet-color);
        text-decoration: none;
        font-size: 0.9rem;
        letter-spacing: 2px;
        font-weight: 700;
        border-radius: 8px;
        pointer-events: auto;
        transition: all 0.3s;
    }
    .visit-btn:hover {
        background: var(--planet-color);
        color: #000;
        box-shadow: 0 0 30px var(--planet-color);
    }

    /* Planet & Ring */
    .planet-body {
        width: var(--planet-size);
        height: var(--planet-size);
        position: relative;
        transform-style: preserve-3d;
        transform: rotateX(20deg) rotateZ(10deg);
        transition: transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .planet-container:hover .planet-body {
        transform: rotateX(20deg) rotateZ(10deg) scale(1.15);
    }

    .planet-surface {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        background: var(--planet-color);
        overflow: hidden;
        box-shadow:
            inset -30px -30px 80px rgba(0, 0, 0, 0.9),
            inset 15px 15px 50px rgba(255, 255, 255, 0.5),
            0 0 40px var(--planet-color);
    }

    /* Textures */
    .planet-surface.striped {
        background: repeating-linear-gradient(
            0deg,
            var(--planet-color),
            var(--planet-color) 15px,
            var(--secondary-color) 15px,
            var(--secondary-color) 25px
        );
        background-size: 100% 200%;
        animation: spin var(--orbit-speed) linear infinite;
    }
    .planet-surface.gaseous {
        background:
            radial-gradient(
                circle at 30% 30%,
                transparent,
                rgba(255, 255, 255, 0.4)
            ),
            var(--planet-color);
        filter: blur(2px);
        box-shadow: inset 0 0 60px var(--secondary-color);
    }
    .planet-surface.cratered {
        background-image:
            radial-gradient(
                circle at 20% 40%,
                var(--secondary-color) 8%,
                transparent 9%
            ),
            radial-gradient(
                circle at 70% 70%,
                var(--secondary-color) 12%,
                transparent 13%
            );
        background-color: var(--planet-color);
        background-size: 200% 100%;
        animation: spin var(--orbit-speed) linear infinite;
    }

    @keyframes spin {
        0% {
            background-position: 0% 0%;
        }
        100% {
            background-position: 200% 0%;
        }
    }

    .planet-ring {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 170%;
        height: 170%;
        border-radius: 50%;
        border: 30px solid var(--ring-color);
        border-top-color: transparent;
        border-bottom-color: rgba(255, 255, 255, 0.5);
        transform: translate(-50%, -50%) rotateX(75deg) rotateY(10deg);
        box-shadow: 0 0 30px var(--ring-color);
        pointer-events: none;
    }

    /* Entrance UI */
    .entrance-screen {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        z-index: 100;
        transition: opacity 0.8s;
        pointer-events: auto;
    }
    .galaxy-title {
        font-size: 4rem;
        color: #fff;
        text-shadow: 0 0 60px rgba(255, 255, 255, 0.6);
        text-transform: uppercase;
        font-weight: 900;
        letter-spacing: 12px;
        text-align: center;
        margin-bottom: 1rem;
    }
    .galaxy-subtitle {
        color: #aaa;
        font-size: 1.2rem;
        margin-bottom: 3rem;
        letter-spacing: 2px;
        opacity: 0.8;
    }

    .enter-button {
        padding: 20px 60px;
        font-size: 1.2rem;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.4);
        color: #fff;
        border-radius: 60px;
        cursor: pointer;
        text-transform: uppercase;
        letter-spacing: 4px;
        transition: all 0.3s;
        backdrop-filter: blur(10px);
    }
    .enter-button:hover {
        background: #fff;
        color: #000;
        box-shadow: 0 0 40px #fff;
        transform: scale(1.05);
    }

    .back-button {
        position: fixed;
        top: 30px;
        left: 30px;
        z-index: 200;
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 10px 20px;
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 30px;
        color: #fff;
        text-decoration: none;
        backdrop-filter: blur(10px);
    }

    @media (max-width: 768px) {
        .planet-container {
            width: 90vw;
            margin-right: 5vw;
            margin-left: 5vw;
        }
        .title-spacer,
        .end-spacer {
            display: none;
        }
        .galaxy-title {
            font-size: 2.5rem;
            letter-spacing: 5px;
        }
        .planet-info {
            max-width: 90%;
        }
        .solar-system {
            overflow-x: auto;
            scroll-snap-type: x mandatory;
        }
        .planet-container {
            scroll-snap-align: center;
        }
    }
</style>
