        cursor: pointer;
        font-size: 0.75rem;
        transition: all 0.3s;
    }
    .tag-btn:hover,
    .tag-btn.active {
        background: #fff;
        color: #000;
        font-weight: 700;
    }

    /* PLANETARY SYSTEM */
    .solar-system {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 10;
        overflow-x: auto;
        overflow-y: hidden;
        display: none;
        transition: opacity 1s;
        scroll-behavior: smooth;
    }
    .solar-system.active {
        display: block;
        opacity: 1;
    }

    .planets-wrapper {
        display: flex;
        align-items: center;
        height: 100%;
        padding: 80px 35vw 0;
        width: max-content;
    }

    .planet-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 500px;
        margin-right: 380px;
        cursor: pointer;
        transition:
            transform 1s cubic-bezier(0.19, 1, 0.22, 1),
            opacity 0.8s,
            filter 0.8s;
        opacity: 0;
    }
    .planet-container.visible {
        opacity: 1;
    }
    .planet-container.focused {
        transform: scale(1.3) translateY(0);
        z-index: 180;
    } /* Reduced scale and reset translate */
    .planet-container.dimmed {
        opacity: 0.08;
        filter: blur(12px);
        pointer-events: none;
    }

    /* Planet Visualization */
    .planet-visual {
        position: relative;
        width: var(--planet-size);
        height: var(--planet-size);
        margin-bottom: 60px;
        transform-style: preserve-3d;
    }
    .planet-glow {
        position: absolute;
        top: -30%;
        left: -30%;
        width: 160%;
        height: 160%;
        background: radial-gradient(
            circle,
            var(--planet-color) 0%,
            transparent 70%
        );
        opacity: 0.45;
        filter: blur(25px);
        pointer-events: none;
        border-radius: 50%;
    }

    .planet-body {
        width: 100%;
        height: 100%;
        position: relative;
        transform-style: preserve-3d;
        /* Re-aligned axis to follow the requested yellow line direction */
        transform: rotateY(var(--tilt-y)) rotateZ(var(--tilt-z));
    }

    .planet-surface {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        background: var(--planet-color);
        overflow: hidden;
        position: relative;
        box-shadow:
            inset -45px -45px 90px rgba(0, 0, 0, 0.9),
            inset 25px 25px 60px rgba(255, 255, 255, 0.4),
            0 0 50px var(--planet-color);
        &::after {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border-radius: 50%;
            background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
            opacity: 0.18;
            mix-blend-mode: overlay;
            pointer-events: none;
        }
    }

    .planet-surface.striped {
        background: repeating-linear-gradient(
            0deg,
            var(--planet-color),
            var(--planet-color) 30px,
            var(--secondary-color) 30px,
            var(--secondary-color) 55px
        );
        background-size: 100% 200%;
        animation: surfaceSpin var(--orbit-speed) linear infinite;
    }
    .planet-surface.gaseous {
        background: linear-gradient(
            180deg,
            var(--planet-color) 0%,
            var(--secondary-color) 50%,
            var(--planet-color) 100%
        );
        background-size: 100% 300%;
        animation: surfaceSpin 15s ease infinite alternate;
    }
    .planet-surface.cratered {
        background:
            radial-gradient(
                circle at 30% 30%,
                var(--secondary-color) 12%,
                transparent 25%
            ),
            radial-gradient(
                circle at 65% 75%,
                var(--secondary-color) 18%,
                transparent 30%
            ),
            var(--planet-color);
        background-size: 200% 100%;
        animation: surfaceSpin 40s linear infinite;
    }

    @keyframes surfaceSpin {
        0% {
            background-position: 0% 0%;
        }
        100% {
            background-position: 0% 200%;
        }
    }

    .planet-shadow {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(
            circle at 85% 15%,
            transparent 15%,
            rgba(0, 0, 0, 0.85) 85%
        );
        border-radius: 50%;
        pointer-events: none;
    }

    /* RINGS - TIED TO PLANET AXIS */
    .planet-rings {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 230%;
        height: 230%;
        /* Adjusted positioning to stay synced with planet body center while tilted */
        transform: translate(-50%, -50%) rotateX(var(--ring-tilt)) rotateY(2deg);
        pointer-events: none;
        transform-style: preserve-3d;
    }
    .ring-inner,
    .ring-outer,
    .ring-detail {
        position: absolute;
        top: 50%;
        left: 50%;
        border-radius: 50%;
        transform: translate(-50%, -50%);
        border-style: solid;
    }
