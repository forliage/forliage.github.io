        top: 110px;
        left: 40px;
        z-index: 5000;
        display: flex;
        align-items: center;
        gap: 12px;
        text-decoration: none;
        color: rgba(255, 255, 255, 0.7);
        padding: 8px 18px;
        border-radius: 30px;
        background: rgba(255, 255, 255, 0.06);
        border: 1px solid rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(15px);
        transition: 0.3s;
    }
