<script>
    /* --- Galaxy Logic --- */
    const canvas = document.getElementById(
        "galaxy-canvas",
    ) as HTMLCanvasElement;
    const ctx = canvas.getContext("2d");
    let width = 0,
        height = 0;
    let galaxyParticles: any[] = [];
    let galaxyAnimationId: number;

    function resize() {
        if (!canvas) return;
        width = canvas.width = window.innerWidth;
        height = canvas.height = window.innerHeight;
    }

    function initGalaxy(density = 1.0) {
        if (!width) return;
        galaxyParticles = [];
        const maxRadius = Math.sqrt(width ** 2 + height ** 2) * 1.5;
        const count = 12000 * density;

        for (let i = 0; i < count; i++) {
            const angle = Math.random() * Math.PI * 2;
            const distance = Math.pow(Math.random(), 2.2) * maxRadius;

            let baseColor = "255, 255, 255";
            if (distance > maxRadius * 0.12) {
                const colorPool = [
                    "180, 220, 255",
                    "255, 200, 220",
                    "220, 255, 180",
                    "230, 190, 255",
                    "255, 230, 180",
                ];
                baseColor =
                    colorPool[Math.floor(Math.random() * colorPool.length)];
            }

            const radialO = 1.0 - distance / maxRadius;
            const opacity = (Math.random() * 0.45 + 0.15) * radialO;

            galaxyParticles.push({
                angle: angle,
                radius: distance,
                speed:
                    (0.00006 + Math.random() * 0.0001) /
                    (distance * 0.0002 + 0.1),
                size: (Math.random() * 1.6 + 0.2) * (radialO + 0.5),
                opacity: opacity,
                color: `rgba(${baseColor},`,
            });
        }
    }

    function animateGalaxy() {
        if (!ctx) return;
        ctx.fillStyle = "#010103";
        ctx.fillRect(0, 0, width, height);

        ctx.save();
        ctx.translate(width / 2, height / 2);
        ctx.scale(1.5, 0.5);
        ctx.rotate(0.25);

        galaxyParticles.forEach((p) => {
            p.angle += p.speed;
            const x = Math.cos(p.angle) * p.radius;
            const y = Math.sin(p.angle) * p.radius;
            ctx.beginPath();
            ctx.fillStyle = `${p.color}${p.opacity})`;
            ctx.arc(x, y, p.size, 0, Math.PI * 2);
            ctx.fill();
        });

        ctx.restore();
        galaxyAnimationId = requestAnimationFrame(animateGalaxy);
    }

    if (canvas) {
        window.addEventListener("resize", () => {
            resize();
            initGalaxy();
        });
        resize();
        initGalaxy();
        animateGalaxy();
    }

    /* --- Orbital Physics & Interactivity --- */
    const planets = document.querySelectorAll(".planet-container");
    const backBtn = document.getElementById("back-to-galaxy-btn");
    const enterBtn = document.getElementById("enter-btn");
    const entranceScreen = document.getElementById("entrance-screen");
    const solarSystem = document.getElementById("solar-system");
    const searchContainer = document.getElementById("search-container");

    interface PlanetState {
        el: HTMLElement;
        a: number;
        b: number;
        c: number; // Focus distance
        angle: number;
        baseSpeed: number;
        isFocused: boolean;
        currentX: number;
        currentY: number;
    }

    let planetStates: PlanetState[] = [];

    function initPlanets() {
        const vw = window.innerWidth;
        const vh = window.innerHeight;
        // Base coordinate system is roughly 1920x1080
        const scale = Math.min(vw / 1920, vh / 1080) * 0.9;

        planetStates = Array.from(planets).map((el, i) => {
            const rawA = parseFloat((el as HTMLElement).dataset.a || "500");
            const rawB = parseFloat((el as HTMLElement).dataset.b || "200");
            const a = rawA * scale;
            const b = rawB * scale;
            return {
                el: el as HTMLElement,
                a: a,
                b: b,
                c: Math.sqrt(a * a - b * b),
                angle: (i / planets.length) * Math.PI * 2,
                baseSpeed: parseFloat(
                    (el as HTMLElement).dataset.speed || "0.01",
                ),
                isFocused: false,
                currentX: 0,
                currentY: 0,
            };
        });
    }

    function updatePhysics() {
        const centerX = window.innerWidth / 2;
        const centerY = window.innerHeight / 2;

        planetStates.forEach((state) => {
            if (state.isFocused) {
                state.el.style.left = `50%`;
                state.el.style.top = `50%`;
                state.el.style.transform = `translate(-50%, -50%) scale(1.4)`;
                return;
            }

            // Keplerian Variable Speed: Faster at periapsis
            const x = state.a * Math.cos(state.angle) - state.c;
            const y = state.b * Math.sin(state.angle);

            const r = Math.sqrt(x * x + y * y);
            // v ~ 1/r simplified
            const speedFactor = (state.a * 1.5) / (r + 150);
            state.angle += state.baseSpeed * speedFactor;

            state.currentX = centerX + x;
            state.currentY = centerY + y;

            state.el.style.left = `${state.currentX}px`;
            state.el.style.top = `${state.currentY}px`;
            state.el.style.transform = `translate(-50%, -50%)`;

            // Axis Sync: atan2 to center, +90deg to point pole at focus
            const angleToCenter = Math.atan2(-y, -x) * (180 / Math.PI);
            state.el.style.setProperty(
                "--dynamic-axis-tilt",
                `${angleToCenter + 90}deg`,
            );
        });

        requestAnimationFrame(updatePhysics);
    }

    function startJourney() {
        if (!entranceScreen || !solarSystem || !searchContainer) return;
        entranceScreen.style.opacity = "0";
        initGalaxy(1.8);

        setTimeout(() => {
            entranceScreen.style.display = "none";
            solarSystem.style.display = "block";
            solarSystem.style.opacity = "1";
            searchContainer.classList.remove("hidden");
            initPlanets();
            updatePhysics();

            planets.forEach((p, i) => {
                setTimeout(() => p.classList.add("visible"), i * 150);
            });
        }, 800);
    }

    enterBtn?.addEventListener("click", startJourney);

    /* --- Detailed Interaction --- */
    planets.forEach((p) => {
        p.addEventListener("click", (e) => {
            if ((e.target as HTMLElement).closest("a")) return;
            const id = (p as HTMLElement).dataset.id;
            const state = planetStates.find(
                (s) => (s.el as HTMLElement).dataset.id === id,
            );

            if (state && !state.isFocused) {
                planetStates.forEach((s) => {
                    s.isFocused = false;
                    s.el.classList.remove("focused", "dimmed");
                });

                state.isFocused = true;
                state.el.classList.add("focused");
                planetStates.forEach((s) => {
                    if (s !== state) s.el.classList.add("dimmed");
                });
                backBtn?.classList.remove("hidden");
            }
        });
    });

    backBtn?.addEventListener("click", () => {
        planetStates.forEach((s) => {
            s.isFocused = false;
            s.el.classList.remove("focused", "dimmed");
        });
        backBtn.classList.add("hidden");
    });

    /* --- Search Filter --- */
    const searchInput = document.getElementById(
        "course-search",
    ) as HTMLInputElement;
    const tagBtns = document.querySelectorAll(".tag-btn");

    function filterPlanets() {
        const query = searchInput.value.toLowerCase();
        const activeTag =
            document
                .querySelector(".tag-btn.active")
                ?.getAttribute("data-tag") || "all";

        planetStates.forEach((state) => {
            const p = state.el;
            const title =
                p.querySelector(".planet-title")?.textContent?.toLowerCase() ||
                "";
            const tags = p.dataset.tags?.split(",") || [];
            const matchesQuery = title.includes(query);
            const matchesTag = activeTag === "all" || tags.includes(activeTag);

            if (matchesQuery && matchesTag) {
                p.style.display = "flex";
                setTimeout(() => (p.style.opacity = "1"), 10);
            } else {
                p.style.opacity = "0";
                setTimeout(() => (p.style.display = "none"), 500);
            }
        });
    }

    searchInput?.addEventListener("input", filterPlanets);
    tagBtns.forEach((btn) => {
        btn.addEventListener("click", () => {
            tagBtns.forEach((b) => b.classList.remove("active"));
            btn.classList.add("active");
            filterPlanets();
        });
    });
</script>

<style>
    :root {
        --space-bg: #010103;
        /** Axis Variables **/
        --dynamic-axis-tilt: 0deg;
        --ring-tilt: 75deg;
        --fixed-rotation-x: 15deg;
    }

    .universe-container {
        position: relative;
        width: 100vw;
        height: 100vh;
        background-color: var(--space-bg);
        overflow: hidden;
        font-family: "Outfit", sans-serif;
        color: #fff;
    }

    /* UI ELEMENTS */
    .back-link {
        position: fixed;
        top: 110px;
        left: 40px;
        z-index: 300;
        display: flex;
        align-items: center;
        gap: 12px;
        text-decoration: none;
        color: rgba(255, 255, 255, 0.7);
        padding: 8px 18px;
        border-radius: 30px;
        background: rgba(255, 255, 255, 0.06);
        border: 1px solid rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(15px);
        transition: all 0.4s ease;
    }
    .back-link:hover {
        color: #fff;
        background: rgba(255, 255, 255, 0.15);
        border-color: rgba(255, 255, 255, 0.3);
    }

    .search-container {
        position: fixed;
        top: 110px;
        right: 40px;
        z-index: 300;
        width: auto;
        max-width: 400px;
        transition: all 0.5s ease;
    }
    .search-container.hidden {
        opacity: 0;
        transform: translateY(-30px);
        pointer-events: none;
    }
    .search-box {
        background: rgba(10, 10, 25, 0.5);
        backdrop-filter: blur(40px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        padding: 12px 18px;
    }
    #course-search {
        width: 100%;
        background: transparent;
        border: none;
        border-bottom: 2px solid rgba(255, 255, 255, 0.1);
        color: #fff;
        outline: none;
    }
    .tag-btn {
        background: rgba(255, 255, 255, 0.06);
        border: 1px solid rgba(255, 255, 255, 0.08);
        color: #aaa;
        padding: 3px 12px;
        border-radius: 12px;
        font-size: 0.75rem;
        cursor: pointer;
    }
    .tag-btn.active {
        background: #fff;
        color: #000;
        font-weight: 700;
    }

    /* GALAXY */
    #galaxy-wrapper {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
        pointer-events: none;
    }
    .galaxy-glow-center {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 80vw;
        height: 40vh;
        transform: translate(-50%, -50%) rotate(0.25rad);
        background: radial-gradient(
            ellipse,
            rgba(255, 255, 255, 0.15) 0%,
            rgba(150, 200, 255, 0.1) 40%,
            transparent 75%
        );
        filter: blur(100px);
        opacity: 0.8;
    }

    /* ORBITAL SYSTEM */
    .solar-system {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 10;
        display: none;
        opacity: 0;
        transition: opacity 1s;
    }

    .planet-container {
        position: absolute;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 350px;
        cursor: pointer;
        transition:
            opacity 0.8s,
            filter 0.8s,
            transform 0.8s cubic-bezier(0.19, 1, 0.22, 1);
        opacity: 0;
    }
    .planet-container.visible {
        opacity: 1;
    }
    .planet-container.dimmed {
        opacity: 0.05;
        filter: blur(15px);
        pointer-events: none;
    }
    .planet-container.focused {
        z-index: 200;
        width: 450px;
    }

    /* Planet Visualization Components */
    .planet-visual {
        position: relative;
        width: var(--planet-size);
        height: var(--planet-size);
        margin-bottom: 40px;
        transform-style: preserve-3d;
    }
    .planet-glow {
        position: absolute;
        top: -30%;
        left: -30%;
        width: 160%;
        height: 160%;
        border-radius: 50%;
        background: radial-gradient(
            circle,
            var(--planet-color) 0%,
            transparent 70%
        );
        opacity: 0.45;
        filter: blur(25px);
    }

    .planet-body-wrapper {
        width: 100%;
        height: 100%;
        /* DYNAMIC AXIS ROTATION FROM JS */
        transform: rotateZ(var(--dynamic-axis-tilt))
            rotateX(var(--fixed-rotation-x));
        transform-style: preserve-3d;
    }

    .planet-body {
        width: 100%;
        height: 100%;
        position: relative;
        transform-style: preserve-3d;
    }

    .planet-surface {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        background: var(--planet-color);
        overflow: hidden;
        position: relative;
        box-shadow:
            inset -45px -45px 90px rgba(0, 0, 0, 0.9),
            inset 25px 25px 60px rgba(255, 255, 255, 0.4),
            0 0 50px var(--planet-color);
        &::after {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border-radius: 50%;
            background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
            opacity: 0.18;
            mix-blend-mode: overlay;
            pointer-events: none;
        }
    }

    /* Textures */
    .planet-surface.striped {
        background:
            radial-gradient(
                circle at 50% 50%,
                rgba(255, 255, 255, 0.05) 0%,
                transparent 80%
            ),
            repeating-linear-gradient(
                0.5deg,
                var(--planet-color),
                var(--planet-color) 30px,
                var(--secondary-color) 30px,
                var(--secondary-color) 55px
            );
        background-size: 200% 100%;
        animation: surfaceSpin var(--orbit-speed-val, 10s) linear infinite;
    }
    .planet-surface.gaseous {
        background: linear-gradient(
            175deg,
            var(--planet-color) 0%,
            var(--secondary-color) 25%,
            var(--planet-color) 50%,
            var(--secondary-color) 75%,
            var(--planet-color) 100%
        );
        background-size: 250% 100%;
        animation: surfaceSpin 15s linear infinite;
    }
    .planet-surface.cratered {
        background:
            radial-gradient(
                circle at 30% 30%,
                var(--secondary-color) 12%,
                transparent 25%
            ),
            radial-gradient(
                circle at 65% 75%,
                var(--secondary-color) 18%,
                transparent 30%
            ),
            radial-gradient(
                circle at 10% 50%,
                var(--secondary-color) 10%,
                transparent 20%
            ),
            var(--planet-color);
        background-size: 200% 100%;
        animation: surfaceSpin 40s linear infinite;
    }
    @keyframes surfaceSpin {
        0% {
            background-position: 0% 0%;
        }
        100% {
            background-position: 200% 0%;
        }
    }

    .planet-shadow {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border-radius: 50%;
        background: radial-gradient(
            circle at 85% 15%,
            transparent 15%,
            rgba(0, 0, 0, 0.85) 85%
        );
    }

    /* Rings */
    .planet-rings {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 230%;
        height: 230%;
        transform: translate(-50%, -50%) rotateX(var(--ring-tilt)) rotateY(2deg);
        pointer-events: none;
        transform-style: preserve-3d;
    }
    .ring-inner,
    .ring-outer,
    .ring-detail {
        position: absolute;
        top: 50%;
        left: 50%;
        border-radius: 50%;
        transform: translate(-50%, -50%);
        border-style: solid;
    }
    .ring-inner {
        width: 100%;
        height: 100%;
        border-width: 25px;
        border-color: var(--ring-color);
        opacity: 0.65;
    }
    .ring-outer {
        width: 140%;
        height: 140%;
        border-width: 15px;
        border-color: var(--ring-color);
        opacity: 0.3;
    }
    .ring-detail {
        width: 125%;
        height: 125%;
        border-width: 50px;
        border-color: transparent;
        background: repeating-conic-gradient(
            from 0deg,
            transparent 0,
            transparent 1.5deg,
            rgba(255, 255, 255, 0.12) 1.5deg,
            rgba(255, 255, 255, 0.12) 2.5deg
        );
        -webkit-mask-image: radial-gradient(
            circle,
            transparent 40%,
            #000 41%,
            #000 55%,
            transparent 56%
        );
    }

    /* Info Panel */
    .planet-info {
        background: rgba(8, 8, 20, 0.65);
        backdrop-filter: blur(40px);
        border-radius: 20px;
        padding: 25px;
        border: 1.5px solid rgba(255, 255, 255, 0.1);
        text-align: center;
        width: 100%;
        max-width: 380px;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.7);
