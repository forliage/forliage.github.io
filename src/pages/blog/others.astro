<script>
    /* --- Galaxy Graphics --- */
    const canvas = document.getElementById(
        "galaxy-canvas",
    ) as HTMLCanvasElement;
    const ctx = canvas.getContext("2d");
    let width = 0,
        height = 0;
    let particles: any[] = [];

    function resize() {
        if (!canvas) return;
        width = canvas.width = window.innerWidth;
        height = canvas.height = window.innerHeight;
    }

    function initGalaxy(density = 1.0) {
        if (!width) return;
        particles = [];
        const maxRadius = Math.sqrt(width ** 2 + height ** 2) * 1.5;
        const count = 12000 * density;

        for (let i = 0; i < count; i++) {
            const angle = Math.random() * Math.PI * 2;
            const distance = Math.pow(Math.random(), 2.2) * maxRadius;

            let baseColor = "255, 255, 255";
            if (distance > maxRadius * 0.12) {
                const colorPool = [
                    "180, 220, 255",
                    "255, 200, 220",
                    "220, 255, 180",
                    "230, 190, 255",
                    "255, 230, 180",
                ];
                baseColor =
                    colorPool[Math.floor(Math.random() * colorPool.length)];
            }

            const radialO = 1.0 - distance / maxRadius;
            const opacity = (Math.random() * 0.45 + 0.15) * radialO;

            particles.push({
                angle: angle,
                radius: distance,
                speed:
                    (0.00006 + Math.random() * 0.0001) /
                    (distance * 0.0002 + 0.1),
                size: (Math.random() * 1.6 + 0.2) * (radialO + 0.5),
                opacity: opacity,
                color: `rgba(${baseColor},`,
            });
        }
    }

    function animateGalaxy() {
        if (!ctx) return;
        ctx.fillStyle = "#010103";
        ctx.fillRect(0, 0, width, height);
        ctx.save();
        ctx.translate(width / 2, height / 2);
        ctx.scale(1.5, 0.5);
        ctx.rotate(0.25);
        particles.forEach((p) => {
            p.angle += p.speed;
            const x = Math.cos(p.angle) * p.radius;
            const y = Math.sin(p.angle) * p.radius;
            ctx.beginPath();
            ctx.fillStyle = `${p.color}${p.opacity})`;
            ctx.arc(x, y, p.size, 0, Math.PI * 2);
            ctx.fill();
        });
        ctx.restore();
        requestAnimationFrame(animateGalaxy);
    }

    /* --- Orbital Physics & Interaction --- */
    const planets = Array.from(
        document.querySelectorAll(".planet-container"),
    ) as HTMLElement[];
    const backBtn = document.getElementById("back-to-galaxy-btn");
    const entranceScreen = document.getElementById("entrance-screen");
    const solarSystem = document.getElementById("solar-system");
    const searchContainer = document.getElementById("search-container");
    let focusedPlanet: HTMLElement | null = null;
    let isInitialized = false;

    // Orbit Parameters Initialization
    const orbitData = planets.map((p, i) => {
        const a = window.innerWidth * 0.22 + i * 60; // Semi-major axis
        const b = a * 0.42; // Semi-minor axis (eccentricity)
        const c = Math.sqrt(a * a - b * b); // Focus distance
        return {
            element: p,
            a: a,
            b: b,
            c: c,
            theta: (i * (Math.PI * 2)) / planets.length,
            targetX: 0,
            targetY: 0,
            targetZ: 0,
            currentX: 0,
            currentY: 0,
            currentZ: 0,
        };
    });

    function updateOrbits() {
        if (!isInitialized) return;

        orbitData.forEach((orbit) => {
            const p = orbit.element;
            const isFocused = p === focusedPlanet;

            if (isFocused) {
                // Smooth glide to center
                orbit.targetX = 0;
                orbit.targetY = 0;
                orbit.targetZ = 200; // Small forward push for focus
            } else {
                // Kepler's speed approximation: dTheta = constant / r^2
                const xRaw = orbit.a * Math.cos(orbit.theta) - orbit.c;
                const yRaw = orbit.b * Math.sin(orbit.theta);
                const r = Math.sqrt(xRaw * xRaw + yRaw * yRaw);

                // Speed is faster at periapsis
                const speedMult = 150000 / (r * r + 10000);
                orbit.theta += 0.005 * speedMult;

                orbit.targetX = xRaw;
                orbit.targetY = yRaw;
                orbit.targetZ = -yRaw * 1.8; // Use Y as depth Z logic for 3D look
            }

            // Lerp for smooth transitions
            const lerpSpeed = isFocused ? 0.08 : 0.12;
            orbit.currentX += (orbit.targetX - orbit.currentX) * lerpSpeed;
            orbit.currentY += (orbit.targetY - orbit.currentY) * lerpSpeed;
            orbit.currentZ += (orbit.targetZ - orbit.currentZ) * lerpSpeed;

            // Perspective Logic
            const depthFactor = (orbit.currentY + orbit.b) / (orbit.b * 2); // 0 (far) to 1 (near)
            const perspectiveScale = isFocused ? 1.5 : 0.5 + depthFactor * 0.8;

            p.style.transform = `translate3d(${orbit.currentX}px, ${orbit.currentY}px, ${orbit.currentZ}px) scale(${perspectiveScale})`;
            p.style.zIndex = Math.floor(1000 + orbit.currentY).toString();

            if (focusedPlanet) {
                p.style.opacity = isFocused ? "1" : "0.05";
                p.style.pointerEvents = isFocused ? "auto" : "none";
            } else {
                p.style.opacity = (0.2 + depthFactor * 0.8).toString();
                p.style.pointerEvents = "auto";
            }
        });

        requestAnimationFrame(updateOrbits);
    }

    planets.forEach((p) => {
        p.addEventListener("click", (e) => {
            if ((e.target as HTMLElement).closest("a.visit-btn")) return;
            focusedPlanet = p;
            p.classList.add("focused");
            backBtn?.classList.remove("hidden");
        });
    });

    backBtn?.addEventListener("click", () => {
        focusedPlanet = null;
        planets.forEach((p) => p.classList.remove("focused"));
        backBtn.classList.add("hidden");
    });

    /* --- UI Control --- */
    const enterBtn = document.getElementById("enter-btn");

    if (canvas) {
        window.addEventListener("resize", () => {
            resize();
            initGalaxy();
        });
        resize();
        initGalaxy();
        animateGalaxy();
    }

    enterBtn?.addEventListener("click", () => {
        entranceScreen!.style.opacity = "0";
        setTimeout(() => {
            entranceScreen!.style.display = "none";
            solarSystem!.classList.add("active");
            searchContainer!.classList.remove("hidden");
            isInitialized = true;
            updateOrbits();
        }, 800);
    });

    const searchInput = document.getElementById(
        "course-search",
    ) as HTMLInputElement;
    searchInput?.addEventListener("input", () => {
        const q = searchInput.value.toLowerCase();
        planets.forEach((p) => {
            const title =
                p.querySelector(".planet-title")?.textContent?.toLowerCase() ||
                "";
            p.style.visibility = title.includes(q) ? "visible" : "hidden";
        });
    });
</script>

