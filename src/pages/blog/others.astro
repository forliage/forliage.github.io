<Layout title="Other Lecture Notes - Liuye Zhao">
    <Header />

    <main class="universe-container">
        <!-- Galaxy Background Canvas -->
        <canvas id="galaxy-canvas"></canvas>

        <!-- Nebula Fog Layers (Always visible but subtle) -->
        <div class="nebula-layer layer-1"></div>
        <div class="nebula-layer layer-2"></div>

        <!-- Floating Light Nebulas (Visible after entrance) -->
        <div id="floating-nebulas" class="floating-nebulas">
            <div class="nebula-cloud cloud-1"></div>
            <div class="nebula-cloud cloud-2"></div>
            <div class="nebula-cloud cloud-3"></div>
            <div class="nebula-cloud cloud-4"></div>
        </div>

        <!-- Entrance Screen -->
        <div id="entrance-screen" class="entrance-screen">
            <h1 class="galaxy-title">Explore the Cosmos of Knowledge</h1>
            <button id="enter-btn" class="enter-button">ENTER GALAXY</button>
        </div>

        <!-- Planetary System (Hidden initially) -->
        <div id="solar-system" class="solar-system">
            <!-- Back Button (Consistent with other pages) -->
            <a href="/blog" class="back-button">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                >
                    <line x1="19" y1="12" x2="5" y2="12"></line>
                    <polyline points="12 19 5 12 12 5"></polyline>
                </svg>
                Back to Base
            </a>

            <!-- Focus Reset Overlay -->
            <div id="focus-overlay" class="focus-overlay"></div>

            <div class="planets-wrapper" id="planets-wrapper">
                {
                    courses.map((course, index) => {
                        // Optimized Layout Logic: Spiral / Zig-Zag
                        // Far more spread out to avoid clutter
                        // X spread: -400 to 400
                        // Z spread: -500 per step

                        const side = index % 2 === 0 ? 1 : -1;
                        const xBase = 350; // Base spread from center
                        const xRandom = Math.random() * 100;
                        const xOffset = side * (xBase + xRandom);

                        const zDepth = -index * 600; // Much deeper spacing (was 400)

                        // Y Offset to vary vertical position
                        const yOffset = (Math.random() - 0.5) * 400;

                        return (
                            <div
                                class="planet-container"
                                id={`planet-${course.id}`}
                                data-x={xOffset}
                                data-y={yOffset}
                                data-z={zDepth}
                                style={`
                                --planet-size: ${course.size}px;
                                --planet-color: ${course.color};
                                --secondary-color: ${course.secondaryColor};
                                --ring-color: ${course.ringColor};
                                --orbit-speed: ${course.orbitSpeed}s;
                                transform: translate3d(${xOffset}px, ${yOffset}px, ${zDepth}px);
                                z-index: ${100 - index}; /* Explicit layering, front items higher */
                            `}
                            >
                                <div class="planet-body">
                                    <div
                                        class={`planet-surface ${course.textureType}`}
                                    />
                                    <div class="planet-shadow" />
                                    <div class="planet-ring" />
                                </div>

                                <div class="planet-info">
                                    <h2 class="planet-title">{course.title}</h2>
                                    <p class="planet-intro">{course.intro}</p>
                                    <a
                                        href={`/blog/others/${course.id}`}
                                        class="visit-btn"
                                    >
                                        LAND ON PLANET
                                    </a>
                                </div>
                            </div>
                        );
                    })
                }
            </div>
        </div>
    </main>
</Layout>

<script>
    /* --- Galaxy Particle Engine --- */
    const canvas = document.getElementById(
        "galaxy-canvas",
    ) as HTMLCanvasElement;
    const ctx = canvas.getContext("2d");

    let width = 0;
    let height = 0;
    let particles: Particle[] = [];
    const particleCount = 4000; // Increased count based on feedback

    interface Particle {
        x: number;
        y: number;
        z: number;
        size: number;
        color: string;
        angle: number;
        radius: number;
        speed: number;
    }

    function resize() {
        width = canvas.width = window.innerWidth;
        height = canvas.height = window.innerHeight;
    }

    function initGalaxy() {
        particles = [];
        const maxRadius = Math.max(width, height) * 0.9; // Even larger screen fill

        for (let i = 0; i < particleCount; i++) {
            const armCount = 2;
            const spin =
                (i / particleCount) * armCount * Math.PI * 2 +
                Math.random() * 0.5;
            const randomDist = Math.pow(Math.random(), 1.5);
            const distance = randomDist * maxRadius;
            const armWidth = Math.max(20, distance * 0.3);
            const randomOffset = (Math.random() - 0.5) * armWidth * 2;

            // More vibrant colors
            let color;
            if (distance < maxRadius * 0.15) {
                color = `rgba(255, 250, 240, ${0.9 + Math.random() * 0.1})`;
            } else if (distance < maxRadius * 0.4) {
                color = `rgba(100, 220, 255, ${0.7 + Math.random() * 0.3})`;
            } else {
                color = `rgba(220, 100, 255, ${0.5 + Math.random() * 0.4})`;
            }

            particles.push({
                x: 0,
                y: 0,
                z: 0,
                angle: spin,
                radius: distance + randomOffset,
                speed:
                    (0.0005 + Math.random() * 0.001) / (distance * 0.001 + 1),
                size: Math.random() * 2 + (1 - randomDist) * 2.5,
                color: color,
            });
        }
    }

    function animateGalaxy() {
        if (!ctx) return;

        ctx.fillStyle = "#050510";
        ctx.fillRect(0, 0, width, height);

        ctx.save();
        ctx.translate(width / 2, height / 2);
        ctx.scale(1, 0.55); // Slightly less tilted

        particles.forEach((p) => {
            p.angle += p.speed;
            const x = Math.cos(p.angle) * p.radius;
            const y = Math.sin(p.angle) * p.radius;

            ctx.beginPath();
            ctx.fillStyle = p.color;
            ctx.arc(x, y, p.size, 0, Math.PI * 2);
            ctx.fill();
        });

        ctx.restore();
        requestAnimationFrame(animateGalaxy);
    }

    window.addEventListener("resize", () => {
        resize();
        initGalaxy();
    });

    if (canvas) {
        resize();
        initGalaxy();
        animateGalaxy();
    }

    /* --- Interaction Logic --- */
    const enterBtn = document.getElementById("enter-btn");
    const entranceScreen = document.getElementById("entrance-screen");
    const solarSystem = document.getElementById("solar-system");
    const galaxyCanvas = document.getElementById("galaxy-canvas");
    const floatingNebulas = document.getElementById("floating-nebulas");

    if (
        enterBtn &&
        entranceScreen &&
        solarSystem &&
        galaxyCanvas &&
        floatingNebulas
    ) {
        enterBtn.addEventListener("click", () => {
            entranceScreen.style.opacity = "0";
            entranceScreen.style.pointerEvents = "none";

            galaxyCanvas.style.transition =
                "transform 2.5s ease-in, opacity 2.5s ease";
            galaxyCanvas.style.transform = "scale(6) rotate(120deg)"; // Massive zoom
            galaxyCanvas.style.opacity = "0";

            setTimeout(() => {
                solarSystem.style.opacity = "1";
                // Important: Allow pointer events on container but ensure children catch them
                solarSystem.style.pointerEvents = "auto";
                floatingNebulas.style.opacity = "1";

                const planets = document.querySelectorAll(".planet-container");
                planets.forEach((p, i) => {
                    setTimeout(() => {
                        p.classList.add("visible");
                    }, i * 150);
                });
            }, 800);
        });
    }

    /* --- Focus Logic --- */
    const planetsWrapper = document.getElementById("planets-wrapper");
    const focusOverlay = document.getElementById("focus-overlay");
    const planets = document.querySelectorAll(".planet-container");

    if (planetsWrapper && focusOverlay) {
        planets.forEach((planet) => {
            planet.addEventListener("click", (e) => {
                // Ignore link clicks inside focus mode
                if ((e.target as HTMLElement).closest("a")) return;
                // prevent bubbling if clicking inner elements
                e.stopPropagation();

                const target = e.currentTarget as HTMLElement;
                const x = parseFloat(target.dataset.x || "0");
                const y = parseFloat(target.dataset.y || "0");
                const z = parseFloat(target.dataset.z || "0");

                document.body.classList.add("focus-mode");
                focusOverlay.classList.add("active");

                // Move wrapper to center the target planet
                // Bring it closer (offset z by +500)
                planetsWrapper.style.transform = `
                    translate3d(${-x}px, ${-y}px, ${-z + 500}px) 
                `;

                planets.forEach((p) => p.classList.remove("focused"));
                target.classList.add("focused");
            });
        });

        const resetFocus = () => {
            document.body.classList.remove("focus-mode");
            focusOverlay.classList.remove("active");
            planetsWrapper.style.transform = "none";
            planets.forEach((p) => p.classList.remove("focused"));
        };

        focusOverlay.addEventListener("click", resetFocus);
        // Also allow clicking background wrapper to reset (if not clicking a planet)
        planetsWrapper.addEventListener("click", (e) => {
            if (e.target === planetsWrapper) resetFocus();
        });
    }
</script>

<style>
    :root {
        --space-bg: #050510;
    }

    .universe-container {
        position: relative;
        width: 100vw;
        height: 100vh;
        background-color: var(--space-bg);
        overflow: hidden;
        font-family: "Outfit", sans-serif;
    }

    #galaxy-canvas {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
    }

    /* Nebulas - Enhanced Visibility */
    .floating-nebulas {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 2;
        pointer-events: none;
        opacity: 0;
        transition: opacity 2s ease;
        mix-blend-mode: screen; /* Brighter blending */
    }

    .nebula-cloud {
        position: absolute;
        border-radius: 50%;
        filter: blur(80px);
        opacity: 0.6; /* Increased opacity */
        animation: floatNebula 25s infinite ease-in-out alternate;
    }

    .cloud-1 {
        top: 10%;
        left: 10%;
        width: 500px;
        height: 500px;
        background: radial-gradient(
            circle,
            rgba(100, 200, 255, 0.4),
            transparent 70%
        );
    }
    .cloud-2 {
        bottom: 10%;
        right: 5%;
        width: 600px;
        height: 500px;
        background: radial-gradient(
            circle,
            rgba(255, 100, 200, 0.3),
            transparent 70%
        );
        animation-delay: -5s;
    }
    .cloud-3 {
        top: 40%;
        left: 40%;
        width: 400px;
        height: 400px;
        background: radial-gradient(
            circle,
            rgba(150, 100, 255, 0.35),
            transparent 70%
        );
        animation-delay: -10s;
    }
    .cloud-4 {
        /* New Cloud */
        bottom: 20%;
        left: 20%;
        width: 300px;
        height: 300px;
        background: radial-gradient(
            circle,
            rgba(100, 255, 200, 0.25),
            transparent 70%
        );
        animation-delay: -15s;
    }

    @keyframes floatNebula {
        0% {
            transform: translate(0, 0) scale(1);
        }
        100% {
            transform: translate(50px, -30px) scale(1.1);
        }
    }

    /* Entrance */
    .entrance-screen {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        z-index: 100;
        transition: opacity 1s ease;
    }

    .galaxy-title {
        font-size: 3.5rem;
        color: #fff;
        text-shadow: 0 0 40px rgba(255, 255, 255, 0.8);
        margin-bottom: 3rem;
        letter-spacing: 10px;
        text-transform: uppercase;
        font-weight: 800;
        text-align: center;
    }

    .enter-button {
        padding: 15px 50px;
        font-size: 1.2rem;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: white;
        border-radius: 50px;
        cursor: pointer;
        backdrop-filter: blur(10px);
        transition: all 0.5s ease;
        letter-spacing: 4px;
        text-transform: uppercase;
        font-weight: 600;
        z-index: 101; /* Ensure clickable */
    }

    .enter-button:hover {
        background: rgba(255, 255, 255, 0.3);
        box-shadow: 0 0 30px rgba(255, 255, 255, 0.4);
        transform: scale(1.1);
        letter-spacing: 6px;
    }

    /* Solar System */
    .solar-system {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 10;
        opacity: 0;
        pointer-events: none;
        transition: opacity 2s ease;
        perspective: 1500px; /* Deeper perspective */
        overflow-y: auto;
        overflow-x: hidden;
    }

    .planets-wrapper {
        position: relative;
        min-height: 300vh; /* Very Deep scroll */
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding-top: 20vh;
        transform-style: preserve-3d;
        transition: transform 1.5s cubic-bezier(0.2, 0.8, 0.2, 1);
    }

    /* Planet Container */
    .planet-container {
        position: absolute;
        left: 50%;
        top: 50%;
        display: flex;
        align-items: center;
        gap: 40px;
        opacity: 0;
        cursor: pointer;
        transform-style: preserve-3d;
        transition:
            opacity 1s ease,
            filter 0.5s ease;
        /* Ensure clickability despite 3D depth */
        pointer-events: auto;
    }

    .planet-container.visible {
        opacity: 1;
    }

    /* Focus visual states */
    body.focus-mode .planet-container:not(.focused) {
        filter: blur(8px) grayscale(0.7);
        opacity: 0.2;
        pointer-events: none;
    }

    body.focus-mode .planet-container.focused {
        z-index: 1000 !important; /* Force to front */
    }

    body.focus-mode .planet-container.focused .planet-info {
        opacity: 1;
        pointer-events: auto;
        transform: scale(1.1) translateX(30px);
        background: rgba(0, 0, 0, 0.7);
    }

    .focus-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.7);
        z-index: 9;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.5s ease;
        backdrop-filter: blur(4px);
    }

    .focus-overlay.active {
        opacity: 1;
        pointer-events: auto;
    }

    /* Planet Visuals */
    .planet-body {
        width: var(--planet-size);
        height: var(--planet-size);
        position: relative;
        transform-style: preserve-3d;
        transform: rotateZ(10deg) rotateX(20deg);
        transition: transform 0.5s ease;
    }

    .planet-container:hover .planet-body {
        transform: rotateZ(10deg) rotateX(20deg) scale(1.15);
    }

    .planet-surface {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        background: var(--planet-color);
        position: relative;
        overflow: hidden;
        box-shadow:
            inset -20px -20px 50px rgba(0, 0, 0, 0.8),
            inset 10px 10px 30px rgba(255, 255, 255, 0.6),
            0 0 40px var(--planet-color);
    }

    /* Textures */
    .planet-surface.striped {
        background: repeating-linear-gradient(
            0deg,
            var(--planet-color),
            var(--planet-color) 12px,
            var(--secondary-color) 12px,
            var(--secondary-color) 18px
        );
        background-size: 100% 200%;
        animation: spinTexture var(--orbit-speed) linear infinite;
    }

    .planet-surface.gaseous {
        background:
            radial-gradient(
                circle at 30% 30%,
                transparent 0%,
                rgba(255, 255, 255, 0.3) 100%
            ),
            var(--planet-color);
        box-shadow: inset 0 0 60px var(--secondary-color);
        filter: blur(1px);
    }

    .planet-surface.cratered {
        background-image:
            radial-gradient(
                circle at 20% 40%,
                var(--secondary-color) 6%,
                transparent 7%
            ),
            radial-gradient(
                circle at 60% 70%,
                var(--secondary-color) 10%,
                transparent 11%
            ),
            radial-gradient(
                circle at 80% 20%,
                var(--secondary-color) 18%,
                transparent 19%
            );
        background-color: var(--planet-color);
        background-size: 200% 100%;
        animation: spinTexture var(--orbit-speed) linear infinite;
    }

    @keyframes spinTexture {
        0% {
            background-position: 0% 0%;
        }
        100% {
            background-position: 200% 0%;
        }
    }

    /* Rings */
    .planet-ring {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 170%;
        height: 170%;
        border-radius: 50%;
        border: 25px solid var(--ring-color);
        border-top-color: transparent;
        border-bottom-color: rgba(255, 255, 255, 0.3);
        transform: translate(-50%, -50%) rotateX(75deg) rotateY(10deg);
        box-shadow: 0 0 25px var(--ring-color);
        pointer-events: none;
    }

    /* Info Card */
    .planet-info {
        width: 320px;
        padding: 25px;
        background: rgba(255, 255, 255, 0.08);
        backdrop-filter: blur(12px);
        border-radius: 16px;
        border-left: 4px solid var(--planet-color);
        color: #fff;
        opacity: 0.9;
        transition: all 0.3s ease;
    }

    /* Make info visible but distinct */
    .planet-title {
        font-size: 1.6rem;
        margin: 0 0 0.5rem 0;
        color: var(--planet-color);
        text-shadow: 0 0 15px var(--ring-color);
    }

    .planet-intro {
        font-size: 1rem;
        color: #ddd;
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }

    .visit-btn {
        display: inline-block;
        padding: 12px 24px;
        border: 2px solid var(--planet-color);
        color: var(--planet-color);
        text-decoration: none;
        font-size: 0.9rem;
        letter-spacing: 2px;
        transition: all 0.3s;
        text-transform: uppercase;
        font-weight: 800;
        border-radius: 6px;
        z-index: 200;
        cursor: pointer;
    }

    .visit-btn:hover {
        background: var(--planet-color);
        color: #000;
        box-shadow: 0 0 25px var(--planet-color);
    }

    /* Back Button */
    .back-button {
        position: fixed;
        top: 100px;
        left: 2rem;
        z-index: 200;
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 10px 20px;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
        border-radius: 50px;
        text-decoration: none;
        transition: 0.3s;
    }
    .back-button:hover {
        background: rgba(255, 255, 255, 0.2);
    }

    @media (max-width: 768px) {
        .planets-wrapper {
            height: auto;
            min-height: 100vh;
            padding-top: 150px;
        }
        .planet-container {
            position: relative;
            left: auto;
            top: auto;
            transform: none !important;
            margin-bottom: 100px;
            flex-direction: column;
            text-align: center;
        }
        .planet-info {
            width: 90%;
            border-left: none;
            border-bottom: 4px solid var(--planet-color);
        }
        .galaxy-title {
            font-size: 2rem;
            letter-spacing: 2px;
            padding: 0 20px;
        }
    }
</style>
