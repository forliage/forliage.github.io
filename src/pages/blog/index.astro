---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
---

<Layout title="Blog - Liuye Zhao">
    <Header />
    <main class="blog-hub">
        <div class="center-content">
            <!-- Container for the typing effect -->
            <h1 class="welcome-text">
                <span id="typewriter"></span><span class="cursor">|</span>
            </h1>
        </div>

        <aside class="sidebar-nav">
            <nav>
                <ul>
                    <li><a href="/blog/tech">Technical Articles</a></li>
                    <li><a href="/blog/zju">ZJU Lecture Notes</a></li>
                    <li><a href="/blog/others">Other Lecture Notes</a></li>
                    <li><a href="/blog/life">Reflections and Life</a></li>
                </ul>
            </nav>
        </aside>
    </main>
</Layout>

<script>
    const textToType = "Welcome to forliage's life";
    const typeSpeed = 100; // ms per char
    const deleteSpeed = 50; // ms per char
    const pauseBeforeDelete = 2000; // ms
    const pauseBeforeRestart = 500; // ms

    const typewriterElement = document.getElementById("typewriter");

    // Make sure element exists
    if (typewriterElement) {
        let charIndex = 0;
        let isDeleting = false;

        function type() {
            const currentString = textToType;

            if (isDeleting) {
                // Deleting
                typewriterElement.textContent = currentString.substring(
                    0,
                    charIndex - 1,
                );
                charIndex--;
            } else {
                // Typing
                typewriterElement.textContent = currentString.substring(
                    0,
                    charIndex + 1,
                );
                charIndex++;
            }

            let delta = isDeleting ? deleteSpeed : typeSpeed;

            if (!isDeleting && charIndex === currentString.length) {
                // Finished typing, pause before delete
                delta = pauseBeforeDelete;
                isDeleting = true;
            } else if (isDeleting && charIndex === 0) {
                // Finished deleting, pause before restart
                delta = pauseBeforeRestart;
                isDeleting = false;
            }

            setTimeout(type, delta);
        }

        // Start the typing loop
        setTimeout(type, 500);
    }
</script>

<style>
    /* Use global variables for colors if available, or define locally for glass effect */
    :root {
        --text-color: #333;
        --highlight-color: #f075ae; /* Pink from header */
        /* Apple system font stack */
        --apple-font:
            -apple-system, BlinkMacSystemFont, "SF Pro Text", "Segoe UI",
            Roboto, Helvetica, Arial, sans-serif;
    }

    .blog-hub {
        display: flex;
        min-height: 80vh;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
        padding: 2rem;
        font-family: var(--apple-font);
    }

    .center-content {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 10;
        min-height: 100px; /* Ensure space for text */
    }

    .welcome-text {
        font-size: 3.5rem;
        font-weight: 300;
        color: var(--highlight-color); /* Pink color */
        letter-spacing: 1px;
        text-shadow: 0 4px 10px rgba(240, 117, 174, 0.2);
        display: flex;
        align-items: center;
        margin: 0;
    }

    .cursor {
        display: inline-block;
        color: var(--highlight-color);
        font-weight: 100;
        animation: blink 1s step-end infinite;
        margin-left: 5px;
    }

    @keyframes blink {
        0%,
        100% {
            opacity: 1;
        }
        50% {
            opacity: 0;
        }
    }

    .sidebar-nav {
        position: absolute;
        right: 0;
        top: 0;
        bottom: 0;
        width: 300px;
        display: flex;
        align-items: center;
        padding-left: 40px;
        background: linear-gradient(
            to left,
            rgba(255, 255, 255, 0.8),
            rgba(255, 255, 255, 0)
        );
        mask-image: linear-gradient(to right, transparent, black 40%);
        -webkit-mask-image: linear-gradient(to right, transparent, black 40%);
        font-family: var(--apple-font);
    }

    .sidebar-nav nav ul {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .sidebar-nav nav li {
        transform: translateX(50px);
        opacity: 0;
        animation: slideIn 0.5s ease-out forwards;
    }

    .sidebar-nav nav li:nth-child(1) {
        animation-delay: 0.2s;
    }
    .sidebar-nav nav li:nth-child(2) {
        animation-delay: 0.3s;
    }
    .sidebar-nav nav li:nth-child(3) {
        animation-delay: 0.4s;
    }
    .sidebar-nav nav li:nth-child(4) {
        animation-delay: 0.5s;
    }

    .sidebar-nav nav a {
        font-size: 1.25rem;
        color: #555;
        text-decoration: none;
        padding: 0.5rem 1rem;
        transition: all 0.3s ease;
        display: inline-block;
        position: relative;
        font-weight: 400; /* Regular weight for Apple font looks elegant */
    }

    .sidebar-nav nav a:hover {
        color: var(--highlight-color);
        transform: translateX(-10px);
        text-shadow: 0 0 8px rgba(240, 117, 174, 0.4);
    }

    @keyframes slideIn {
        from {
            opacity: 0;
            transform: translateX(50px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .blog-hub {
            flex-direction: column;
            padding-top: 4rem;
        }

        .welcome-text {
            font-size: 2rem;
            text-align: center;
            margin-bottom: 3rem;
            flex-wrap: wrap;
            justify-content: center;
        }

        .sidebar-nav {
            position: relative;
            width: 100%;
            padding: 0;
            background: none;
            mask-image: none;
            -webkit-mask-image: none;
            justify-content: center;
        }

        .sidebar-nav nav ul {
            align-items: center;
        }

        .sidebar-nav nav li {
            transform: translateY(20px);
            animation-name: fadeInUp;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    }
</style>
